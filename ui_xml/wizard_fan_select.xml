<component>
  <!-- First-Run Wizard: Fan Select Screen -->
  <!-- User selects hotend cooling fan and part cooling fan -->
  <consts>
    <!-- Step metadata (read by wizard orchestrator) -->
    <str name="step_title" value="Printer Setup: Fans"/>
    <str name="step_subtitle" value="Select your part cooling fan and hotend cooling fan from Klipper"/>
    <int name="step_order" value="5"/>
  </consts>
  <view name="wizard_fan_select_root"
        extends="lv_obj" width="100%" height="100%" style_bg_opa="0" style_border_width="0" style_pad_all="0"
        flex_flow="column" style_flex_main_place="start" style_flex_cross_place="center">
    <!-- Selection container -->
    <ui_card width="100%"
             flex_grow="1" style_radius="#border_radius_large" style_pad_all="#space_lg" style_pad_gap="#space_md"
             flex_flow="column" style_flex_main_place="start" style_flex_cross_place="start">
      <!-- Hotend fan selection -->
      <text_body text="Hotend Cooling Fan" style_pad_bottom="#space_sm"/>
      <lv_dropdown name="hotend_fan_dropdown"
                   width="100%" height="#header_height" options="heater_fan hotend_fan"
                   style_border_width="#input_border_width" style_border_opa="100%" style_radius="#border_radius"
                   style_pad_all="#space_lg"/>
      <!-- Part cooling fan selection -->
      <text_body text="Part Cooling Fan" style_pad_top="#space_md" style_pad_bottom="#space_sm"/>
      <lv_dropdown name="part_cooling_fan_dropdown"
                   width="100%" height="#header_height" options="fan" style_border_width="#input_border_width"
                   style_border_opa="100%" style_radius="#border_radius" style_pad_all="#space_lg"/>
    </ui_card>
  </view>
</component>

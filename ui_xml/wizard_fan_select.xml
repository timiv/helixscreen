<component>
  <!-- First-Run Wizard: Fan Select Screen -->
  <!-- User selects hotend, part cooling, chamber, and exhaust fans -->
  <consts>
    <!-- Step metadata (read by wizard orchestrator) -->
    <str name="step_title" value="Printer Setup: Fans"/>
    <str name="step_subtitle" value="Configure your printer's cooling fans"/>
    <int name="step_order" value="5"/>
  </consts>
  <view name="wizard_fan_select_root"
        extends="lv_obj" width="100%" height="100%" style_bg_opa="0" style_border_width="0" style_pad_all="0"
        flex_flow="column" style_flex_main_place="start" style_flex_cross_place="center">
    <!-- Selection container -->
    <ui_card width="100%"
             flex_grow="1" style_radius="#border_radius" style_pad_all="#space_lg" style_pad_gap="#space_md"
             flex_flow="column" style_flex_main_place="start" style_flex_cross_place="start">
      <!-- Row 1: Required fans (Hotend + Part Cooling) -->
      <lv_obj width="100%"
              height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="row"
              style_flex_main_place="space_between" style_flex_cross_place="start" style_pad_gap="#space_md">
        <!-- Hotend Fan (left) -->
        <lv_obj width="48%"
                height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column"
                style_flex_main_place="start" style_flex_cross_place="start">
          <text_body text="Hotend Fan" style_pad_bottom="#space_sm"/>
          <lv_dropdown name="hotend_fan_dropdown"
                       width="100%" height="#header_height" options="heater_fan hotend_fan"
                       style_border_width="#input_border_width" style_border_opa="100%" style_radius="#border_radius"
                       style_pad_all="#space_lg">
            <event_cb trigger="value_changed" callback="on_hotend_fan_dropdown_changed"/>
          </lv_dropdown>
        </lv_obj>
        <!-- Part Cooling Fan (right) -->
        <lv_obj width="48%"
                height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column"
                style_flex_main_place="start" style_flex_cross_place="start">
          <text_body text="Part Cooling Fan" style_pad_bottom="#space_sm"/>
          <lv_dropdown name="part_cooling_fan_dropdown"
                       width="100%" height="#header_height" options="fan" style_border_width="#input_border_width"
                       style_border_opa="100%" style_radius="#border_radius" style_pad_all="#space_lg">
            <event_cb trigger="value_changed" callback="on_part_fan_dropdown_changed"/>
          </lv_dropdown>
        </lv_obj>
      </lv_obj>
      <!-- Row 2: Optional fans (Chamber + Exhaust) - hidden if <= 2 fans -->
      <lv_obj name="optional_fans_row"
              width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="row"
              style_flex_main_place="space_between" style_flex_cross_place="start" style_pad_gap="#space_md"
              style_pad_top="#space_md">
        <!-- Chamber Fan (left) -->
        <lv_obj width="48%"
                height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column"
                style_flex_main_place="start" style_flex_cross_place="start">
          <text_body text="Chamber Fan" style_pad_bottom="#space_sm"/>
          <lv_dropdown name="chamber_fan_dropdown"
                       width="100%" height="#header_height" options="None" style_border_width="#input_border_width"
                       style_border_opa="100%" style_radius="#border_radius" style_pad_all="#space_lg">
            <event_cb trigger="value_changed" callback="on_chamber_fan_dropdown_changed"/>
          </lv_dropdown>
        </lv_obj>
        <!-- Exhaust Fan (right) -->
        <lv_obj width="48%"
                height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column"
                style_flex_main_place="start" style_flex_cross_place="start">
          <text_body text="Exhaust Fan" style_pad_bottom="#space_sm"/>
          <lv_dropdown name="exhaust_fan_dropdown"
                       width="100%" height="#header_height" options="None" style_border_width="#input_border_width"
                       style_border_opa="100%" style_radius="#border_radius" style_pad_all="#space_lg">
            <event_cb trigger="value_changed" callback="on_exhaust_fan_dropdown_changed"/>
          </lv_dropdown>
        </lv_obj>
      </lv_obj>
      <!-- Status/error message area -->
      <text_small name="fan_status_text"
                  width="100%" style_pad_top="#space_md" style_text_color="#error_color" hidden="true"/>
    </ui_card>
  </view>
</component>

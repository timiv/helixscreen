<component>
  <!-- First-Run Wizard: Fan Select Screen -->
  <!-- User selects hotend cooling fan and part cooling fan -->
  <view extends="lv_obj" width="100%" height="100%" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column" style_flex_main_place="start" style_flex_cross_place="center" name="wizard_fan_select_root">
    <!-- Help text -->
    <text_body text="Choose fans for cooling your hotend and parts" width="100%" style_pad_bottom="#gap_small"/>
    <!-- Selection container -->
    <ui_card width="100%" flex_grow="1" style_bg_opa="255" style_radius="12" style_pad_all="#padding_normal" style_pad_gap="#gap_normal" flex_flow="column" style_flex_main_place="start" style_flex_cross_place="start">
      <!-- Hotend fan selection -->
      <text_body text="Hotend Cooling Fan" style_pad_bottom="#gap_small"/>
      <lv_dropdown name="hotend_fan_dropdown" options="heater_fan hotend_fan" width="100%" height="#header_height" style_border_width="#input_border_width" style_border_opa="100%" style_radius="#border_radius" style_pad_all="#padding_card"/>
      <!-- Part cooling fan selection -->
      <text_body text="Part Cooling Fan" style_pad_top="#gap_normal" style_pad_bottom="#gap_small"/>
      <lv_dropdown name="part_cooling_fan_dropdown" options="fan" width="100%" height="#header_height" style_border_width="#input_border_width" style_border_opa="100%" style_radius="#border_radius" style_pad_all="#padding_card"/>
    </ui_card>
  </view>
</component>

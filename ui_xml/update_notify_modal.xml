<!-- Update Notification Modal - Shown when auto-check finds an update -->
<!-- Subjects: update_new_version, update_release_notes, update_changelog_visible -->
<component>
  <view name="update_notify_modal"
        extends="lv_obj" width="100%" height="100%" style_bg_color="0x000000" style_bg_opa="200"
        style_border_width="0" style_radius="0" style_pad_all="0" align="center"
        clickable="true" hidden="true" scrollable="false">

    <!-- Backdrop click = dismiss (remind later) -->
    <event_cb trigger="clicked" callback="on_update_notify_dismiss"/>

    <ui_dialog name="notify_card" width="70%" height="content" align="center"
               flex_flow="column" style_flex_main_place="start" style_pad_gap="0"
               clickable="true">

      <!-- Header: icon + title + version -->
      <lv_obj width="100%" height="content"
              style_pad_left="#space_lg" style_pad_right="#space_lg"
              style_pad_top="#space_xl" style_pad_bottom="#space_md"
              flex_flow="column" style_flex_cross_place="center" style_pad_gap="#space_sm">
        <icon src="download" size="lg" variant="primary"/>
        <text_heading text="New Version Available" translation_tag="New Version Available"/>
        <text_muted name="notify_version_text" bind_text="update_version_text" width="100%"
                    long_mode="wrap" style_text_align="center"/>
      </lv_obj>

      <!-- View Changelog button -->
      <lv_obj width="100%" height="content" style_pad_left="#space_lg" style_pad_right="#space_lg"
              style_pad_top="0" style_pad_bottom="#space_md"
              flex_flow="column" style_flex_cross_place="center">
        <ui_button name="btn_toggle_changelog" text="View Changelog" translation_tag="View Changelog"
                   variant="outline" width="content">
          <event_cb trigger="clicked" callback="on_update_toggle_changelog"/>
        </ui_button>
      </lv_obj>

      <!-- Changelog area (hidden by default, toggled by changelog_visible subject) -->
      <lv_obj name="changelog_container" width="100%" height="content"
              style_max_height="200"
              style_pad_left="#space_lg" style_pad_right="#space_lg"
              style_pad_top="0" style_pad_bottom="#space_md"
              scrollable="true" scroll_snap_y="none" hidden="true">
        <bind_flag_if_not_eq subject="update_changelog_visible" flag="hidden" ref_value="1"/>
        <ui_markdown name="changelog_text" bind_text="update_release_notes" width="100%"/>
      </lv_obj>

      <!-- Button row: Ignore | Install -->
      <lv_obj width="100%" height="content"
              flex_flow="column" style_pad_all="0" style_pad_gap="0"
              style_border_width="0">
        <divider_horizontal/>
        <lv_obj width="100%" height="#button_height" flex_flow="row"
                style_pad_all="0" style_pad_gap="0" style_border_width="0">
          <ui_button name="btn_ignore" text="Ignore" translation_tag="Ignore" flex_grow="1">
            <event_cb trigger="clicked" callback="on_update_notify_ignore"/>
          </ui_button>
          <divider_vertical/>
          <ui_button name="btn_install" text="Install" translation_tag="Install" variant="success" flex_grow="1">
            <event_cb trigger="clicked" callback="on_update_notify_install"/>
          </ui_button>
        </lv_obj>
      </lv_obj>

    </ui_dialog>
  </view>
</component>

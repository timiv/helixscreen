<!-- NOTE: Backdrop created programmatically by Modal system -->
<component>
  <api>
    <prop name="title" type="string" default="Filament Runout"/>
    <prop name="message" type="string" default="The runout sensor detected no filament. What would you like to do?"/>
  </api>
  <!-- Dialog card (backdrop created programmatically) -->
  <view name="runout_guidance_modal"
        extends="ui_dialog" width="80%" height="content" align="center" flex_flow="column" style_flex_main_place="start"
        style_pad_gap="0">
    <!-- Header row with warning icon + title -->
    <lv_obj width="100%"
            height="content" style_bg_opa="0" style_border_width="0" style_pad_left="#space_lg"
            style_pad_right="#space_lg" style_pad_top="#space_lg" style_pad_bottom="#space_sm" flex_flow="row"
            style_flex_cross_place="center" style_pad_gap="#space_sm">
      <!-- Warning icon (always shown - runout is a warning condition) -->
      <icon name="icon_warning" src="alert" size="md" variant="warning"/>
      <!-- Title -->
      <text_heading name="dialog_title" text="$title" style_text_align="left" flex_grow="1"/>
    </lv_obj>
    <!-- Message content area -->
    <lv_obj name="content_container"
            width="100%" height="content" style_min_height="40" style_max_height="200" style_bg_opa="0"
            style_border_width="0" style_pad_left="#space_lg" style_pad_right="#space_lg" style_pad_top="0"
            style_pad_bottom="#space_lg">
      <text_body name="dialog_message" width="100%" text="$message" style_text_align="left" long_mode="wrap"/>
    </lv_obj>
    <!-- Horizontal divider above buttons -->
    <lv_obj width="100%"
            height="1" style_bg_color="#text_secondary" style_bg_opa="64" style_border_width="0" style_pad_all="0"/>
    <!-- Button column - vertical stack for better touch targets -->
    <lv_obj width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column">
      <!-- Load Filament button (primary action) -->
      <lv_button name="btn_load_filament"
                 width="100%" height="#button_height" style_radius="0" style_border_width="0" style_shadow_width="0"
                 clickable="true">
        <lv_obj width="100%"
                height="100%" style_bg_opa="0" style_border_width="0" flex_flow="row" style_flex_main_place="center"
                style_flex_cross_place="center" style_pad_gap="#space_sm">
          <icon src="tray_arrow_down" size="sm" variant="accent"/>
          <text_body text="Load Filament" style_text_color="#accent_color"/>
        </lv_obj>
      </lv_button>
      <!-- Divider -->
      <lv_obj width="100%"
              height="1" style_bg_color="#text_secondary" style_bg_opa="32" style_border_width="0" style_pad_all="0"/>
      <!-- Resume Print button -->
      <lv_button name="btn_resume"
                 width="100%" height="#button_height" style_radius="0" style_border_width="0" style_shadow_width="0"
                 clickable="true">
        <lv_obj width="100%"
                height="100%" style_bg_opa="0" style_border_width="0" flex_flow="row" style_flex_main_place="center"
                style_flex_cross_place="center" style_pad_gap="#space_sm">
          <icon src="play" size="sm" variant="primary"/>
          <text_body text="Resume Print"/>
        </lv_obj>
      </lv_button>
      <!-- Divider -->
      <lv_obj width="100%"
              height="1" style_bg_color="#text_secondary" style_bg_opa="32" style_border_width="0" style_pad_all="0"/>
      <!-- Cancel Print button (destructive) -->
      <lv_button name="btn_cancel_print"
                 width="100%" height="#button_height" style_radius="0" style_border_width="0" style_shadow_width="0"
                 clickable="true">
        <lv_obj width="100%"
                height="100%" style_bg_opa="0" style_border_width="0" flex_flow="row" style_flex_main_place="center"
                style_flex_cross_place="center" style_pad_gap="#space_sm">
          <icon src="stop" size="sm" variant="error"/>
          <text_body text="Cancel Print" style_text_color="#error_color"/>
        </lv_obj>
      </lv_button>
    </lv_obj>
  </view>
</component>

<!-- NOTE: Backdrop created programmatically by Modal system -->
<component>
  <api>
    <prop name="title" type="string" default="Filament Runout"/>
    <prop name="message" type="string" default="The printer isn't detecting that any filament is currently loaded. What would you like to do?"/>
  </api>
  <!-- Dialog card (backdrop created programmatically) -->
  <view name="runout_guidance_modal"
        extends="ui_dialog" width="80%" height="content" align="center" flex_flow="column" style_flex_main_place="start"
        style_pad_gap="0">
    <!-- Header row with warning icon + title -->
    <lv_obj width="100%"
            height="content" style_bg_opa="0" style_border_width="0" style_pad_left="#space_lg"
            style_pad_right="#space_lg" style_pad_top="#space_lg" style_pad_bottom="#space_sm" flex_flow="row"
            style_flex_cross_place="center" style_pad_gap="#space_sm">
      <!-- Warning icon (always shown - runout is a warning condition) -->
      <icon name="icon_warning" src="alert" size="md" variant="warning"/>
      <!-- Title -->
      <text_heading name="dialog_title" text="$title" style_text_align="left" flex_grow="1"/>
    </lv_obj>
    <!-- Message content area -->
    <lv_obj name="content_container"
            width="100%" height="content" style_min_height="40" style_max_height="200" style_bg_opa="0"
            style_border_width="0" style_pad_left="#space_lg" style_pad_right="#space_lg" style_pad_top="0"
            style_pad_bottom="#space_sm">
      <text_body name="dialog_message" width="100%" text="$message" style_text_align="left" long_mode="wrap"/>
    </lv_obj>
    <!-- ACTION BUTTONS ROW - horizontal, beneath message -->
    <lv_obj width="100%" height="content" style_bg_opa="0" style_border_width="0"
            style_pad_all="#space_lg" flex_flow="row" style_flex_main_place="space_between" style_pad_gap="#space_sm">
      <!-- Load button -->
      <lv_button name="btn_load_filament"
                 height="#button_height" flex_grow="1" style_radius="#border_radius"
                 style_border_width="1" style_border_color="#border_color" style_bg_color="#secondary_color"
                 flex_flow="row" style_flex_main_place="center"
                 style_flex_cross_place="center" style_flex_track_place="center" style_pad_gap="#space_xs">
        <event_cb trigger="clicked" callback="on_runout_load_filament"/>
        <icon src="arrow_down" size="sm" variant="primary"/>
        <text_body text="Load"/>
      </lv_button>
      <!-- Unload button -->
      <lv_button name="btn_unload_filament"
                 height="#button_height" flex_grow="1" style_radius="#border_radius"
                 style_border_width="1" style_border_color="#border_color" style_bg_color="#secondary_color"
                 flex_flow="row" style_flex_main_place="center"
                 style_flex_cross_place="center" style_flex_track_place="center" style_pad_gap="#space_xs">
        <event_cb trigger="clicked" callback="on_runout_unload_filament"/>
        <icon src="arrow_up" size="sm" variant="primary"/>
        <text_body text="Unload"/>
      </lv_button>
      <!-- Purge button -->
      <lv_button name="btn_purge"
                 height="#button_height" flex_grow="1" style_radius="#border_radius"
                 style_border_width="1" style_border_color="#border_color" style_bg_color="#secondary_color"
                 flex_flow="row" style_flex_main_place="center"
                 style_flex_cross_place="center" style_flex_track_place="center" style_pad_gap="#space_xs">
        <event_cb trigger="clicked" callback="on_runout_purge"/>
        <icon src="filament" size="sm" variant="primary"/>
        <text_body text="Purge"/>
      </lv_button>
    </lv_obj>
    <!-- Horizontal divider above dismiss buttons -->
    <lv_obj width="100%"
            height="1" style_bg_color="#text_secondary" style_bg_opa="64" style_border_width="0" style_pad_all="0"/>
    <!-- CLOSE BUTTON ROW (only when NOT paused - hidden when print_state_enum == 2) -->
    <lv_obj width="100%" height="#button_height" style_bg_opa="0" style_border_width="0"
            style_pad_all="0" style_pad_gap="0" flex_flow="row">
      <lv_obj-bind_flag_if_eq subject="print_state_enum" flag="hidden" ref_value="2"/>
      <lv_button name="btn_ok"
                 height="100%" flex_grow="1" style_radius="0" style_border_width="0" style_shadow_width="0"
                 clickable="true">
        <event_cb trigger="clicked" callback="on_runout_ok"/>
        <text_body text="Close" align="center"/>
      </lv_button>
    </lv_obj>
    <!-- PAUSED BUTTONS ROW (only when paused - hidden when print_state_enum != 2) -->
    <lv_obj width="100%" height="#button_height" style_bg_opa="0" style_border_width="0"
            style_pad_all="0" style_pad_gap="0" flex_flow="row">
      <lv_obj-bind_flag_if_not_eq subject="print_state_enum" flag="hidden" ref_value="2"/>
      <!-- Resume Print button -->
      <lv_button name="btn_resume"
                 height="100%" flex_grow="1" style_radius="0" style_border_width="0" style_shadow_width="0"
                 clickable="true">
        <event_cb trigger="clicked" callback="on_runout_resume"/>
        <text_body text="Resume Print" align="center"/>
      </lv_button>
      <!-- Vertical divider -->
      <lv_obj width="1" height="100%" style_bg_color="#text_secondary" style_bg_opa="64"
              style_border_width="0" style_pad_all="0"/>
      <!-- Cancel Print button -->
      <lv_button name="btn_cancel_print"
                 height="100%" flex_grow="1" style_radius="0" style_border_width="0" style_shadow_width="0"
                 style_bg_color="#error_color" clickable="true">
        <event_cb trigger="clicked" callback="on_runout_cancel_print"/>
        <text_body text="Cancel Print" align="center" style_text_color="#text_primary"/>
      </lv_button>
    </lv_obj>
  </view>
</component>

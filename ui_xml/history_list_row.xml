<component>
  <api>
    <prop name="filename" type="string"/>
    <prop name="date" type="string"/>
    <prop name="duration" type="string"/>
    <prop name="filament_type" type="string"/>
    <prop name="status" type="string"/>
    <prop name="status_color" type="string"/>
  </api>
  <!-- Row container - clickable, with subtle background -->
  <view name="history_row"
        extends="lv_obj" width="100%" height="content" style_bg_opa="255" style_radius="#border_radius"
        style_border_width="0" style_pad_top="#space_sm" style_pad_bottom="#space_sm" style_pad_left="#space_md"
        style_pad_right="#space_md" flex_flow="row" style_flex_main_place="start" style_flex_cross_place="center"
        style_flex_gap_column="#space_md" clickable="true">
    <!-- Status indicator bar (colored left edge) -->
    <lv_obj name="status_bar"
            width="4" height="100%" style_bg_opa="255" style_bg_color="$status_color" style_radius="2"
            style_border_width="0" style_pad_all="0" clickable="false"/>
    <!-- Main content column -->
    <lv_obj width="content"
            height="content" flex_grow="1" flex_flow="column" style_flex_gap_row="#space_xs" style_pad_all="0"
            style_bg_opa="0" style_border_width="0" clickable="false">
      <!-- Filename (primary text) -->
      <text_body name="row_filename"
                 width="100%" text="$filename" style_text_align="left" long_mode="dots" style_pad_all="0"
                 clickable="false"/>
      <!-- Metadata row (date, duration, filament type) -->
      <lv_obj width="100%"
              height="content" flex_flow="row" style_flex_main_place="start" style_flex_gap_column="#space_lg"
              style_pad_all="0" style_bg_opa="0" style_border_width="0" clickable="false">
        <!-- Date -->
        <text_small name="row_date"
                    width="content" text="$date" style_text_align="left" style_text_color="#text_secondary"
                    style_pad_all="0" clickable="false"/>
        <!-- Duration -->
        <text_small name="row_duration"
                    width="content" text="$duration" style_text_align="left" style_text_color="#text_secondary"
                    style_pad_all="0" clickable="false"/>
        <!-- Filament Type -->
        <text_small name="row_filament"
                    width="content" text="$filament_type" style_text_align="left" style_text_color="#text_secondary"
                    style_pad_all="0" clickable="false"/>
      </lv_obj>
    </lv_obj>
    <!-- Status text (right side) -->
    <text_small name="row_status"
                width="content" text="$status" style_text_align="right" style_text_color="$status_color"
                style_pad_all="0" clickable="false"/>
    <!-- Chevron icon for navigation hint -->
    <lv_label name="row_chevron"
              text="" style_text_font="mdi_icons_24" style_text_color="#text_secondary" style_pad_all="0"
              clickable="false"/>
  </view>
</component>

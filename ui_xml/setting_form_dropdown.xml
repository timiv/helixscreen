<!-- Compact form row: label (60px, muted) + dropdown (40%) -->
<!-- Used in macro edit forms for Type, On, Off, Toggle fields -->
<!-- C++ sets dropdown options, name, selection, and event callbacks -->
<component>
  <api>
    <prop name="label" type="string" default="Field:"/>
  </api>
  <view extends="lv_obj"
        width="100%" height="content" flex_flow="row" style_flex_cross_place="center" style_pad_all="0"
        style_pad_gap="#space_sm" style_bg_opa="0" style_border_width="0" scrollable="false">
    <text_muted name="label" width="60" text="$label"/>
    <lv_dropdown name="dropdown" width="40%" style_border_width="0"/>
  </view>
</component>

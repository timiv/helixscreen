<component>
  <!-- Component-local constants for theme-aware colors and dimensions -->
  <consts>
    <!-- Component-specific dimensions (home panel layout) -->
    <px name="accent_bar_width" value="4"/>
    <px name="accent_bar_gap" value="18"/>
    <!-- Printer image container: percentage of parent for responsive sizing -->
    <percentage name="printer_container_width" value="40%"/>
  </consts>
  <!-- Styles for printer image connection state -->
  <styles>
    <!-- Dimmed image when printer is not connected (state 0 or 1) -->
    <style name="image_dimmed" image_opa="128"/>
  </styles>
  <!-- Now references global constants from globals.xml -->
  <view extends="lv_obj"
        width="100%" height="100%" style_pad_all="0" style_pad_gap="0" style_border_width="0" flex_flow="column"
        style_bg_color="#screen_bg" scrollable="false">

    <!-- Top section: Printer visualization + Tip -->
    <lv_obj width="100%"
            flex_grow="2" style_pad_all="#space_sm" style_pad_left="0" style_pad_gap="0" flex_flow="row"
            style_flex_main_place="center" style_flex_cross_place="center" scrollable="false">

      <!-- Printer Image Container: fixed percentage width, image scales to fit via inner_align="contain" -->
      <lv_obj width="#printer_container_width"
              height="100%" flex_flow="column" style_pad_all="0" style_pad_right="#space_sm" style_pad_gap="0"
              scrollable="false">
        <lv_obj name="printer_container"
                width="100%" flex_grow="1" style_bg_color="#screen_bg" style_pad_all="0" style_pad_bottom="0"
                scrollable="false" align="center" flex_flow="row" clickable="true">
          <event_cb trigger="clicked" callback="printer_manager_clicked_cb"/>
          <lv_image name="printer_image" width="100%" height="100%" align="center" inner_align="contain">
            <!-- Dim image when disconnected (state 0) or connecting (state 1) -->
            <bind_style name="image_dimmed" subject="printer_connection_state" ref_value="0"/>
            <bind_style name="image_dimmed" subject="printer_connection_state" ref_value="1"/>
            <!-- Dim image when klippy is in SHUTDOWN (state 2) or ERROR (state 3) -->
            <bind_style name="image_dimmed" subject="klippy_state" ref_value="2"/>
            <bind_style name="image_dimmed" subject="klippy_state" ref_value="3"/>
          </lv_image>
          <!-- Disconnected overlay - shown when NOT connected (state != 2) -->
          <icon name="disconnected_overlay" src="prohibited" size="xl" align="center" variant="danger">
            <bind_flag_if_eq subject="printer_connection_state" flag="hidden" ref_value="2"/>
          </icon>
          <!-- Shutdown overlay - shown when klippy is SHUTDOWN (state 2) -->
          <icon name="shutdown_overlay" src="alert_octagon" size="xl" align="center" variant="warning" hidden="true">
            <bind_flag_if_not_eq subject="klippy_state" flag="hidden" ref_value="2"/>
          </icon>
        </lv_obj>
        <!-- printer_container -->

        <!-- Printer info - subtle text at bottom -->
        <lv_obj name="printer_info_bar" width="100%" style_pad_all="0">
          <bind_flag_if_eq subject="printer_info_visible" flag="hidden" ref_value="0"/>
          <text_small width="100%"
                      height="content" bind_text="printer_type_text" style_text_color="#text" style_text_align="center"
                      stroke_width="1" stroke_color="#screen_bg" stroke_opa="180"/>
        </lv_obj>
      </lv_obj>

      <!-- Tooltip Message with accent bar (flex-grows to fill remaining horizontal space) -->
      <!-- Outer container centers content vertically -->
      <lv_obj height="100%"
              flex_grow="1" style_bg_opa="0%" style_pad_all="0" style_pad_left="#space_md" flex_flow="column"
              style_flex_main_place="center" scrollable="false">
        <!-- Tip container: left border acts as accent bar, auto-sizes to text height -->
        <lv_obj width="100%"
                height="content" flex_flow="row" style_bg_opa="0%" style_radius="0"
                style_border_width="#accent_bar_width" style_border_side="left" style_border_color="#primary"
                style_pad_top="#space_sm" style_pad_bottom="#space_sm" style_pad_left="#accent_bar_gap"
                style_pad_right="0" style_pad_gap="#space_sm" style_flex_track_place="center" clickable="true">
          <event_cb trigger="clicked" callback="tip_text_clicked_cb"/>
          <!-- "Tip: " prefix -->
          <text_heading text="Tip:" translation_tag="Tip:"/>
          <!-- Tip text (bound to subject) -->
          <text_heading name="status_text_label" bind_text="status_text" flex_grow="1" long_mode="wrap"/>
          <!-- Question mark icon -->
          <icon src="help_circle" size="lg" variant="muted"/>
        </lv_obj>
      </lv_obj>
    </lv_obj>


    <!-- Bottom section: Info cards (40% of height via flex_grow="2", balances with top section's flex_grow="3") -->
    <lv_obj width="100%"
            flex_grow="2" flex_flow="row" style_flex_cross_place="start" style_bg_opa="0%" style_pad_all="#space_sm"
            style_pad_left="0" style_pad_gap="#space_md" scrollable="false">

      <!-- Print Files Card - Benchy thumbnail + text in horizontal layout -->
      <!-- Disabled when not connected (state != 2) using LVGL's native disabled state -->
      <ui_card name="print_card" width="33%" height="100%">
        <bind_state_if_not_eq subject="printer_connection_state" state="disabled" ref_value="2"/>
        <event_cb trigger="clicked" callback="print_card_clicked_cb"/>
        <!-- IDLE STATE: Benchy + "Print Files" (hidden when print_active == 1) -->
        <lv_obj name="print_card_idle"
                width="100%" height="100%" style_pad_all="0" flex_flow="row" style_flex_main_place="center"
                style_flex_cross_place="center" style_pad_gap="#space_sm" clickable="false">
          <bind_flag_if_not_eq subject="print_active" flag="hidden" ref_value="0"/>
          <lv_image name="print_card_thumb"
                    width="50%" height="100%" src="A:assets/images/benchy_thumbnail_white.png" inner_align="contain"/>
          <text_body name="print_card_label" text="Print Files" translation_tag="Print Files"/>
        </lv_obj>
        <!-- PREPARING STATE: Progress + message (hidden when print_start_phase == 0/IDLE) -->
        <lv_obj name="print_card_preparing"
                width="100%" height="100%" style_pad_all="#space_sm" flex_flow="column" style_flex_main_place="center"
                style_flex_cross_place="center" style_pad_gap="#space_sm" hidden="true" clickable="false">
          <bind_flag_if_eq subject="print_start_phase" flag="hidden" ref_value="0"/>
          <!-- "Preparing Print" heading -->
          <text_body text="Preparing Print" translation_tag="Preparing Print"/>
          <!-- Progress bar -->
          <lv_bar name="print_start_bar"
                  width="90%" height="8" bind_value="print_start_progress" min_value="0" max_value="100"
                  style_bg_color="#screen_bg" style_radius="4"/>
          <!-- Phase message -->
          <text_small bind_text="print_start_message"/>
          <!-- Predicted time remaining -->
          <text_small name="print_start_eta" bind_text="print_start_time_left" style_text_color="#text_muted"/>
        </lv_obj>
        <!-- PRINTING STATE: Actual print progress (hidden when print_show_progress==0) -->
        <!-- Horizontal layout: thumbnail left, info right (mirrors idle state layout) -->
        <lv_obj name="print_card_printing"
                width="100%" height="100%" style_pad_all="#space_sm" flex_flow="column" style_pad_gap="#space_xs"
                scrollable="false" hidden="true" clickable="false">
          <!-- Single binding: show only when print_active==1 AND print_start_phase==IDLE -->
          <bind_flag_if_eq subject="print_show_progress" flag="hidden" ref_value="0"/>
          <!-- Top row: thumbnail + info side by side -->
          <lv_obj width="100%"
                  flex_grow="1" style_pad_all="0" flex_flow="row" style_flex_cross_place="center"
                  style_pad_gap="#space_sm" scrollable="false" clickable="false">
            <!-- Thumbnail wrapper: constrains size so lv_image_set_src can't blow out layout -->
            <lv_obj width="40%" height="100%" style_pad_all="0" style_bg_opa="0%" scrollable="false" clickable="false">
              <lv_image name="print_card_active_thumb"
                        width="100%" height="100%" src="A:assets/images/benchy_thumbnail_white.png"
                        inner_align="contain"/>
            </lv_obj>
            <!-- Info column: e-stop, filename, progress bar, percentage -->
            <lv_obj height="100%"
                    flex_grow="1" style_pad_all="0" flex_flow="column" style_flex_main_place="center"
                    style_flex_cross_place="center" style_pad_gap="#space_xs" scrollable="false" clickable="false">
              <!-- E-stop button (only visible when printing) -->
              <ui_button name="estop_button_print"
                         width="#button_height_sm" height="#button_height_sm" variant="danger" style_radius="24"
                         focusable="false" hidden="true">
                <bind_flag_if_eq subject="estop_visible" flag="hidden" ref_value="0"/>
                <icon src="alert_octagon" size="sm" variant="text" align="center"/>
                <event_cb trigger="clicked" callback="emergency_stop_clicked"/>
              </ui_button>
              <!-- Filename (constrained width with wrapping for long names) -->
              <text_small width="100%"
                          bind_text="print_display_filename" style_text_color="#text" long_mode="wrap"
                          style_text_align="center"/>
              <!-- Progress bar showing actual print progress -->
              <lv_bar name="print_progress_bar"
                      width="90%" height="8" bind_value="print_progress" min_value="0" max_value="100"
                      style_bg_color="#screen_bg" style_radius="4"/>
              <!-- Progress percentage -->
              <text_small bind_text="print_progress_text"/>
            </lv_obj>
          </lv_obj>
          <!-- Klipper display message (M117) - full width, only visible when non-empty -->
          <text_small name="display_message"
                      width="100%" bind_text="display_message" variant="muted" style_text_align="center" long_mode="dot"
                      hidden="true">
            <bind_flag_if_eq subject="display_message_visible" flag="hidden" ref_value="0"/>
          </text_small>
        </lv_obj>
      </ui_card>


      <!-- Status Card - Column layout with status row on top, info row below -->
      <ui_card name="status_card" height="100%" flex_grow="2" flex_flow="column" style_pad_gap="#space_sm">

        <!-- Widget Container: populated dynamically from PanelWidgetConfig -->
        <lv_obj name="widget_container"
                width="100%" flex_grow="1" style_pad_all="0"
                flex_flow="column" style_pad_gap="#space_sm"
                scrollable="false"/>


        <!-- Plugin injection point: widgets from plugins appear here -->
        <!-- Plugins can inject status widgets, indicators, or custom controls -->
        <lv_obj name="panel_widget_area"
                width="100%" height="content" style_pad_all="0" flex_flow="column" style_pad_gap="#space_sm"/>
      </ui_card>
    </lv_obj>
  </view>
</component>

<component>
  <!-- Component-local constants for theme-aware colors and dimensions -->
  <consts>
    <!-- Component-specific dimensions (home panel layout) -->
    <px name="accent_bar_width" value="4"/>
    <px name="accent_bar_gap" value="18"/>
    <!-- Printer image container: percentage of parent for responsive sizing -->
    <percentage name="printer_container_width" value="40%"/>
  </consts>
  <!-- Styles for printer image connection state -->
  <styles>
    <!-- Dimmed image when printer is not connected (state 0 or 1) -->
    <style name="image_dimmed" image_opa="128"/>
    <!-- Notification badge severity colors -->
    <style name="badge_info" bg_color="#info_color"/>
    <style name="badge_warning" bg_color="#warning_color"/>
    <style name="badge_error" bg_color="#error_color"/>
  </styles>
  <!-- Now references global constants from globals.xml -->
  <view extends="lv_obj"
        width="100%" height="100%" style_pad_all="0" style_pad_gap="0" style_border_width="0" flex_flow="column"
        style_bg_color="#app_bg_color" scrollable="false">

    <!-- Top section: Printer visualization + Tip -->
    <lv_obj width="100%"
            flex_grow="2" style_bg_opa="0" style_border_width="0" style_pad_all="#space_sm" style_pad_left="0"
            style_pad_gap="0" flex_flow="row" style_flex_main_place="center" style_flex_cross_place="center"
            scrollable="false">

      <!-- Printer Image Container: fixed percentage width, image scales to fit via inner_align="contain" -->
      <lv_obj width="#printer_container_width"
              height="100%" flex_flow="column" style_bg_opa="0" style_border_width="0" style_pad_all="0"
              style_pad_right="#space_sm" style_pad_gap="0" scrollable="false">
        <lv_obj name="printer_container"
                width="100%" flex_grow="1" style_bg_opa="0%" style_border_width="0" style_pad_all="0"
                style_pad_bottom="0" scrollable="false" align="center" flex_flow="row">
          <lv_image name="printer_image" width="100%" height="100%" align="center" inner_align="contain">
            <!-- Dim image when disconnected (state 0) or connecting (state 1) -->
            <bind_style name="image_dimmed" subject="printer_connection_state" ref_value="0"/>
            <bind_style name="image_dimmed" subject="printer_connection_state" ref_value="1"/>
            <!-- Dim image when klippy is in SHUTDOWN (state 2) or ERROR (state 3) -->
            <bind_style name="image_dimmed" subject="klippy_state" ref_value="2"/>
            <bind_style name="image_dimmed" subject="klippy_state" ref_value="3"/>
          </lv_image>
          <!-- Disconnected overlay - shown when NOT connected (state != 2) -->
          <icon name="disconnected_overlay" src="prohibited" size="xl" align="center" color="#error_color">
            <bind_flag_if_eq subject="printer_connection_state" flag="hidden" ref_value="2"/>
          </icon>
          <!-- Shutdown overlay - shown when klippy is SHUTDOWN (state 2) -->
          <icon name="shutdown_overlay"
                src="alert_octagon" size="xl" align="center" color="#warning_color" hidden="true">
            <bind_flag_if_not_eq subject="klippy_state" flag="hidden" ref_value="2"/>
          </icon>
        </lv_obj>
        <!-- printer_container -->

        <!-- Printer info - subtle text at bottom -->
        <lv_obj name="printer_info_bar"
                width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0">
          <bind_flag_if_eq subject="printer_info_visible" flag="hidden" ref_value="0"/>
          <text_small width="100%"
                      height="content" bind_text="printer_type_text" style_text_color="#text_primary"
                      style_text_align="center" stroke_width="1" stroke_color="#000000" stroke_opa="180"/>
        </lv_obj>
      </lv_obj>

      <!-- Tooltip Message with accent bar (flex-grows to fill remaining horizontal space) -->
      <!-- Outer container centers content vertically -->
      <lv_obj height="100%"
              flex_grow="1" style_bg_opa="0%" style_border_width="0" style_pad_all="0" flex_flow="column"
              style_flex_main_place="center" scrollable="false">
        <!-- Tip container: left border acts as accent bar, auto-sizes to text height -->
        <lv_obj width="100%"
                height="content" flex_flow="row" style_bg_opa="0%" style_radius="0"
                style_border_width="#accent_bar_width" style_border_side="left" style_border_color="#primary_color"
                style_pad_top="#space_sm" style_pad_bottom="#space_sm" style_pad_left="#accent_bar_gap"
                style_pad_right="0" style_pad_gap="#space_sm" style_flex_track_place="center" clickable="true">
          <event_cb trigger="clicked" callback="tip_text_clicked_cb"/>
          <!-- "Tip: " prefix -->
          <text_heading text="Tip:"/>
          <!-- Tip text (bound to subject) -->
          <text_heading name="status_text_label" bind_text="status_text" flex_grow="1" long_mode="wrap"/>
          <!-- Question mark icon -->
          <lv_label text="#icon_question_circle" style_text_font="mdi_icons_24"/>
        </lv_obj>
      </lv_obj>
    </lv_obj>


    <!-- Bottom section: Info cards (40% of height via flex_grow="2", balances with top section's flex_grow="3") -->
    <lv_obj width="100%"
            flex_grow="2" flex_flow="row" style_flex_cross_place="start" style_bg_opa="0%" style_border_width="0"
            style_pad_all="#space_sm" style_pad_left="0" style_pad_gap="#space_md" scrollable="false">

      <!-- Print Files Card - Benchy thumbnail + text in horizontal layout -->
      <!-- Disabled when not connected (state != 2) using LVGL's native disabled state -->
      <lv_button name="print_card"
                 width="50%" height="100%" style_bg_color="#card_bg" style_radius="#border_radius"
                 style_border_width="0" style_pad_all="#space_lg" style_shadow_width="0" flex_flow="column"
                 style_flex_main_place="center" style_flex_cross_place="center" style_flex_track_place="center"
                 style_pad_gap="#space_sm">
        <bind_state_if_not_eq subject="printer_connection_state" state="disabled" ref_value="2"/>
        <event_cb trigger="clicked" callback="print_card_clicked_cb"/>
        <!-- IDLE STATE: Benchy + "Print Files" (hidden when print_active == 1) -->
        <lv_obj name="print_card_idle"
                width="100%" height="100%" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="row"
                style_flex_main_place="center" style_flex_cross_place="center" style_pad_gap="#space_sm"
                clickable="false">
          <bind_flag_if_not_eq subject="print_active" flag="hidden" ref_value="0"/>
          <lv_image name="print_card_thumb"
                    width="50%" height="100%" src="A:assets/images/benchy_thumbnail_white.png" inner_align="contain"/>
          <text_body name="print_card_label" text="Print Files"/>
        </lv_obj>
        <!-- PREPARING STATE: Progress + message (hidden when print_start_phase == 0/IDLE) -->
        <lv_obj name="print_card_preparing"
                width="100%" height="100%" style_bg_opa="0" style_border_width="0" style_pad_all="#space_sm"
                flex_flow="column" style_flex_main_place="center" style_flex_cross_place="center"
                style_pad_gap="#space_sm" hidden="true" clickable="false">
          <bind_flag_if_eq subject="print_start_phase" flag="hidden" ref_value="0"/>
          <!-- "Preparing Print" heading -->
          <text_body text="Preparing Print" style_text_color="#text_primary"/>
          <!-- Progress bar -->
          <lv_bar name="print_start_bar"
                  width="90%" height="8" bind_value="print_start_progress" range_min="0" range_max="100"
                  style_bg_color="#app_bg_color" style_radius="4"/>
          <!-- Phase message -->
          <text_small bind_text="print_start_message" style_text_color="#text_secondary"/>
        </lv_obj>
        <!-- PRINTING STATE: Actual print progress (hidden when print_show_progress==0) -->
        <!-- Horizontal layout: thumbnail left, info right (mirrors idle state layout) -->
        <lv_obj name="print_card_printing"
                width="100%" height="100%" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="row"
                style_flex_main_place="center" style_flex_cross_place="center" style_pad_gap="#space_sm"
                scrollable="false" hidden="true" clickable="false">
          <!-- Single binding: show only when print_active==1 AND print_start_phase==IDLE -->
          <bind_flag_if_eq subject="print_show_progress" flag="hidden" ref_value="0"/>
          <!-- Thumbnail (set programmatically via lv_image_set_src when print starts) -->
          <lv_image name="print_card_active_thumb"
                    width="50%" height="100%" src="A:assets/images/benchy_thumbnail_white.png" inner_align="contain"/>
          <!-- Info column: filename, progress bar, percentage -->
          <lv_obj width="50%"
                  height="100%" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column"
                  style_flex_main_place="center" style_flex_cross_place="center" style_pad_gap="#space_xs"
                  scrollable="false">
            <!-- Filename (constrained width with wrapping for long names) -->
            <text_body width="100%"
                       bind_text="print_display_filename" style_text_color="#text_primary" long_mode="wrap"
                       style_text_align="center"/>
            <!-- Progress bar showing actual print progress -->
            <lv_bar name="print_progress_bar"
                    width="90%" height="8" bind_value="print_progress" range_min="0" range_max="100"
                    style_bg_color="#app_bg_color" style_radius="4"/>
            <!-- Progress percentage -->
            <text_small bind_text="print_progress_text" style_text_color="#text_secondary"/>
          </lv_obj>
        </lv_obj>
      </lv_button>


      <!-- Status Card - Column layout with status row on top, info row below -->
      <ui_card name="status_card"
               height="100%" flex_grow="2" style_radius="#border_radius" style_pad_all="#space_md" flex_flow="column"
               style_pad_gap="#space_sm">

        <!-- Top Row: [AMS if available] + Printer Status + Notification -->
        <!-- Uses flex_grow="1" like bottom row so divider height="80%" works correctly -->
        <lv_obj width="100%"
                flex_grow="1" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="row"
                style_flex_cross_place="center">

          <!-- Printer Status -->
          <lv_obj height="100%"
                  flex_grow="1" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column"
                  style_flex_main_place="center" style_flex_track_place="center">
            <lv_button name="status_btn_printer"
                       align="center" style_bg_opa="0" style_shadow_width="0" style_border_width="0" style_radius="0"
                       style_pad_all="0">
              <event_cb trigger="clicked" callback="printer_status_clicked_cb"/>
              <!-- Ready (green) - state 0 -->
              <icon name="printer_icon_ready" src="printer_3d" size="#icon_size_card" variant="success" hidden="true">
                <bind_flag_if_not_eq subject="printer_icon_state" flag="hidden" ref_value="0"/>
              </icon>
              <!-- Warning (orange) - state 1 -->
              <icon name="printer_icon_warning" src="printer_3d" size="#icon_size_card" variant="warning" hidden="true">
                <bind_flag_if_not_eq subject="printer_icon_state" flag="hidden" ref_value="1"/>
              </icon>
              <!-- Error (red) - state 2 -->
              <icon name="printer_icon_error" src="printer_3d" size="#icon_size_card" variant="error" hidden="true">
                <bind_flag_if_not_eq subject="printer_icon_state" flag="hidden" ref_value="2"/>
              </icon>
              <!-- Disconnected (gray) - state 3 (default) -->
              <icon name="printer_icon_disconnected" src="printer_3d" size="#icon_size_card" variant="secondary">
                <bind_flag_if_not_eq subject="printer_icon_state" flag="hidden" ref_value="3"/>
              </icon>
            </lv_button>
          </lv_obj>

          <!-- Vertical divider -->
          <divider_vertical name="status_divider" height="80%" opacity="128"/>

          <!-- Network status - icon on top, label below (centered) -->
          <!-- Icons switch based on home_network_icon_state: 0=disconnected, 1-4=wifi strength, 5=ethernet -->
          <!-- Note: Uses different subject than navigation_bar's network_icon_state (simpler 3-state) -->
          <lv_button name="network_btn"
                     height="100%" flex_grow="1" style_bg_opa="0" style_shadow_width="0" style_border_width="0"
                     style_radius="0" style_pad_all="0" flex_flow="column" style_flex_main_place="center"
                     style_flex_cross_place="center">
            <event_cb trigger="clicked" callback="network_clicked_cb"/>
            <!-- Disconnected (state 0) -->
            <icon name="net_disconnected" src="wifi_off" size="#icon_size_card" variant="disabled">
              <bind_flag_if_not_eq subject="home_network_icon_state" flag="hidden" ref_value="0"/>
            </icon>
            <!-- WiFi strength 1 - weak (state 1) - warning color -->
            <icon name="net_wifi_1" src="wifi_strength_1_alert" size="#icon_size_card" variant="warning">
              <bind_flag_if_not_eq subject="home_network_icon_state" flag="hidden" ref_value="1"/>
            </icon>
            <!-- WiFi strength 2 - fair (state 2) -->
            <icon name="net_wifi_2" src="wifi_strength_2" size="#icon_size_card" variant="secondary">
              <bind_flag_if_not_eq subject="home_network_icon_state" flag="hidden" ref_value="2"/>
            </icon>
            <!-- WiFi strength 3 - good (state 3) -->
            <icon name="net_wifi_3" src="wifi_strength_3" size="#icon_size_card" variant="secondary">
              <bind_flag_if_not_eq subject="home_network_icon_state" flag="hidden" ref_value="3"/>
            </icon>
            <!-- WiFi strength 4 - strong (state 4) -->
            <icon name="net_wifi_4" src="wifi_strength_4" size="#icon_size_card" variant="secondary">
              <bind_flag_if_not_eq subject="home_network_icon_state" flag="hidden" ref_value="4"/>
            </icon>
            <!-- Ethernet (state 5) - success color indicates active wired connection -->
            <icon name="net_ethernet" src="ethernet" size="#icon_size_card" variant="success">
              <bind_flag_if_not_eq subject="home_network_icon_state" flag="hidden" ref_value="5"/>
            </icon>
            <text_tiny name="network_label" width="100%" bind_text="network_label" style_text_align="center"/>
          </lv_button>

          <!-- Vertical divider (80% height for visual breathing room) -->
          <divider_vertical name="divider1" height="80%"/>

          <!-- Notification (above light column) -->
          <lv_obj height="100%"
                  flex_grow="1" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column"
                  style_flex_main_place="center" style_flex_track_place="center">
            <lv_obj name="status_notification_container"
                    width="content" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0">
              <icon name="status_notification_icon"
                    src="notifications" size="#icon_size_card" variant="secondary" align="center" clickable="true">
                <event_cb trigger="clicked" callback="status_notification_history_clicked"/>
              </icon>
              <!-- Notification Count Badge - wrapper provides fixed sizing, label inside uses bind_style -->
              <lv_obj name="notification_badge"
                      width="18" height="18" align="top_right" x="-#space_xxs" y="#space_xxs" style_radius="9"
                      style_border_width="0" style_pad_all="0" hidden="true" scrollable="false" clickable="true">
                <bind_flag_if_eq subject="notification_count" flag="hidden" ref_value="0"/>
                <event_cb trigger="clicked" callback="status_notification_history_clicked"/>
                <!-- Background with severity-bound color -->
                <lv_obj name="badge_bg"
                        width="100%" height="100%" style_radius="9" style_border_width="0" style_bg_color="#info_color">
                  <bind_style name="badge_info" subject="notification_severity" ref_value="0"/>
                  <bind_style name="badge_warning" subject="notification_severity" ref_value="1"/>
                  <bind_style name="badge_error" subject="notification_severity" ref_value="2"/>
                </lv_obj>
                <text_small name="notification_badge_count"
                            bind_text="notification_count_text" style_pad_top="0" align="center"
                            style_text_color="#text_primary"/>
              </lv_obj>
            </lv_obj>
          </lv_obj>

          <!-- E-stop divider (ONLY visible when printing) -->
          <divider_vertical name="estop_divider" height="80%" opacity="128" hidden="true">
            <bind_flag_if_eq subject="estop_visible" flag="hidden" ref_value="0"/>
          </divider_vertical>

          <!-- E-stop button container (ONLY visible when printing) -->
          <lv_obj height="100%"
                  flex_grow="1" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column"
                  style_flex_main_place="center" style_flex_track_place="center" hidden="true">
            <bind_flag_if_eq subject="estop_visible" flag="hidden" ref_value="0"/>
            <!-- Circular button: radius=24 is half of button_height_small (48px) -->
            <lv_button name="estop_button_home"
                       width="#button_height_sm" height="#button_height_sm" style_radius="24"
                       style_bg_color="#error_color" style_border_width="2" style_border_color="#text_primary"
                       style_shadow_width="0" style_pad_all="0" align="center">
              <icon src="alert_octagon" size="sm" color="#text_primary" align="center"/>
              <event_cb trigger="clicked" callback="emergency_stop_clicked"/>
            </lv_button>
          </lv_obj>

          <!-- Firmware restart divider (ONLY visible when klippy SHUTDOWN) -->
          <divider_vertical name="firmware_restart_divider" height="80%" opacity="128" hidden="true">
            <bind_flag_if_not_eq subject="klippy_state" flag="hidden" ref_value="2"/>
          </divider_vertical>

          <!-- Firmware restart button container (ONLY visible when klippy SHUTDOWN) -->
          <lv_obj height="100%"
                  flex_grow="1" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column"
                  style_flex_main_place="center" style_flex_track_place="center" hidden="true">
            <bind_flag_if_not_eq subject="klippy_state" flag="hidden" ref_value="2"/>
            <!-- Circular button: uses primary_color to indicate "safe" recovery action -->
            <lv_button name="firmware_restart_button_home"
                       width="#button_height_sm" height="#button_height_sm" style_radius="24"
                       style_bg_color="#primary_color" style_border_width="2" style_border_color="#text_primary"
                       style_shadow_width="0" style_pad_all="0" align="center">
              <icon src="refresh" size="sm" color="#text_primary" align="center"/>
              <event_cb trigger="clicked" callback="firmware_restart_clicked"/>
            </lv_button>
          </lv_obj>
        </lv_obj>

        <!-- Bottom Row: Temperature, Network, Light -->
        <lv_obj width="100%"
                flex_grow="1" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="row"
                style_flex_cross_place="center">

          <!-- Temperature display - icon on top, text below -->
          <!-- Icon color controlled by HeatingIconAnimator (gradient + pulse while heating) -->
          <!-- Disabled when not connected (state != 2) using LVGL's native disabled state -->
          <lv_button name="temp_btn"
                     height="100%" flex_grow="1" style_bg_opa="0" style_shadow_width="0" style_border_width="0"
                     style_radius="0" style_pad_all="0" flex_flow="column" style_flex_main_place="center"
                     style_flex_cross_place="center">
            <bind_state_if_not_eq subject="printer_connection_state" state="disabled" ref_value="2"/>
            <event_cb trigger="clicked" callback="temp_clicked_cb"/>
            <icon name="temp_icon" src="heater" size="#icon_size_card" variant="secondary"/>
            <temp_display name="temp_text_label"
                          width="100%" size="md" show_target="false" bind_current="extruder_temp"
                          bind_target="extruder_target" align="center"/>
          </lv_button>

          <!-- Vertical divider (hidden if no LED capability) -->
          <divider_vertical name="divider2" height="80%">
            <bind_flag_if_eq subject="printer_has_led" flag="hidden" ref_value="0"/>
          </divider_vertical>

          <!-- Light control button - single icon with dynamic brightness/color -->
          <lv_button name="light_button"
                     height="100%" flex_grow="1" style_bg_opa="0%" style_border_width="0" style_pad_all="0"
                     style_shadow_width="0">
            <bind_flag_if_eq subject="printer_has_led" flag="hidden" ref_value="0"/>
            <bind_state_if_not_eq subject="printer_connection_state" state="disabled" ref_value="2"/>
            <!-- Dynamic icon - source and color set by C++ based on LED brightness/color -->
            <icon name="light_icon" src="lightbulb_outline" size="#icon_size_card" align="center" color="#theme_gray"/>
            <event_cb trigger="clicked" callback="light_toggle_cb"/>
          </lv_button>

          <!-- Divider before AMS - visibility bound to ams_slot_count subject -->
          <divider_vertical name="ams_divider" height="80%">
            <bind_flag_if_eq subject="ams_slot_count" flag="hidden" ref_value="0"/>
          </divider_vertical>

          <!-- AMS status indicator - visibility bound to ams_slot_count subject -->
          <lv_obj height="100%" flex_grow="1" style_bg_opa="0" style_border_width="0" style_pad_all="0">
            <bind_flag_if_eq subject="ams_slot_count" flag="hidden" ref_value="0"/>
            <!-- ams_mini_status auto-binds to AmsState and handles its own click -->
            <ams_mini_status/>
          </lv_obj>

          <!-- Vertical divider for filament sensor (hidden if no sensors) -->
          <divider_vertical name="divider_filament" height="80%">
            <bind_flag_if_eq subject="show_filament_status" flag="hidden" ref_value="0"/>
          </divider_vertical>

          <!-- Filament sensor status (hidden if no sensors, or has AMS and not in bypass) -->
          <lv_obj name="filament_status_container"
                  height="100%" flex_grow="1" style_bg_opa="0" style_border_width="0" style_pad_all="0"
                  flex_flow="column" style_flex_main_place="center" style_flex_cross_place="center"
                  style_flex_track_place="center">
            <bind_flag_if_eq subject="show_filament_status" flag="hidden" ref_value="0"/>
            <filament_sensor_indicator/>
            <text_tiny text="Loaded" style_text_align="center">
              <bind_flag_if_not_eq subject="filament_runout_detected" flag="hidden" ref_value="1"/>
            </text_tiny>
            <text_tiny text="Empty" style_text_align="center">
              <bind_flag_if_not_eq subject="filament_runout_detected" flag="hidden" ref_value="0"/>
            </text_tiny>
          </lv_obj>
        </lv_obj>


        <!-- Plugin injection point: widgets from plugins appear here -->
        <!-- Plugins can inject status widgets, indicators, or custom controls -->
        <lv_obj name="home_widget_area"
                width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0"
                flex_flow="column" style_pad_gap="#space_sm"/>
      </ui_card>
    </lv_obj>
  </view>
</component>

<component>
	<!-- Now references global constants from globals.xml -->
	<view extends="lv_obj" width="100%" height="100%" style_bg_color="#panel_bg" style_pad_all="0" style_border_width="0" flex_flow="column">
		<!-- Top section: Printer visualization -->
		<lv_obj width="100%" flex_grow="2" style_bg_opa="0%" style_border_width="0" style_pad_all="#padding_normal" flex_flow="row" style_flex_main_place="center" style_flex_cross_place="center" style_pad_gap="#padding_normal">
			<!-- Printer Image -->
			<lv_image src="A:assets/images/printer_400.png" width="#printer_img_size" height="#printer_img_size"/>

			<!-- Status Message with accent bar (flex-grows to fill available space) -->
			<lv_obj flex_grow="1" style_bg_opa="0%" style_border_width="0" style_pad_all="0" flex_flow="row" style_flex_cross_place="center" style_pad_gap="#accent_bar_gap">
				<!-- Vertical accent bar -->
				<lv_obj width="#accent_bar_width" height="#accent_bar_height" style_bg_color="#primary_color" style_bg_opa="255" style_radius="2" style_border_width="0"/>

				<!-- Status text (flex-grows to fill remaining width) -->
				<lv_label flex_grow="1" bind_text="status_text" style_text_color="#text_primary" style_text_font="montserrat_20" style_text_align="left"/>
			</lv_obj>
		</lv_obj>

		<!-- Bottom section: Info cards -->
		<lv_obj width="100%" flex_grow="1" style_bg_opa="0%" style_border_width="0" style_pad_all="#padding_normal" flex_flow="row" flex_align="space_evenly center center">
			<!-- Print Files Card -->
			<lv_obj width="#card_width" height="#card_height" style_bg_color="#card_bg" style_radius="#card_radius" style_border_width="0" style_pad_all="#padding_normal" flex_flow="column" style_flex_main_place="center" style_flex_cross_place="center">
				<lv_label text="Print Files" style_text_color="#text_primary" style_text_font="montserrat_16"/>
			</lv_obj>

			<!-- Status Card (Temperature, Network, Light) -->
			<lv_obj width="#card_width" height="#card_height" style_bg_color="#card_bg" style_radius="#card_radius" style_border_width="0" style_pad_all="#padding_normal" flex_flow="row" style_flex_cross_place="center">
				<!-- Temperature display - icon on top, text below -->
				<lv_obj flex_grow="1" height="100%" style_bg_opa="0%" style_border_width="0" style_pad_all="0" flex_flow="column" style_flex_main_place="center" style_flex_cross_place="center">
					<lv_label text="#icon_temperature" style_text_color="#text_secondary" style_text_font="fa_icons_48" style_text_align="center" width="100%"/>
					<lv_label bind_text="temp_text" style_text_color="#text_primary" style_text_font="montserrat_16" style_text_align="center" width="100%"/>
				</lv_obj>

				<!-- Vertical divider -->
				<lv_obj width="1" style_align_self="stretch" style_bg_color="#text_secondary" style_bg_opa="50%" style_border_width="0" style_pad_all="0" style_pad_top="8" style_pad_bottom="8"/>

				<!-- Network status - icon on top, label below (centered) -->
				<lv_obj flex_grow="1" height="100%" style_bg_opa="0%" style_border_width="0" style_pad_all="0" flex_flow="column" style_flex_main_place="center" style_flex_cross_place="center">
					<lv_label name="network_icon" text="#icon_wifi" style_text_color="#primary_color" style_text_font="fa_icons_48" style_text_align="center" width="100%"/>
					<lv_label name="network_label" text="Wi-Fi" style_text_color="#text_secondary" style_text_font="montserrat_16" style_text_align="center" width="100%"/>
				</lv_obj>

				<!-- Vertical divider -->
				<lv_obj width="1" style_align_self="stretch" style_bg_color="#text_secondary" style_bg_opa="50%" style_border_width="0" style_pad_all="0" style_pad_top="8" style_pad_bottom="8"/>

				<!-- Light control button - icon only -->
				<lv_obj flex_grow="1" height="100%" style_bg_opa="0%" style_border_width="0" style_pad_all="0" flag_clickable="true" flex_flow="column" style_flex_main_place="center" style_flex_cross_place="center">
					<lv_label name="light_icon" text="#icon_lightbulb" style_text_color="#text_secondary" style_text_font="fa_icons_48" style_text_align="center" width="100%"/>
					<lv_event-call_function trigger="clicked" callback="light_toggle_cb"/>
				</lv_obj>
			</lv_obj>
		</lv_obj>
	</view>
</component>

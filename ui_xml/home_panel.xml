<component>
  <!-- Component-local constants for theme-aware colors and dimensions -->
  <consts>
    <!-- Light icon color when light is ON (bright yellow) -->
    <color name="light_icon_on" value="#FFD700"/>
    <!-- Light icon color when light is OFF (muted gray) -->
    <color name="light_icon_off" value="#808080"/>
    <!-- Component-specific dimensions (home panel layout) -->
    <px name="accent_bar_width" value="4"/>
    <px name="accent_bar_gap" value="18"/>
    <!-- Printer image container: percentage of parent for responsive sizing -->
    <percentage name="printer_container_width" value="40%"/>
  </consts>
  <!-- Styles for printer image connection state -->
  <styles>
    <!-- Dimmed image when printer is not connected (state 0 or 1) -->
    <style name="image_dimmed" image_opa="128"/>
  </styles>
  <!-- Now references global constants from globals.xml -->
  <view extends="lv_obj" width="100%" height="100%" style_pad_all="0" style_border_width="0" flex_flow="column">
    <!-- Top section: Printer visualization + Tip -->
    <lv_obj width="100%" flex_grow="2" style_bg_opa="0%" style_border_width="0" style_pad_all="#space_lg" flex_flow="row" style_flex_main_place="center" style_flex_cross_place="center" scrollable="false">
      <!-- Printer Image Container: fixed percentage width, image scales to fit via inner_align="contain" -->
      <lv_obj name="printer_container" width="#printer_container_width" height="100%" style_bg_opa="0%" style_border_width="0" style_pad_all="0" style_pad_bottom="#space_lg" scrollable="false" align="center">
        <lv_image name="printer_image" src="A:assets/images/printer_400.png" width="100%" height="100%" inner_align="contain">
          <!-- Dim image when disconnected (state 0) or connecting (state 1) -->
          <bind_style name="image_dimmed" subject="printer_connection_state" ref_value="0"/>
          <bind_style name="image_dimmed" subject="printer_connection_state" ref_value="1"/>
        </lv_image>
        <!-- Disconnected overlay - shown when NOT connected (state != 2) -->
        <icon name="disconnected_overlay" src="prohibited" size="xl" align="center" color="#error_color">
          <lv_obj-bind_flag_if_eq subject="printer_connection_state" flag="hidden" ref_value="2"/>
        </icon>
        <!-- Printer info - subtle text at bottom -->
        <lv_obj name="printer_info_bar" width="100%" height="content" align="bottom_mid" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column" style_flex_main_place="center" style_flex_cross_place="center">
          <lv_obj-bind_flag_if_eq subject="printer_info_visible" flag="hidden" ref_value="0"/>
          <text_small bind_text="printer_type_text" style_text_color="#text_primary" style_text_align="center" width="100%"/>
        </lv_obj>
      </lv_obj>
      <!-- Status Message with accent bar (flex-grows to fill remaining horizontal space) -->
      <lv_obj flex_grow="1" style_bg_opa="0%" style_border_width="0" style_pad_all="0" flex_flow="row" style_flex_cross_place="center" style_pad_gap="#accent_bar_gap">
        <!-- Vertical accent bar (height fills container) -->
        <lv_obj name="status_accent_bar" width="#accent_bar_width" height="100%" style_bg_color="#primary_color" style_bg_opa="255" style_radius="2" style_border_width="0" style_pad_all="0"/>
        <!-- Status text container with padding for breathing room -->
        <lv_obj flex_grow="1" style_bg_opa="0%" style_border_width="0" style_pad_ver="8" style_pad_hor="0" flex_flow="row" style_pad_gap="#space_sm" clickable="true">
          <event_cb trigger="clicked" callback="tip_text_clicked_cb"/>
          <!-- "Tip: " prefix -->
          <text_heading text="Tip:"/>
          <!-- Tip text (bound to subject) -->
          <text_heading name="status_text_label" bind_text="status_text" flex_grow="1" long_mode="wrap"/>
          <!-- Question mark icon -->
          <lv_label text="#icon_question_circle" style_text_font="mdi_icons_24"/>
        </lv_obj>
      </lv_obj>
    </lv_obj>
    <!-- Bottom section: Info cards (40% of height via flex_grow="2", balances with top section's flex_grow="3") -->
    <lv_obj width="100%" flex_grow="2" style_bg_opa="0%" style_border_width="0" style_pad_all="#space_lg" flex_flow="row" style_pad_gap="#space_md" style_flex_cross_place="stretch" scrollable="false">
      <!-- Print Files Card - Benchy thumbnail + text in horizontal layout -->
      <lv_button name="print_card" width="content" height="100%" style_radius="#border_radius" style_border_width="0" style_pad_all="#space_lg" style_shadow_width="0" flex_flow="row" style_flex_main_place="center" style_flex_cross_place="center" style_flex_track_place="center" style_pad_gap="#space_sm">
        <!-- Benchy thumbnail - white silhouette for dark theme -->
        <lv_image src="A:assets/images/benchy_thumbnail_white.png" width="content" height="100%" inner_align="contain"/>
        <text_body text="Print Files"/>
        <event_cb trigger="clicked" callback="print_card_clicked_cb"/>
      </lv_button>
      <!-- Status Card - Column layout with status row on top, info row below -->
      <ui_card name="status_card" flex_grow="2" height="100%" style_radius="#border_radius" style_pad_all="#space_md" flex_flow="column" style_pad_gap="#space_sm">
        <!-- Top Row: Spacer + Printer Status + Divider + Notification (aligned with bottom row) -->
        <!-- Uses flex_grow="1" like bottom row so divider height="80%" works correctly -->
        <lv_obj width="100%" flex_grow="1" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="row" style_flex_cross_place="center">
          <!-- Spacer to match temperature column -->
          <lv_obj flex_grow="1" height="1" style_bg_opa="0" style_border_width="0"/>
          <!-- Divider spacer (matches divider1 position) -->
          <lv_obj width="1" height="1" style_bg_opa="0" style_border_width="0"/>
          
          <!-- Printer Status (above network column) -->
          <lv_obj flex_grow="1" height="100%" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column" style_flex_main_place="center" style_flex_track_place="center">
            <lv_button name="status_btn_printer" align="center" style_bg_opa="0" style_shadow_width="0" style_border_width="0" style_radius="0" style_pad_all="0">
              <!-- Ready (green) - state 0 -->
              <icon name="printer_icon_ready" src="printer_3d" size="#icon_size_card" variant="success" hidden="true">
                <lv_obj-bind_flag_if_not_eq subject="printer_icon_state" flag="hidden" ref_value="0"/>
              </icon>
              <!-- Warning (orange) - state 1 -->
              <icon name="printer_icon_warning" src="printer_3d" size="#icon_size_card" variant="warning" hidden="true">
                <lv_obj-bind_flag_if_not_eq subject="printer_icon_state" flag="hidden" ref_value="1"/>
              </icon>
              <!-- Error (red) - state 2 -->
              <icon name="printer_icon_error" src="printer_3d" size="#icon_size_card" variant="error" hidden="true">
                <lv_obj-bind_flag_if_not_eq subject="printer_icon_state" flag="hidden" ref_value="2"/>
              </icon>
              <!-- Disconnected (gray) - state 3 (default) -->
              <icon name="printer_icon_disconnected" src="printer_3d" size="#icon_size_card" variant="secondary">
                <lv_obj-bind_flag_if_not_eq subject="printer_icon_state" flag="hidden" ref_value="3"/>
              </icon>
            </lv_button>
          </lv_obj>
          <!-- Vertical divider (above divider2) -->
          <lv_obj name="status_divider" width="1" height="80%" style_bg_color="#text_secondary" style_bg_opa="128" style_border_width="0" style_pad_all="0"/>
          <!-- Notification (above light column) -->
          <lv_obj flex_grow="1" height="100%" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column" style_flex_main_place="center" style_flex_track_place="center">
            <lv_obj name="status_notification_container" width="content" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0">
              <lv_button name="status_btn_notification" align="center" style_bg_opa="0" style_shadow_width="0" style_border_width="0" style_radius="0" style_pad_all="0">
                <event_cb trigger="clicked" callback="status_notification_history_clicked"/>
                <icon name="status_notification_icon" src="notifications" size="#icon_size_card" variant="secondary" align="center"/>
              </lv_button>
              <!-- Notification Count Badge -->
              <lv_obj name="notification_badge" width="18" height="18" align="top_right" x="4" y="-4" style_radius="9" style_border_width="0" style_pad_all="0" hidden="true" scrollable="false" clickable="true">
                <lv_obj-bind_flag_if_eq subject="notification_count" flag="hidden" ref_value="0"/>
                <event_cb trigger="clicked" callback="status_notification_history_clicked"/>
                <!-- Info (blue) - severity 0 -->
                <lv_obj name="badge_bg_info" width="100%" height="100%" style_radius="9" style_bg_color="#info_color" style_border_width="0">
                  <lv_obj-bind_flag_if_not_eq subject="notification_severity" flag="hidden" ref_value="0"/>
                </lv_obj>
                <!-- Warning (orange) - severity 1 -->
                <lv_obj name="badge_bg_warning" width="100%" height="100%" style_radius="9" style_bg_color="#warning_color" style_border_width="0" hidden="true">
                  <lv_obj-bind_flag_if_not_eq subject="notification_severity" flag="hidden" ref_value="1"/>
                </lv_obj>
                <!-- Error (red) - severity 2 -->
                <lv_obj name="badge_bg_error" width="100%" height="100%" style_radius="9" style_bg_color="#error_color" style_border_width="0" hidden="true">
                  <lv_obj-bind_flag_if_not_eq subject="notification_severity" flag="hidden" ref_value="2"/>
                </lv_obj>
                <text_small name="notification_badge_count" bind_text="notification_count_text" style_pad_top="0" align="center" style_text_color="#keyboard_key_light"/>
              </lv_obj>
            </lv_obj>
          </lv_obj>
        </lv_obj>

        <!-- Bottom Row: Temperature, Network, Light -->
        <lv_obj width="100%" flex_grow="1" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="row" style_flex_cross_place="center">
        <!-- Temperature display - icon on top, text below -->
        <lv_obj flex_grow="1" height="100%" style_bg_opa="0%" style_border_width="0" style_pad_all="0" flex_flow="column" style_flex_main_place="center" style_flex_cross_place="center">
          <icon name="temp_icon" src="heater" size="#icon_size_card" variant="secondary"/>
          <text_body name="temp_text_label" bind_text="temp_text" style_text_align="center" width="100%"/>
        </lv_obj>
        <!-- Vertical divider (80% height for visual breathing room) -->
        <lv_obj name="divider1" width="1" height="80%" style_bg_color="#text_secondary" style_bg_opa="50%" style_border_width="0" style_pad_all="0"/>
        <!-- Network status - icon on top, label below (centered) -->
        <!-- Icons switch based on home_network_icon_state: 0=disconnected, 1-4=wifi strength, 5=ethernet -->
        <!-- Note: Uses different subject than navigation_bar's network_icon_state (simpler 3-state) -->
        <lv_obj flex_grow="1" height="100%" style_bg_opa="0%" style_border_width="0" style_pad_all="0" flex_flow="column" style_flex_main_place="center" style_flex_cross_place="center">
          <!-- Disconnected (state 0) -->
          <icon name="net_disconnected" src="wifi_off" size="#icon_size_card" variant="disabled">
            <lv_obj-bind_flag_if_not_eq subject="home_network_icon_state" flag="hidden" ref_value="0"/>
          </icon>
          <!-- WiFi strength 1 - weak (state 1) - warning color -->
          <icon name="net_wifi_1" src="wifi_strength_1_alert" size="#icon_size_card" variant="warning">
            <lv_obj-bind_flag_if_not_eq subject="home_network_icon_state" flag="hidden" ref_value="1"/>
          </icon>
          <!-- WiFi strength 2 - fair (state 2) -->
          <icon name="net_wifi_2" src="wifi_strength_2" size="#icon_size_card" variant="secondary">
            <lv_obj-bind_flag_if_not_eq subject="home_network_icon_state" flag="hidden" ref_value="2"/>
          </icon>
          <!-- WiFi strength 3 - good (state 3) -->
          <icon name="net_wifi_3" src="wifi_strength_3" size="#icon_size_card" variant="secondary">
            <lv_obj-bind_flag_if_not_eq subject="home_network_icon_state" flag="hidden" ref_value="3"/>
          </icon>
          <!-- WiFi strength 4 - strong (state 4) -->
          <icon name="net_wifi_4" src="wifi_strength_4" size="#icon_size_card" variant="secondary">
            <lv_obj-bind_flag_if_not_eq subject="home_network_icon_state" flag="hidden" ref_value="4"/>
          </icon>
          <!-- Ethernet (state 5) -->
          <icon name="net_ethernet" src="ethernet" size="#icon_size_card" variant="secondary">
            <lv_obj-bind_flag_if_not_eq subject="home_network_icon_state" flag="hidden" ref_value="5"/>
          </icon>
          <text_body name="network_label" bind_text="network_label" style_text_align="center" width="100%"/>
        </lv_obj>
        <!-- Vertical divider (hidden if no LED capability) -->
        <lv_obj name="divider2" width="1" height="80%" style_bg_color="#text_secondary" style_bg_opa="50%" style_border_width="0" style_pad_all="0">
          <lv_obj-bind_flag_if_eq subject="printer_has_led" flag="hidden" ref_value="0"/>
        </lv_obj>
        <!-- Light control button - uses two icons with conditional visibility for reactive on/off state -->
        <!-- Hidden if printer doesn't have LED capability -->
        <lv_button name="light_button" flex_grow="1" height="100%" style_bg_opa="0%" style_border_width="0" style_pad_all="0" style_shadow_width="0">
          <lv_obj-bind_flag_if_eq subject="printer_has_led" flag="hidden" ref_value="0"/>
          <!-- OFF state icon (gray) - visible when led_state == 0 -->
          <icon name="light_icon_off" src="light" size="#icon_size_card" align="center" color="#light_icon_off">
            <lv_obj-bind_flag_if_not_eq subject="led_state" flag="hidden" ref_value="0"/>
          </icon>
          <!-- ON state icon (gold) - visible when led_state == 1 -->
          <icon name="light_icon_on" src="light" size="#icon_size_card" align="center" color="#light_icon_on">
            <lv_obj-bind_flag_if_eq subject="led_state" flag="hidden" ref_value="0"/>
          </icon>
          <event_cb trigger="clicked" callback="light_toggle_cb"/>
        </lv_button>
        </lv_obj>
      </ui_card>
    </lv_obj>
  </view>
</component>

<component>

  <!-- Component-local constants for theme-aware colors and dimensions -->
  <consts>
    <!-- Light icon color when light is ON (bright yellow) -->
    <const name="light_icon_on_light" value="#FFD700"/>
    <const name="light_icon_on_dark" value="#FFD700"/>
    <!-- Light icon color when light is OFF (muted gray) -->
    <const name="light_icon_off_light" value="#707070"/>
    <const name="light_icon_off_dark" value="#909090"/>
    <!-- Component-specific dimensions (home panel layout) -->
    <px name="accent_bar_width" value="4"/>
    <px name="accent_bar_gap" value="18"/>
    <!-- Printer image container: percentage of parent for responsive sizing -->
    <percentage name="printer_container_width" value="40%"/>
  </consts>

  <!-- Now references global constants from globals.xml -->
  <view extends="lv_obj" width="100%" height="100%" style_pad_all="0" style_border_width="0" flex_flow="column">
    <!-- Top section: Printer visualization + Tip (60% of height via flex_grow="3") -->
    <lv_obj width="100%" flex_grow="3" style_bg_opa="0%" style_border_width="0" style_pad_all="#padding_normal" flex_flow="row" style_flex_main_place="center" style_flex_cross_place="center" scrollable="false">
      <!-- Printer Image Container: fixed percentage width, image scales to fit via inner_align="contain" -->
      <lv_obj name="printer_container" width="#printer_container_width" height="100%" style_bg_opa="0%" style_border_width="0" style_pad_all="0" scrollable="false">
        <lv_image name="printer_image" src="A:assets/images/printer_400.png" width="100%" height="100%" inner_align="contain"/>
        <!-- Disconnected overlay - shown when NOT connected (state != 2) -->
        <icon name="disconnected_overlay" src="mat_prohibited" size="xl" align="center"
              style_image_recolor="#error_color" style_image_recolor_opa="255">
          <lv_obj-bind_flag_if_eq subject="printer_connection_state" flag="hidden" ref_value="2"/>
        </icon>
      </lv_obj>
      <!-- Status Message with accent bar (flex-grows to fill remaining horizontal space) -->
      <lv_obj flex_grow="1" style_bg_opa="0%" style_border_width="0" style_pad_all="0" flex_flow="row" style_flex_cross_place="center" style_pad_gap="#accent_bar_gap">
        <!-- Vertical accent bar (height fills container) -->
        <lv_obj name="status_accent_bar" width="#accent_bar_width" height="100%" style_bg_color="#primary_color" style_bg_opa="255" style_radius="2" style_border_width="0" style_pad_all="0"/>
        <!-- Status text container with padding for breathing room -->
        <lv_obj flex_grow="1" style_bg_opa="0%" style_border_width="0" style_pad_ver="8" style_pad_hor="0" flex_flow="row" style_pad_gap="8" clickable="true">
          <event_cb trigger="clicked" callback="tip_text_clicked_cb"/>
          <!-- "Tip: " prefix -->
          <lv_label text="Tip:" style_text_font="#font_heading"/>
          <!-- Tip text (bound to subject) -->
          <lv_label name="status_text_label" bind_text="status_text" style_text_font="#font_heading"
                    flex_grow="1" long_mode="wrap"/>
          <!-- Question mark icon -->
          <lv_label text="#icon_question_circle" style_text_font="fa_icons_24"/>
        </lv_obj>
      </lv_obj>
    </lv_obj>
    <!-- Bottom section: Info cards (40% of height via flex_grow="2", balances with top section's flex_grow="3") -->
    <lv_obj width="100%" flex_grow="2" style_bg_opa="0%" style_border_width="0" style_pad_all="#padding_normal" flex_flow="row" style_pad_gap="#gap_normal" style_flex_cross_place="stretch" scrollable="false">
      <!-- Print Files Card - content-sized with minimum height -->
      <lv_button name="print_card" flex_grow="1" height="100%" style_radius="#border_radius" style_border_width="0" style_pad_all="#padding_normal" style_shadow_width="0">
        <lv_label text="Print Files" style_text_font="#font_body" align="center"/>
        <event_cb trigger="clicked" callback="print_card_clicked_cb"/>
      </lv_button>
      <!-- Status Card (Temperature, Network, Light) - uses flex to distribute space evenly -->
      <ui_card name="status_card" flex_grow="2" height="100%" style_radius="#border_radius" style_pad_all="#padding_small" flex_flow="row" style_flex_cross_place="center">
        <!-- Temperature display - icon on top, text below -->
        <lv_obj flex_grow="1" height="100%" style_bg_opa="0%" style_border_width="0" style_pad_all="0" flex_flow="column" style_flex_main_place="center" style_flex_cross_place="center">
          <icon name="temp_icon" src="mat_extruder" variant="secondary"/>
          <lv_label name="temp_text_label" bind_text="temp_text" style_text_font="#font_body" style_text_align="center" width="100%"/>
        </lv_obj>
        <!-- Vertical divider (80% height for visual breathing room) -->
        <lv_obj name="divider1" width="1" height="80%" style_bg_color="#text_secondary" style_bg_opa="50%" style_border_width="0" style_pad_all="0"/>
        <!-- Network status - icon on top, label below (centered) -->
        <lv_obj flex_grow="1" height="100%" style_bg_opa="0%" style_border_width="0" style_pad_all="0" flex_flow="column" style_flex_main_place="center" style_flex_cross_place="center">
          <lv_label name="network_icon" bind_text="network_icon" style_text_font="fa_icons_48" style_text_align="center" width="100%"/>
          <lv_label name="network_label" bind_text="network_label" style_text_font="#font_body" style_text_align="center" width="100%"/>
        </lv_obj>
        <!-- Vertical divider -->
        <lv_obj name="divider2" width="1" height="80%" style_bg_color="#text_secondary" style_bg_opa="50%" style_border_width="0" style_pad_all="0"/>
        <!-- Light control button - uses two icons with conditional visibility for reactive on/off state -->
        <lv_button name="light_button" flex_grow="1" height="100%" style_bg_opa="0%" style_border_width="0" style_pad_all="0" style_shadow_width="0">
          <!-- OFF state icon (gray) - visible when led_state == 0 -->
          <icon name="light_icon_off" src="mat_light" align="center"
                style_image_recolor="#light_icon_off_dark" style_image_recolor_opa="255">
            <lv_obj-bind_flag_if_not_eq subject="led_state" flag="hidden" ref_value="0"/>
          </icon>
          <!-- ON state icon (gold) - visible when led_state == 1 -->
          <icon name="light_icon_on" src="mat_light" align="center"
                style_image_recolor="#light_icon_on_dark" style_image_recolor_opa="255">
            <lv_obj-bind_flag_if_eq subject="led_state" flag="hidden" ref_value="0"/>
          </icon>
          <event_cb trigger="clicked" callback="light_toggle_cb"/>
        </lv_button>
      </ui_card>
    </lv_obj>
  </view>
</component>

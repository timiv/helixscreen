	<percentage name="launcher_card_width" value="47%" />
	<!-- 47% = 2 cards per row on tiny screens, wraps to 2-3-4 cards on larger screens -->
	<px name="launcher_card_height" value="200" />
	<!-- Fixed height for consistent appearance -->
	<px name="launcher_card_padding" value="16" />
	<!-- Reduced padding for compact layouts (was 24px) -->
	<px name="launcher_card_icon_padding" value="12" />
	<!-- Icon bottom padding (was 16px) -->
	<px name="launcher_card_title_padding" value="6" />

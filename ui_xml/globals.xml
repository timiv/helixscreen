	<px name="home_button_height" value="44" />
	<!-- Increased from 40 for better proportions -->
	<px name="z_button_width" value="140" />
	<!-- Increased from 120 to fit icon + "10mm" text -->
	<px name="z_button_height" value="58" />
	<!-- Increased slightly for better proportions -->
	<px name="position_card_height" value="140" />
	<px name="z_controls_height" value="280" />
	<!-- Increased to accommodate taller Z buttons -->

	<!-- Overlay/Modal Panel Dimensions -->
	<!-- Used for numeric keypad, temperature panels, and other overlay panels -->
	<!-- Responsive percentages: 68% = standard overlays, 83% = complex 2-column layouts -->
	<percentage name="overlay_panel_width" value="68%" />
	<!-- Standard overlay width (temps, simple panels) -->
	<percentage name="overlay_panel_width_large" value="83%" />
	<!-- Large overlay width (motion, complex 2-column panels) -->

	<!-- Numeric Keypad Modal colors only - sizing uses semantic constants above -->
	<!-- (keypad_padding, keypad_section_gap, etc. removed - use padding_small, gap_normal, etc.) -->

	<!-- Keypad colors -->
	<color name="keypad_bg" value="0x2a2a2a" />
	<!-- Dark card background -->
	<color name="keypad_input_bg" value="0x1e1e1e" />
	<!-- Darker input display -->
	<color name="keypad_button_bg" value="0x505050" />
	<!-- Number button gray (much lighter!) -->
	<color name="keypad_button_esc_bg" value="0x666666" />
	<!-- ESC mid-gray -->
	<color name="keypad_ok_bg" value="0x4caf50" />
	<!-- Green OK button -->
	<color name="keypad_accent_orange" value="0xff9800" />

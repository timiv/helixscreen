	<!-- Detail view dimensions -->
	<px name="detail_metadata_height" value="100" />
	<px name="detail_back_icon_size" value="32" />
	<px name="detail_separator_height" value="2" />

	<!-- Motion panel dimensions -->
	<px name="jog_button_size" value="76" />

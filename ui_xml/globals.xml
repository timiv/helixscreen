	<!-- Right action button width -->
	<px name="header_right_button_height" value="40" />
	<!-- Right action button height -->
	<px name="progress_bar_height" value="16" />
	<!-- Progress indicator height -->
	<px name="divider_height" value="1" />
	<!-- Separator line height -->
	<opa name="divider_opacity" value="30" />

<!-- Firmware Retraction Settings Overlay -->
<!-- Configures G10/G11 retraction parameters (retract length, speed, unretract extra, etc.) -->
<!-- XML-First Design: All layout/styling here; C++ only provides subjects and callbacks -->
<component>
  <view name="retraction_settings_overlay"
        extends="overlay_panel" width="#overlay_panel_width_full" title="Retraction Settings" title_tag="Retraction Settings" bg_color="#screen_bg">
    <!-- Content Area -->
    <lv_obj name="overlay_content"
            width="100%" flex_grow="1" style_pad_all="#space_lg" scrollable="true" flex_flow="column"
            style_pad_gap="#space_lg">
      <!-- ================================================================== -->
      <!-- ENABLE RETRACTION SECTION -->
      <!-- ================================================================== -->
      <lv_obj width="100%"
              height="content" style_pad_all="0" scrollable="false" flex_flow="row"
              style_flex_main_place="space_between" style_flex_cross_place="center">
        <!-- Label with Icon -->
        <lv_obj height="content"
                style_pad_all="0" scrollable="false" flex_flow="row" style_flex_cross_place="center"
                style_pad_gap="#space_sm">
          <icon src="arrow_up_right" size="sm" variant="secondary"/>
          <lv_obj height="content" style_pad_all="0" scrollable="false" flex_flow="column" style_pad_gap="#space_xxs">
            <text_body text="Enable Retraction" translation_tag="Enable Retraction"/>
            <text_small text="Use G10/G11 firmware retraction" translation_tag="Use G10/G11 firmware retraction"/>
          </lv_obj>
        </lv_obj>
        <!-- Toggle Switch -->
        <ui_switch name="retraction_enabled_switch" size="small">
          <event_cb trigger="value_changed" callback="on_retraction_enabled_changed"/>
        </ui_switch>
      </lv_obj>
      <!-- Divider -->
      <divider_horizontal/>
      <!-- ================================================================== -->
      <!-- RETRACT LENGTH SECTION -->
      <!-- ================================================================== -->
      <lv_obj name="retract_length_section"
              width="100%" height="content" style_pad_all="0" scrollable="false" flex_flow="column"
              style_pad_gap="#space_sm">
        <!-- Section Label -->
        <lv_obj width="100%"
                height="content" style_pad_all="0" scrollable="false" flex_flow="row"
                style_flex_main_place="space_between" style_flex_cross_place="center">
          <lv_obj height="content" style_pad_all="0" scrollable="false" flex_flow="column" style_pad_gap="#space_xxs">
            <text_body text="Retract Length" translation_tag="Retract Length"/>
            <text_small text="0.4-2mm direct drive, 4-6mm bowden" translation_tag="0.4-2mm direct drive, 4-6mm bowden"/>
          </lv_obj>
          <!-- Current value display -->
          <text_body name="retract_length_label" bind_text="retract_length_display"/>
        </lv_obj>
        <!-- Slider -->
        <lv_obj width="100%"
                height="50" style_pad_left="#space_md" style_pad_right="#space_md" style_pad_top="#space_md"
                style_pad_bottom="#space_md" scrollable="false" flex_flow="row" style_flex_cross_place="center">
          <text_small width="30" text="0"/>
          <lv_slider name="retract_length_slider"
                     flex_grow="1" min_value="0" max_value="600" value="80" style_margin_left="#space_sm"
                     style_margin_right="#space_sm">
            <event_cb trigger="value_changed" callback="on_retraction_setting_changed"/>
          </lv_slider>
          <text_small width="40" text="6mm" translation_tag="6mm"/>
        </lv_obj>
      </lv_obj>
      <!-- Divider -->
      <divider_horizontal/>
      <!-- ================================================================== -->
      <!-- RETRACT SPEED SECTION -->
      <!-- ================================================================== -->
      <lv_obj name="retract_speed_section"
              width="100%" height="content" style_pad_all="0" scrollable="false" flex_flow="column"
              style_pad_gap="#space_sm">
        <!-- Section Label -->
        <lv_obj width="100%"
                height="content" style_pad_all="0" scrollable="false" flex_flow="row"
                style_flex_main_place="space_between" style_flex_cross_place="center">
          <lv_obj height="content" style_pad_all="0" scrollable="false" flex_flow="column" style_pad_gap="#space_xxs">
            <text_body text="Retract Speed" translation_tag="Retract Speed"/>
            <text_small text="Speed of retraction movement" translation_tag="Speed of retraction movement"/>
          </lv_obj>
          <!-- Current value display -->
          <text_body name="retract_speed_label" bind_text="retract_speed_display"/>
        </lv_obj>
        <!-- Slider -->
        <lv_obj width="100%"
                height="50" style_pad_left="#space_md" style_pad_right="#space_md" style_pad_top="#space_md"
                style_pad_bottom="#space_md" scrollable="false" flex_flow="row" style_flex_cross_place="center">
          <text_small width="30" text="10"/>
          <lv_slider name="retract_speed_slider"
                     flex_grow="1" min_value="10" max_value="80" value="35" style_margin_left="#space_sm"
                     style_margin_right="#space_sm">
            <event_cb trigger="value_changed" callback="on_retraction_setting_changed"/>
          </lv_slider>
          <text_small width="30" text="80"/>
        </lv_obj>
      </lv_obj>
      <!-- Divider -->
      <divider_horizontal/>
      <!-- ================================================================== -->
      <!-- UNRETRACT EXTRA LENGTH SECTION -->
      <!-- ================================================================== -->
      <lv_obj name="unretract_extra_section"
              width="100%" height="content" style_pad_all="0" scrollable="false" flex_flow="column"
              style_pad_gap="#space_sm">
        <!-- Section Label -->
        <lv_obj width="100%"
                height="content" style_pad_all="0" scrollable="false" flex_flow="row"
                style_flex_main_place="space_between" style_flex_cross_place="center">
          <lv_obj height="content" style_pad_all="0" scrollable="false" flex_flow="column" style_pad_gap="#space_xxs">
            <text_body text="Unretract Extra" translation_tag="Unretract Extra"/>
            <text_small text="Extra prime to compensate ooze" translation_tag="Extra prime to compensate ooze"/>
          </lv_obj>
          <!-- Current value display -->
          <text_body name="unretract_extra_label" bind_text="unretract_extra_display"/>
        </lv_obj>
        <!-- Slider -->
        <lv_obj width="100%"
                height="50" style_pad_left="#space_md" style_pad_right="#space_md" style_pad_top="#space_md"
                style_pad_bottom="#space_md" scrollable="false" flex_flow="row" style_flex_cross_place="center">
          <text_small width="30" text="0"/>
          <lv_slider name="unretract_extra_slider"
                     flex_grow="1" min_value="0" max_value="100" value="0" style_margin_left="#space_sm"
                     style_margin_right="#space_sm">
            <event_cb trigger="value_changed" callback="on_retraction_setting_changed"/>
          </lv_slider>
          <text_small width="40" text="1mm" translation_tag="1mm"/>
        </lv_obj>
      </lv_obj>
      <!-- Divider -->
      <divider_horizontal/>
      <!-- ================================================================== -->
      <!-- UNRETRACT SPEED SECTION -->
      <!-- ================================================================== -->
      <lv_obj name="unretract_speed_section"
              width="100%" height="content" style_pad_all="0" scrollable="false" flex_flow="column"
              style_pad_gap="#space_sm">
        <!-- Section Label -->
        <lv_obj width="100%"
                height="content" style_pad_all="0" scrollable="false" flex_flow="row"
                style_flex_main_place="space_between" style_flex_cross_place="center">
          <lv_obj height="content" style_pad_all="0" scrollable="false" flex_flow="column" style_pad_gap="#space_xxs">
            <text_body text="Unretract Speed" translation_tag="Unretract Speed"/>
            <text_small text="Speed of prime movement" translation_tag="Speed of prime movement"/>
          </lv_obj>
          <!-- Current value display -->
          <text_body name="unretract_speed_label" bind_text="unretract_speed_display"/>
        </lv_obj>
        <!-- Slider -->
        <lv_obj width="100%"
                height="50" style_pad_left="#space_md" style_pad_right="#space_md" style_pad_top="#space_md"
                style_pad_bottom="#space_md" scrollable="false" flex_flow="row" style_flex_cross_place="center">
          <text_small width="30" text="10"/>
          <lv_slider name="unretract_speed_slider"
                     flex_grow="1" min_value="10" max_value="60" value="35" style_margin_left="#space_sm"
                     style_margin_right="#space_sm">
            <event_cb trigger="value_changed" callback="on_retraction_setting_changed"/>
          </lv_slider>
          <text_small width="30" text="60"/>
        </lv_obj>
      </lv_obj>
      <!-- Spacer to push info to bottom -->
      <lv_obj width="100%" flex_grow="1" scrollable="false"/>
      <!-- Info Note at bottom -->
      <lv_obj width="100%"
              height="content" style_pad_all="0" scrollable="false" flex_flow="row" style_flex_cross_place="center"
              style_pad_gap="#space_sm">
        <icon src="info" size="xs" variant="secondary"/>
        <text_small text="Changes apply immediately. Adjust during print for tuning." translation_tag="Changes apply immediately. Adjust during print for tuning."/>
      </lv_obj>
    </lv_obj>
  </view>
</component>

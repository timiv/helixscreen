<!-- NOTE: Backdrop created programmatically by Modal system -->
<component>
  <!-- Dialog card (backdrop created programmatically) -->
  <view name="wifi_password_modal"
        extends="ui_dialog" width="70%" height="content" align="center" flex_flow="column" style_flex_main_place="start"
        style_pad_gap="0">
    <!-- ============================================================ -->
    <!-- STATE: IDLE - Password entry form (hidden when connecting) -->
    <!-- ============================================================ -->
    <lv_obj name="password_form_container"
            width="100%" height="content" style_min_height="200" style_bg_opa="0" style_border_width="0"
            style_pad_left="#space_lg" style_pad_right="#space_lg" style_pad_top="#space_lg"
            style_pad_bottom="#space_lg" flex_flow="column" style_flex_cross_place="center" style_pad_gap="#space_md">
      <!-- Hide form when wifi_connecting == 1 -->
      <bind_flag_if_eq subject="wifi_connecting" flag="hidden" ref_value="1"/>
      <!-- Title -->
      <text_heading name="modal_title" width="100%" text="Enter WiFi Password" style_text_align="center"/>
      <!-- Network SSID -->
      <text_small name="modal_ssid"
                  width="100%" bind_text="wifi_password_modal_ssid" style_text_align="center"
                  style_text_color="#text_secondary"/>
      <!-- Password input -->
      <lv_textarea name="password_input"
                   width="100%" height="#input_height" placeholder="Password" password_mode="true" max_length="64"
                   one_line="true" style_border_width="#input_border_width" style_pad_all="#space_md"
                   style_text_font="#font_body" style_margin_top="#space_sm"/>
      <!-- Status message (hidden by default, shown on error) -->
      <text_small name="modal_status"
                  width="100%" text="" style_text_align="center" style_text_color="#error_color" hidden="true"/>
    </lv_obj>
    <!-- ============================================================ -->
    <!-- STATE: CONNECTING - Spinner and status (shown when connecting) -->
    <!-- ============================================================ -->
    <lv_obj name="connecting_container"
            width="100%" height="content" style_min_height="200" style_bg_opa="0"
            style_border_width="#input_border_width" style_pad_left="#space_lg" style_pad_right="#space_lg"
            style_pad_top="#space_xl" style_pad_bottom="#space_xl" flex_flow="column" style_flex_track_place="center"
            style_flex_cross_place="center" style_pad_gap="#space_md" hidden="true">
      <!-- Show spinner when wifi_connecting == 1 -->
      <bind_flag_if_eq subject="wifi_connecting" flag="hidden" ref_value="0"/>
      <spinner size="lg"/>
      <text_heading text="Connecting..." style_text_align="center"/>
      <text_small name="connecting_ssid"
                  bind_text="wifi_password_modal_ssid" style_text_color="#text_secondary" style_text_align="center"/>
    </lv_obj>
    <!-- Horizontal divider above buttons -->
    <lv_obj width="100%"
            height="1" style_bg_color="#text_secondary" style_bg_opa="64" style_border_width="0" style_pad_all="0"/>
    <!-- ============================================================ -->
    <!-- Button row (edge-to-edge style matching modal_dialog) -->
    <!-- ============================================================ -->
    <lv_obj width="100%"
            height="#button_height" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="row">
      <!-- Cancel button (always visible) -->
      <lv_button name="modal_cancel_btn"
                 height="100%" flex_grow="1" style_radius="#border_radius_small" style_border_width="0"
                 style_shadow_width="0" clickable="true">
        <event_cb trigger="clicked" callback="on_wifi_password_cancel"/>
        <text_body text="Cancel" align="center"/>
      </lv_button>
      <!-- Vertical divider between buttons (hidden when connecting) -->
      <lv_obj name="btn_divider"
              width="1" height="100%" style_bg_color="#text_secondary" style_bg_opa="64" style_border_width="0"
              style_pad_all="0">
        <!-- Hide divider when wifi_connecting == 1 (connect button hidden) -->
        <bind_flag_if_eq subject="wifi_connecting" flag="hidden" ref_value="1"/>
      </lv_obj>
      <!-- Connect button (hidden while connecting) -->
      <lv_button name="modal_connect_btn"
                 height="100%" flex_grow="1" style_radius="#border_radius_small" style_border_width="0"
                 style_shadow_width="0" clickable="true">
        <!-- Hide button while connecting (wifi_connecting == 1) -->
        <bind_flag_if_eq subject="wifi_connecting" flag="hidden" ref_value="1"/>
        <event_cb trigger="clicked" callback="on_wifi_password_connect"/>
        <text_body text="Connect" align="center"/>
      </lv_button>
    </lv_obj>
  </view>
</component>

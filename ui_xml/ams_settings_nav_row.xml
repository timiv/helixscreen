<!-- AMS Settings Navigation Row Component -->
<!-- A tappable card row with icon, label, optional summary, and chevron -->
<!-- Usage: <ams_settings_nav_row label="Tool Mapping" icon="link" summary="4 tools" callback="on_tool_mapping_clicked"/> -->
<component>
  <api>
    <prop name="label" type="string" default="Setting"/>
    <prop name="icon" type="string" default="settings"/>
    <prop name="summary" type="string" default=""/>
    <prop name="summary_bind" type="string" default=""/>
    <prop name="callback" type="string" default=""/>
  </api>
  <!-- Root button - receives all bubbled click events -->
  <view name="ams_settings_nav_row"
        extends="lv_button" width="100%" height="content" style_bg_color="#card_bg" style_bg_opa="255"
        style_border_width="0" style_pad_all="0" style_shadow_width="0" style_radius="#border_radius" scrollable="false">
    <!-- Content container: clickable=false so clicks bubble to button -->
    <lv_obj width="100%"
            height="content" flex_flow="row" style_flex_main_place="start" style_flex_cross_place="center"
            style_bg_opa="0" style_border_width="0" style_pad_left="#space_lg" style_pad_right="#space_lg"
            style_pad_top="#space_md" style_pad_bottom="#space_md" style_pad_gap="#space_sm" scrollable="false"
            clickable="false" event_bubble="true">
      <!-- Left side: Icon -->
      <icon name="row_icon" src="$icon" size="sm" variant="secondary" clickable="false" event_bubble="true"/>
      <!-- Middle: Label (flex_grow fills available space) -->
      <text_body name="label"
                 text="$label" style_text_color="#text_primary" flex_grow="1" clickable="false" event_bubble="true"/>
      <!-- Right side: Summary text (optional, supports both static and bound) -->
      <text_body name="summary"
                 text="$summary" bind_text="$summary_bind" style_text_color="#text_secondary" clickable="false"
                 event_bubble="true"/>
      <!-- Right side: Chevron icon -->
      <icon src="chevron_right" size="sm" variant="secondary" clickable="false" event_bubble="true"/>
    </lv_obj>
    <!-- Floating overlay: Catches clicks and bubbles to parent, covers full button -->
    <lv_obj width="100%"
            height="100%" align="top_left" style_bg_opa="0" style_border_width="0" style_pad_all="0" clickable="true"
            event_bubble="true" floating="true" scrollable="false"/>
    <!-- Declarative event callback -->
    <event_cb trigger="clicked" callback="$callback"/>
  </view>
</component>

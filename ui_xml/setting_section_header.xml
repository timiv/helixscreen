<!-- Reusable Settings Section Header Component -->
<!-- Creates a section divider with optional icon and title for settings panel groups -->
<!-- Usage: <setting_section_header title="APPEARANCE" icon="light"/> -->
<component>
  <api>
    <prop name="title" type="string" default="Section"/>
    <prop name="icon" type="string" default=""/>
  </api>
  <view extends="lv_obj"
        width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_left="#space_lg"
        style_pad_right="#space_lg" style_pad_top="#space_lg" style_pad_bottom="#space_xs" flex_flow="column"
        style_pad_gap="0" scrollable="false">
    <!-- Section title row with optional icon -->
    <lv_obj width="100%"
            height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="row"
            style_flex_cross_place="center" style_pad_gap="#space_sm" scrollable="false">
      <!-- Section icon (only shown if icon prop is set) -->
      <icon name="section_icon" src="$icon" size="sm" color="#header_text"/>
      <!-- Section title (uppercase style with letter-spacing for hierarchy) -->
      <text_body text="$title" style_text_color="#header_text" style_text_letter_space="1"/>
    </lv_obj>
    <!-- Subtle divider line below title -->
    <lv_obj width="100%"
            height="1" style_bg_color="#text_secondary" style_bg_opa="30" style_border_width="0"
            style_margin_top="#space_xs" scrollable="false"/>
  </view>
</component>

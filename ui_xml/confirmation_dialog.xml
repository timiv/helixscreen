<component>
  <api>
    <prop type="string" name="title"/>
    <prop type="string" name="message"/>
  </api>
  <!-- Full-screen backdrop overlay -->
  <view extends="lv_obj" name="confirmation_dialog_backdrop" width="100%" height="100%" style_bg_opa="180" style_border_width="0" style_pad_all="0" style_radius="0" align="center" clickable="true">
    <!-- Dialog card (centered) -->
    <lv_obj width="400" height="200" align="center" style_radius="12" style_pad_all="24" style_border_width="0" flex_flow="column" style_flex_main_place="space_between">
      <!-- Title section -->
      <lv_obj width="100%" height="LV_SIZE_CONTENT" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column" style_flex_cross_place="start">
        <text_heading name="dialog_title" text="$title" width="352" height="28" style_text_align="left" style_pad_all="0"/>
        <text_body name="dialog_message" text="$message" width="352" height="60" style_text_align="left" style_pad_all="0" style_pad_top="8" long_mode="wrap"/>
      </lv_obj>
      <!-- Button row -->
      <lv_obj width="100%" height="48" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="row" style_flex_main_place="space_between" style_pad_gap="16">
        <!-- Cancel button -->
        <lv_button name="dialog_cancel_btn" width="160" height="48" style_radius="6" style_border_width="0" clickable="true">
          <text_body text="Cancel" align="center"/>
        </lv_button>
        <!-- Confirm button (destructive action) -->
        <lv_button name="dialog_confirm_btn" width="160" height="48" style_radius="6" style_border_width="0" clickable="true">
          <text_body text="Delete" align="center"/>
        </lv_button>
      </lv_obj>
    </lv_obj>
  </view>
</component>

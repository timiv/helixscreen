<!-- Bed Mesh Save Config Modal - Prompt to save config after delete/rename -->
<!-- NOTE: Backdrop created programmatically by Modal system -->
<component>
  <!-- Dialog card (backdrop created programmatically) -->
  <view name="bed_mesh_save_config_modal"
        extends="ui_dialog" width="70%" height="content" align="center" flex_flow="column" style_flex_main_place="start"
        style_pad_gap="0">
    <!-- Content area -->
    <lv_obj width="100%"
            height="content" style_min_height="160" style_bg_opa="0" style_border_width="0" style_pad_left="#space_lg"
            style_pad_right="#space_lg" style_pad_top="#space_lg" style_pad_bottom="#space_lg" flex_flow="column"
            style_flex_cross_place="center" style_pad_gap="#space_md">
      <!-- Info icon -->
      <icon src="info" size="lg" color="#secondary_color"/>
      <!-- Title -->
      <text_heading width="100%" text="Save Configuration?" style_text_align="center"/>
      <!-- Message -->
      <text_small width="100%"
                  text="Save changes to persist them across restarts?" style_text_align="center"
                  style_text_color="#text_secondary"/>
      <!-- Warning about restart -->
      <text_small width="100%"
                  text="This will restart Klipper." style_text_align="center" style_text_color="#warning_color"/>
    </lv_obj>
    <modal_button_row primary_text="Save"
                      secondary_text="Don't Save" primary_callback="on_bed_mesh_save_config_yes"
                      secondary_callback="on_bed_mesh_save_config_no"/>
  </view>
</component>

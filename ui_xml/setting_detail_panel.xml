<!-- Indented detail panel for contextual sub-controls below a state row -->
<!-- Contains a "controls" child for C++ to populate with type-specific widgets -->
<component>
  <view extends="lv_obj"
        width="100%" height="content" flex_flow="column" style_pad_left="48" style_pad_right="#space_lg"
        style_pad_top="0" style_pad_bottom="#space_md" style_pad_gap="#space_sm" style_bg_color="#card_bg"
        style_bg_opa="20" style_border_width="0" style_radius="8" scrollable="false">
    <lv_obj name="controls"
            width="100%" height="content" flex_flow="column" style_pad_all="0" style_pad_gap="#space_sm"
            style_bg_opa="0" style_border_width="0" scrollable="false"/>
  </view>
</component>

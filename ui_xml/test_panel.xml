<!-- Test/Development Panel - Only accessible via -p test or -panel test flag -->
<component>
  <view extends="lv_obj"
        width="100%" height="100%" style_pad_all="#space_lg" style_border_width="0" flex_flow="column"
        style_pad_gap="#space_md" scrollable="true" style_bg_opa="255" style_bg_color="#screen_bg">
    <!-- ============================================================ -->
    <!-- MARKDOWN VIEWER TEST                                         -->
    <!-- ============================================================ -->
    <text_heading text="Markdown Viewer" translation_tag="Markdown Viewer"/>
    <ui_card width="100%" height="400" style_radius="#border_radius" style_pad_all="#space_lg">
      <lv_obj width="100%"
              height="100%" scrollable="true" style_pad_all="0" style_border_width="0" style_bg_opa="0" style_radius="0">
        <ui_markdown name="markdown_test" width="100%"/>
      </lv_obj>
    </ui_card>
    <divider_horizontal/>
    <!-- ============================================================ -->
    <!-- SPINNER TEST - Material Design Indeterminate Animation       -->
    <!-- ============================================================ -->
    <text_heading text="Material Design Spinner" translation_tag="Material Design Spinner"/>
    <ui_card width="100%"
             height="120" style_radius="#border_radius" style_pad_all="#space_lg" flex_flow="row"
             style_flex_main_place="space_evenly" style_flex_cross_place="center">
      <lv_obj flex_flow="column"
              style_flex_cross_place="center" style_pad_gap="8" style_bg_opa="0" style_border_width="0"
              style_pad_all="0">
        <spinner size="lg"/>
        <text_small text="lg" translation_tag="lg"/>
      </lv_obj>
      <lv_obj flex_flow="column"
              style_flex_cross_place="center" style_pad_gap="8" style_bg_opa="0" style_border_width="0"
              style_pad_all="0">
        <spinner size="md"/>
        <text_small text="md" translation_tag="md"/>
      </lv_obj>
      <lv_obj flex_flow="column"
              style_flex_cross_place="center" style_pad_gap="8" style_bg_opa="0" style_border_width="0"
              style_pad_all="0">
        <spinner size="sm"/>
        <text_small text="sm" translation_tag="sm"/>
      </lv_obj>
      <lv_obj flex_flow="column"
              style_flex_cross_place="center" style_pad_gap="8" style_bg_opa="0" style_border_width="0"
              style_pad_all="0">
        <spinner size="xs"/>
        <text_small text="xs" translation_tag="xs"/>
      </lv_obj>
    </ui_card>
    <divider_horizontal/>
    <!-- ============================================================ -->
    <!-- SPOOL VISUALIZATION TESTS - Pseudo-3D Canvas vs Flat Ring    -->
    <!-- ============================================================ -->
    <text_heading text="Spool Visualization (Pseudo-3D Canvas)" translation_tag="Spool Visualization (Pseudo-3D Canvas)"/>
    <ui_card width="100%"
             height="100" style_radius="#border_radius" style_pad_all="#space_lg" flex_flow="row"
             style_flex_main_place="space_evenly" style_flex_cross_place="center">
      <spool_canvas color="0xE53935" fill_level="1.0" size="64"/>
      <spool_canvas color="0x1E88E5" fill_level="0.75" size="64"/>
      <spool_canvas color="0x43A047" fill_level="0.40" size="64"/>
      <spool_canvas color="0xFDD835" fill_level="0.10" size="64"/>
    </ui_card>
    <text_small text="Fill: 100% / 75% / 40% / 10%" translation_tag="Fill: 100% / 75% / 40% / 10%"/>
    <text_heading text="Flat Concentric Rings (existing ams_slot)"
                  translation_tag="Flat Concentric Rings (existing ams_slot)"/>
    <ui_card width="100%"
             height="100" style_radius="#border_radius" style_pad_all="#space_lg" flex_flow="row"
             style_flex_main_place="space_evenly" style_flex_cross_place="center">
      <ams_slot slot_index="0" fill_level="1.0"/>
      <ams_slot slot_index="1" fill_level="0.75"/>
      <ams_slot slot_index="2" fill_level="0.40"/>
      <ams_slot slot_index="3" fill_level="0.10"/>
    </ui_card>
    <text_small text="Fill: 100% / 75% / 40% / 10%" translation_tag="Fill: 100% / 75% / 40% / 10%"/>
    <divider_horizontal/>
    <!-- ============================================================ -->
    <!-- PROGRESS BAR TESTS - Understanding lv_bar behavior           -->
    <!-- ============================================================ -->
    <text_heading text="Progress Bar Tests" translation_tag="Progress Bar Tests"/>
    <ui_card width="100%"
             height="60" style_radius="#border_radius" style_pad_all="#space_lg" flex_flow="row"
             style_flex_main_place="space_between" style_flex_cross_place="center">
      <text_small text="Default (value=50)" translation_tag="Default (value=50)"/>
      <lv_bar name="test_bar_default" width="60%" height="12" value="50"/>
    </ui_card>
    <ui_card width="100%"
             height="60" style_radius="#border_radius" style_pad_all="#space_lg" flex_flow="row"
             style_flex_main_place="space_between" style_flex_cross_place="center">
      <text_small text="min=0, max=100, value=25" translation_tag="min=0, max=100, value=25"/>
      <lv_bar name="test_bar_explicit_range" width="60%" height="12" min_value="0" max_value="100" value="25"/>
    </ui_card>
    <ui_card width="100%"
             height="60" style_radius="#border_radius" style_pad_all="#space_lg" flex_flow="row"
             style_flex_main_place="space_between" style_flex_cross_place="center">
      <text_small text="value=0 (shows FULL - BUG!)" translation_tag="value=0 (shows FULL - BUG!)"/>
      <lv_bar name="test_bar_zero" width="60%" height="12" min_value="0" max_value="100" value="0"/>
    </ui_card>
    <ui_card width="100%"
             height="60" style_radius="#border_radius" style_pad_all="#space_lg" flex_flow="row"
             style_flex_main_place="space_between" style_flex_cross_place="center">
      <text_small text="value=1 (tiny sliver?)" translation_tag="value=1 (tiny sliver?)"/>
      <lv_bar name="test_bar_one" width="60%" height="12" min_value="0" max_value="100" value="1"/>
    </ui_card>
    <ui_card width="100%"
             height="60" style_radius="#border_radius" style_pad_all="#space_lg" flex_flow="row"
             style_flex_main_place="space_between" style_flex_cross_place="center">
      <text_small text="value=100 (should be full)" translation_tag="value=100 (should be full)"/>
      <lv_bar name="test_bar_full" width="60%" height="12" min_value="0" max_value="100" value="100"/>
    </ui_card>
    <ui_card width="100%"
             height="60" style_radius="#border_radius" style_pad_all="#space_lg" flex_flow="row"
             style_flex_main_place="space_between" style_flex_cross_place="center">
      <text_small text="Styled (value=75)" translation_tag="Styled (value=75)"/>
      <lv_bar name="test_bar_styled" width="60%" height="12" min_value="0" max_value="100" value="75" style_radius="4"/>
    </ui_card>
    <ui_card width="100%"
             height="60" style_radius="#border_radius" style_pad_all="#space_lg" flex_flow="row"
             style_flex_main_place="space_between" style_flex_cross_place="center">
      <text_small text="Thin bar (height=8)" translation_tag="Thin bar (height=8)"/>
      <lv_bar name="test_bar_thin" width="60%" height="8" min_value="0" max_value="100" value="50" style_radius="4"/>
    </ui_card>
    <divider_horizontal/>
    <!-- ============================================================ -->
    <!-- SWITCH TESTS                                                 -->
    <!-- ============================================================ -->
    <text_heading text="Switch Tests" translation_tag="Switch Tests"/>
    <ui_card width="100%"
             height="56" style_radius="#border_radius" style_pad_all="#space_lg" style_pad_gap="#space_md"
             flex_flow="row" style_flex_main_place="space_between" style_flex_cross_place="center">
      <text_body text="Toggle Feature" translation_tag="Toggle Feature"/>
      <ui_switch name="test_switch_1" width="44" height="24"/>
    </ui_card>
    <ui_card width="100%"
             height="72" style_radius="#border_radius" style_pad_all="#space_lg" style_pad_gap="#space_md"
             flex_flow="row" style_flex_main_place="space_between" style_flex_cross_place="center">
      <text_heading text="Advanced Setting" translation_tag="Advanced Setting"/>
      <ui_switch name="test_switch_2" width="56" height="32" checked="true"/>
    </ui_card>
    <ui_card width="100%"
             height="56" style_radius="#border_radius" style_pad_all="#space_lg" style_pad_gap="#space_md"
             flex_flow="row" style_flex_main_place="start" style_flex_cross_place="center">
      <text_body text="WiFi" translation_tag="WiFi" style_margin_right="10"/>
      <ui_switch name="test_switch_3" width="44" height="24" style_margin_right="20"/>
      <text_body text="Bluetooth" translation_tag="Bluetooth" style_margin_right="10"/>
      <ui_switch name="test_switch_4" width="44" height="24" checked="true"/>
    </ui_card>
    <divider_horizontal/>
    <!-- ============================================================ -->
    <!-- SEMANTIC SWITCH SIZES                                        -->
    <!-- ============================================================ -->
    <text_heading text="Semantic Size Parameter Tests" translation_tag="Semantic Size Parameter Tests"/>
    <ui_card width="100%"
             height="60" style_radius="#border_radius" style_pad_all="#space_lg" flex_flow="row"
             style_flex_main_place="space_between" style_flex_cross_place="center">
      <text_body text="size=&quot;tiny&quot;" translation_tag="size=&quot;tiny&quot;"/>
      <ui_switch name="test_switch_tiny" size="tiny"/>
    </ui_card>
    <ui_card width="100%"
             height="60" style_radius="#border_radius" style_pad_all="#space_lg" flex_flow="row"
             style_flex_main_place="space_between" style_flex_cross_place="center">
      <text_body text="size=&quot;small&quot;" translation_tag="size=&quot;small&quot;"/>
      <ui_switch name="test_switch_small" size="small" checked="true"/>
    </ui_card>
    <ui_card width="100%"
             height="70" style_radius="#border_radius" style_pad_all="#space_lg" flex_flow="row"
             style_flex_main_place="space_between" style_flex_cross_place="center">
      <text_body text="size=&quot;medium&quot;" translation_tag="size=&quot;medium&quot;"/>
      <ui_switch name="test_switch_medium" size="medium"/>
    </ui_card>
    <ui_card width="100%"
             height="80" style_radius="#border_radius" style_pad_all="#space_lg" flex_flow="row"
             style_flex_main_place="space_between" style_flex_cross_place="center">
      <text_body text="size=&quot;large&quot;" translation_tag="size=&quot;large&quot;"/>
      <ui_switch name="test_switch_large" size="large" checked="true"/>
    </ui_card>
    <ui_card width="100%"
             height="70" style_radius="#border_radius" style_pad_all="#space_lg" flex_flow="row"
             style_flex_main_place="space_between" style_flex_cross_place="center">
      <text_body text="size=&quot;medium&quot; width=&quot;100&quot;"
                 translation_tag="size=&quot;medium&quot; width=&quot;100&quot;"/>
      <ui_switch name="test_switch_override" width="100" size="medium"/>
    </ui_card>
    <divider_horizontal/>
    <!-- ============================================================ -->
    <!-- KEYBOARD TEST                                                -->
    <!-- ============================================================ -->
    <text_heading text="Keyboard Test (Gboard-style)" translation_tag="Keyboard Test (Gboard-style)"/>
    <ui_card width="100%" height="120" style_pad_all="#space_lg">
      <lv_textarea name="keyboard_test_textarea"
                   width="100%" height="100%" placeholder_text="Tap to show keyboard..."
                   placeholder_tag="Tap to show keyboard..." translation_tag="Tap to show keyboard..." one_line="false"/>
    </ui_card>
    <!-- Bottom spacer for scroll clearance -->
    <lv_obj height="#space_lg" style_bg_opa="0" style_border_width="0" style_pad_all="0"/>
  </view>
</component>

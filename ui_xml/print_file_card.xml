<component>
  <!-- Print File Card Component - Responsive Flexbox Layout
	     Uses flex_grow with min/max constraints to adapt to any screen size.
	     Container's flex_flow="row_wrap" will automatically fit cards and wrap.
	-->
  <api>
    <prop name="thumbnail_src" type="string"/>
    <prop name="filename" type="string"/>
    <prop name="print_time" type="string"/>
    <prop name="filament_weight" type="string"/>
  </api>
  <consts>
    <!-- Component-specific spacing (not in globals) -->
    <px name="metadata_top_pad" value="4"/>
    <px name="icon_text_gap" value="3"/>
    <!-- Card size constraints for responsive behavior -->
    <px name="card_base_width" value="170"/>
    <px name="card_min_width" value="140"/>
    <px name="card_max_width" value="230"/>
    <px name="card_height" value="245"/>
    <int name="metadata_overlay_opacity" value="160"/>
    <!-- Thumbnail height (overridden by C++ based on card width) -->
    <px name="thumbnail_height" value="150"/>
    <!-- Metadata overlay minimum height -->
    <px name="metadata_overlay_min_height" value="70"/>
  </consts>
  <view name="card_root"
        extends="ui_card" height="#card_height" style_flex_basis="#card_base_width" flex_grow="1"
        style_min_width="#card_min_width" style_max_width="#card_max_width" style_radius="#border_radius"
        style_pad_all="0" style_clip_corner="true" clickable="true">
    <!-- Diagonal gradient background (bright top-right to dark bottom-left) -->
    <ui_gradient_canvas width="100%" height="100%" dither="true"/>
    <!-- Thumbnail image (object-fit:contain - scales to fit, centered, no clipping) -->
    <lv_image name="thumbnail"
              width="100%" height="100%" src="$thumbnail_src" style_bg_opa="0" align="center" inner_align="contain"
              style_translate_y="-20%"/>
    <!-- Metadata clip container - sharp top edge, clips the inner overlay's top rounded corners -->
    <lv_obj name="metadata_clip"
            width="100%" height="#metadata_overlay_min_height" style_bg_opa="0" style_border_width="0" style_radius="0"
            style_pad_all="0" align="bottom_mid" scrollable="false">
      <!-- Inner overlay with rounded corners - taller to extend above clip, hiding top radius -->
      <lv_obj name="metadata_overlay"
              width="100%" height="78" style_bg_opa="#metadata_overlay_opacity" style_border_width="0"
              style_radius="#border_radius" style_pad_left="#space_xs" style_pad_right="#space_xs" style_pad_top="14"
              style_pad_bottom="#space_xs" align="bottom_mid" flex_flow="column" scrollable="false">
        <!-- Filename label (single line, truncated with ...) -->
        <text_xs name="filename_label"
                 width="100%" height="18" text="$filename" long_mode="dots" style_text_color="#text_primary"/>
        <!-- Metadata row (horizontal layout, responsive) -->
        <lv_obj name="metadata_row"
                width="100%" style_bg_opa="0" style_border_width="0" style_pad_all="0" style_pad_top="#metadata_top_pad"
                flex_flow="row" style_pad_gap="#space_xs" flex_grow="1">
          <!-- Print time (icon + text) -->
          <lv_obj height="100%"
                  flex_grow="1" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="row"
                  style_pad_gap="#icon_text_gap" style_flex_cross_place="center">
            <icon src="clock" size="xs" variant="accent"/>
            <text_xs name="time_label" text="$print_time" flex_grow="1"/>
          </lv_obj>
          <!-- Filament weight (icon + text) -->
          <lv_obj height="100%"
                  flex_grow="1" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="row"
                  style_pad_gap="#icon_text_gap" style_flex_cross_place="center">
            <icon src="weight" size="xs" variant="accent"/>
            <text_xs name="filament_label" text="$filament_weight" flex_grow="1"/>
          </lv_obj>
        </lv_obj>
      </lv_obj>
    </lv_obj>
  </view>
</component>

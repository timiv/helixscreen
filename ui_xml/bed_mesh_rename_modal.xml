<!-- Bed Mesh Rename Modal - Rename the active mesh profile -->
<component>
  <!-- Full-screen backdrop overlay -->
  <view name="bed_mesh_rename_modal_root"
        extends="lv_obj" width="100%" height="100%" style_bg_opa="200" style_border_width="0" style_radius="0"
        style_pad_all="0" align="center" clickable="true">
    <!-- Reactive visibility binding -->
    <lv_obj-bind_flag_if_eq subject="bed_mesh_rename_modal_visible" flag="hidden" ref_value="0"/>
    <!-- Dialog card -->
    <ui_dialog name="dialog_card"
               width="70%" height="content" align="center" flex_flow="column" style_flex_main_place="start"
               style_pad_gap="0">
      <!-- Content area -->
      <lv_obj name="rename_form_container"
              width="100%" height="content" style_min_height="180" style_bg_opa="0" style_border_width="0"
              style_pad_left="#space_lg" style_pad_right="#space_lg" style_pad_top="#space_lg"
              style_pad_bottom="#space_lg" flex_flow="column" style_flex_cross_place="center" style_pad_gap="#space_md">
        <!-- Title -->
        <text_heading width="100%" text="Rename Mesh Profile" style_text_align="center"/>
        <!-- Current name display -->
        <lv_obj width="100%"
                height="content" flex_flow="row" style_flex_main_place="center" style_bg_opa="0" style_border_width="0"
                style_pad_all="0" style_pad_gap="#space_xs">
          <text_small text="Current name:" style_text_color="#text_secondary"/>
          <text_small name="rename_current_name" bind_text="bed_mesh_rename_old_name" style_text_color="#accent_color"/>
        </lv_obj>
        <!-- New name input -->
        <lv_textarea name="rename_new_name_input"
                     width="100%" height="#input_height" placeholder="New profile name" max_length="32" one_line="true"
                     style_border_width="#input_border_width" style_pad_all="#space_md" style_text_font="#font_body"
                     style_margin_top="#space_sm"/>
        <!-- Status message (hidden by default) -->
        <text_small name="rename_status"
                    width="100%" text="" style_text_align="center" style_text_color="#error_color" hidden="true"/>
      </lv_obj>
      <!-- Horizontal divider above buttons -->
      <lv_obj width="100%"
              height="1" style_bg_color="#text_secondary" style_bg_opa="64" style_border_width="0" style_pad_all="0"/>
      <!-- Button row -->
      <lv_obj width="100%"
              height="#button_height" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="row">
        <!-- Cancel button -->
        <lv_button name="rename_cancel_btn"
                   height="100%" flex_grow="1" style_radius="#border_radius" style_border_width="0"
                   style_shadow_width="0" clickable="true">
          <event_cb trigger="clicked" callback="on_bed_mesh_rename_cancel"/>
          <text_body text="Cancel" align="center"/>
        </lv_button>
        <!-- Vertical divider -->
        <lv_obj width="1"
                height="100%" style_bg_color="#text_secondary" style_bg_opa="64" style_border_width="0"
                style_pad_all="0"/>
        <!-- Rename button -->
        <lv_button name="rename_confirm_btn"
                   height="100%" flex_grow="1" style_radius="#border_radius" style_border_width="0"
                   style_shadow_width="0" clickable="true">
          <event_cb trigger="clicked" callback="on_bed_mesh_rename_confirm"/>
          <text_body text="Rename" align="center"/>
        </lv_button>
      </lv_obj>
    </ui_dialog>
  </view>
</component>

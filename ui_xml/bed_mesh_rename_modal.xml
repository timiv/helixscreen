<!-- Bed Mesh Rename Modal - Rename the active mesh profile -->
<!-- NOTE: Backdrop created programmatically by Modal system -->
<component>
  <!-- Dialog card (backdrop created programmatically) -->
  <view name="bed_mesh_rename_modal"
        extends="ui_dialog" width="70%" height="content" align="center" flex_flow="column" style_flex_main_place="start"
        style_pad_gap="0">
    <!-- Content area -->
    <lv_obj name="rename_form_container"
            width="100%" height="content" style_min_height="180" style_bg_opa="0" style_border_width="0"
            style_pad_left="#space_lg" style_pad_right="#space_lg" style_pad_top="#space_lg"
            style_pad_bottom="#space_lg" flex_flow="column" style_flex_cross_place="center" style_pad_gap="#space_md">
      <!-- Title -->
      <text_heading width="100%" text="Rename Mesh Profile" style_text_align="center"/>
      <!-- Current name display -->
      <lv_obj width="100%"
              height="content" flex_flow="row" style_flex_main_place="center" style_bg_opa="0" style_border_width="0"
              style_pad_all="0" style_pad_gap="#space_xs">
        <text_small text="Current name:" style_text_color="#text_secondary"/>
        <text_small name="rename_current_name" bind_text="bed_mesh_rename_old_name" style_text_color="#secondary_color"/>
      </lv_obj>
      <!-- New name input -->
      <lv_textarea name="rename_new_name_input"
                   width="100%" height="#input_height" placeholder="New profile name" max_length="32" one_line="true"
                   style_border_width="#input_border_width" style_pad_all="#space_md" style_text_font="#font_body"
                   style_margin_top="#space_sm"/>
      <!-- Status message (hidden by default) -->
      <text_small name="rename_status"
                  width="100%" text="" style_text_align="center" style_text_color="#error_color" hidden="true"/>
    </lv_obj>
    <modal_button_row primary_text="Rename"
                      secondary_text="Cancel" primary_callback="on_bed_mesh_rename_confirm"
                      secondary_callback="on_bed_mesh_rename_cancel"/>
  </view>
</component>

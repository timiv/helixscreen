<component>
  <!-- Print Select Panel - Dual view: Card grid or List view -->
  <!-- Panel-specific constants -->
  <consts>
    <!-- List view dimensions -->
    <px name="list_row_height" value="44"/>
    <px name="list_row_gap" value="4"/>
    <px name="list_header_padding" value="8"/>
    <px name="list_sort_icon_size" value="16"/>
    <!-- Column min widths for responsive list view -->
    <px name="col_status_width" value="70"/>
    <px name="col_size_width" value="80"/>
    <px name="col_modified_width" value="130"/>
    <px name="col_time_width" value="90"/>
    <!-- Metadata dimensions for cards -->
    <px name="metadata_row_height" value="24"/>
    <!-- Minimum widths to prevent text crushing -->
    <px name="metadata_label_min_width" value="30"/>
  </consts>
  <view name="print_select_panel_root"
        extends="lv_obj" width="100%" height="100%" style_pad_all="0" style_pad_gap="0" style_border_width="0"
        flex_flow="column">

    <!-- Compact header with source tabs and view toggle (32px) -->
    <lv_obj width="100%"
            height="content" style_pad_left="#space_md" style_pad_right="#space_md" style_pad_top="#space_xs"
            style_pad_bottom="0" flex_flow="row" style_flex_main_place="space_between" style_flex_cross_place="center"
            scrollable="false">

      <!-- Source selector (left side) - Segmented tab control -->
      <lv_obj name="source_selector"
              width="content" height="content" style_radius="#space_sm" style_pad_all="#space_xxs" flex_flow="row"
              style_pad_gap="0" scrollable="false">

        <!-- printer files -->
        <ui_button name="source_printer_btn" width="content" height="#button_height_sm" text="Printer" translation_tag="Printer">
          <event_cb trigger="clicked" callback="on_print_select_source_printer"/>
        </ui_button>

        <!-- usb files (conditionally hidden) -->
        <ui_button name="source_usb_btn" width="content" height="#button_height_sm" text="USB" translation_tag="USB">
          <event_cb trigger="clicked" callback="on_print_select_source_usb"/>
        </ui_button>
      </lv_obj>

      <!-- View toggle button (icon-only, compact) -->
      <ui_button name="view_toggle_btn" height="#button_height_sm" icon="list" variant="ghost">
        <event_cb trigger="clicked" callback="on_print_select_view_toggle"/>
      </ui_button>
    </lv_obj>
    <!-- header -->

    <!-- Card view container (visible when view_mode == 0) -->
    <!-- Note: style_pad_gap controls spacing between cards, used by C++ layout calculations -->
    <lv_obj name="card_view_container"
            width="100%" height="100%" style_pad_all="0" style_pad_left="#space_md" style_pad_right="#space_md"
            style_pad_gap="#space_md" flex_flow="row_wrap" scrollable="true" flex_grow="1">
      <bind_flag_if_eq subject="print_select_view_mode" flag="hidden" ref_value="1"/>
      <!-- Cards will be dynamically added here via C++ -->
    </lv_obj>
    <!-- List view container (visible when view_mode == 1) -->
    <lv_obj name="list_view_container"
            width="100%" height="100%" style_pad_all="0" style_pad_gap="0" flex_flow="column" flex_grow="1">
      <bind_flag_if_eq subject="print_select_view_mode" flag="hidden" ref_value="0"/>
      <!-- Column headers -->
      <lv_obj name="list_header"
              width="100%" height="content" style_pad_left="#nav_padding" style_pad_right="#nav_padding"
              style_pad_top="#space_xs" style_pad_bottom="#space_sm" flex_flow="row" style_flex_main_place="start"
              style_flex_cross_place="center">
        <!-- Filename header (flex-grow) -->
        <ui_button name="header_filename"
                   height="content" text="Filename" translation_tag="Filename" variant="ghost" flex_grow="1" flex_flow="row"
                   style_pad_column="#space_xs" style_flex_main_place="center" style_flex_cross_place="center">
          <event_cb trigger="clicked" callback="on_print_select_header_filename"/>
          <icon name="header_filename_icon_up" src="arrow_up" size="xs" variant="primary" hidden="true"/>
          <icon name="header_filename_icon_down" src="arrow_down" size="xs" variant="primary" hidden="true"/>
        </ui_button>
        <!-- Status header (non-sortable) -->
        <lv_obj name="header_status"
                width="#col_status_width" height="content" style_pad_all="#list_header_padding" flex_flow="row"
                style_flex_main_place="center" style_flex_cross_place="center">
          <text_body name="header_status_label" text="Status" translation_tag="Status" style_text_align="center"/>
        </lv_obj>
        <!-- Size header -->
        <ui_button name="header_size"
                   width="#col_size_width" height="content" text="Size" translation_tag="Size" variant="ghost" flex_flow="row"
                   style_pad_column="#space_xs" style_flex_main_place="center" style_flex_cross_place="center">
          <event_cb trigger="clicked" callback="on_print_select_header_size"/>
          <icon name="header_size_icon_up" src="arrow_up" size="xs" variant="primary" hidden="true"/>
          <icon name="header_size_icon_down" src="arrow_down" size="xs" variant="primary" hidden="true"/>
        </ui_button>
        <!-- Modified header -->
        <ui_button name="header_modified"
                   width="#col_modified_width" height="content" text="Modified" translation_tag="Modified" variant="ghost" flex_flow="row"
                   style_pad_column="#space_xs" style_flex_main_place="center" style_flex_cross_place="center">
          <event_cb trigger="clicked" callback="on_print_select_header_modified"/>
          <icon name="header_modified_icon_up" src="arrow_up" size="xs" variant="primary" hidden="true"/>
          <icon name="header_modified_icon_down" src="arrow_down" size="xs" variant="primary" hidden="true"/>
        </ui_button>
        <!-- Print Time header -->
        <ui_button name="header_print_time"
                   width="#col_time_width" height="content" text="Time" translation_tag="Time" variant="ghost" flex_flow="row"
                   style_pad_column="#space_xs" style_flex_main_place="center" style_flex_cross_place="center">
          <event_cb trigger="clicked" callback="on_print_select_header_print_time"/>
          <icon name="header_print_time_icon_up" src="arrow_up" size="xs" variant="primary" hidden="true"/>
          <icon name="header_print_time_icon_down" src="arrow_down" size="xs" variant="primary" hidden="true"/>
        </ui_button>
      </lv_obj>
      <!-- Scrollable list rows container -->
      <lv_obj name="list_rows_container"
              width="100%" height="100%" style_pad_left="#nav_padding" style_pad_right="#nav_padding" style_pad_top="0"
              style_pad_bottom="#nav_padding" style_pad_gap="#space_sm" flex_flow="column" scrollable="true"
              flex_grow="1">
        <!-- List rows will be dynamically added here via C++ -->
      </lv_obj>
    </lv_obj>
    <!-- Empty state message (shared, initially hidden) -->
    <lv_obj name="empty_state_container"
            width="100%" height="100%" style_pad_all="0" align="center" flex_grow="1" hidden="true">
      <centered_column width="content" height="content" style_pad_all="#space_xl" align="center" pad_gap="#space_sm">
        <text_heading text="No files available for printing" translation_tag="No files available for printing" style_text_align="center"/>
        <text_body text="Upload gcode files to get started" translation_tag="Upload gcode files to get started" style_text_align="center"/>
      </centered_column>
    </lv_obj>
  </view>
</component>

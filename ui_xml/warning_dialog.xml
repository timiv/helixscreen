<!-- Warning Dialog Component - Modal warning notification with single OK button -->
<component>
  <api>
    <prop type="string" name="title"/>
    <prop type="string" name="message"/>
  </api>

  <!-- Full-screen backdrop overlay -->
  <view extends="lv_obj" name="warning_dialog_backdrop" width="100%" height="100%"
        style_bg_opa="180" style_border_width="0" style_pad_all="0" style_radius="0"
        align="center" clickable="true">

    <!-- Dialog card (centered) -->
    <lv_obj width="400" height="220" align="center"
            style_radius="#border_radius"
            style_pad_all="#padding_normal"
            style_border_width="3"
            style_border_color="#warning_color"
            flex_flow="column"
            style_flex_main_place="space_between">

      <!-- Title and message section -->
      <lv_obj width="100%" style_bg_opa="0" style_border_width="0" style_pad_all="0"
              flex_flow="column" style_flex_cross_place="start">
        <text_heading name="dialog_title" text="$title" width="100%"
                      style_text_align="left" style_pad_all="0"/>
        <text_body name="dialog_message" text="$message" width="100%"
                   style_text_align="left" style_pad_all="0"
                   style_pad_top="#gap_small" long_mode="wrap"/>
      </lv_obj>

      <!-- OK button (single button, centered) -->
      <lv_obj width="100%" style_bg_opa="0" style_border_width="0" style_pad_all="0"
              flex_flow="row" style_flex_main_place="center">
        <lv_button name="dialog_ok_btn"
                   width="160" height="#button_height_small"
                   style_radius="#border_radius"
                   style_border_width="0"
                   style_bg_color="#warning_color"
                   clickable="true">
          <text_body text="OK" align="center"/>
        </lv_button>
      </lv_obj>
    </lv_obj>
  </view>
</component>

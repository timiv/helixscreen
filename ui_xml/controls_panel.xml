<!-- Controls Panel Dashboard V3 - Position card + 70/30 bottom layout -->
<component>
  <styles>
    <style name="home_btn_homed" bg_color="#success_color" text_color="#text_primary"/>
    <style name="home_btn_unhomed" bg_color="#card_bg"/>
    <!-- Motor icon styles: warning when enabled, dimmed when disabled -->
    <style name="icon_motors_enabled" text_color="#warning_color"/>
    <style name="icon_motors_disabled" text_color="#text_secondary"/>
    <!-- Homing indicator styles for Position card -->
    <style name="indicator_homed" bg_color="#success_color"/>
    <style name="indicator_unhomed" bg_color="#text_secondary"/>
  </styles>
  <!-- Main container: 3+2 layout (3 cards top, 2 cards bottom) -->
  <!-- NOTE: Using explicit heights (55%) instead of flex-grow to work around LVGL bug
       where hidden objects affect flex-grow space calculation -->
  <view name="controls_panel"
        extends="lv_obj" width="100%" height="100%" style_pad_all="#space_md" style_border_width="0" flex_flow="column"
        style_bg_color="#app_bg_color" style_pad_gap="#space_md" scrollable="false">
    <!-- Z-Offset Adjustment Banner (reactive: hidden when pending_z_offset_delta == 0) -->
    <!-- Uses absolute positioning via align to avoid affecting flex layout -->
    <lv_obj name="z_offset_banner"
            width="content" height="content" hidden="true" align="top_mid" style_bg_color="#info_color"
            style_bg_opa="200" style_radius="#border_radius" style_pad_all="#space_sm" style_border_width="0"
            scrollable="false" flex_flow="row" style_flex_main_place="space_between" style_flex_cross_place="center">
      <lv_obj-bind_flag_if_eq subject="pending_z_offset_delta" flag="hidden" ref_value="0"/>
      <lv_obj width="content"
              height="content" style_bg_opa="0" style_border_width="0" scrollable="false" flex_flow="column"
              style_pad_gap="#space_xxs">
        <text_small text="Z-Offset Adjusted" style_text_color="#text_primary"/>
        <text_small name="z_offset_delta_label" bind_text="z_offset_delta_display" style_text_color="#text_secondary"/>
      </lv_obj>
      <lv_button name="btn_save_z_offset"
                 height="content" style_radius="#border_radius" style_bg_color="#success_color" style_border_width="0"
                 style_pad_left="#space_sm" style_pad_right="#space_sm" style_margin_left="#space_md">
        <event_cb trigger="clicked" callback="on_controls_save_z_offset"/>
        <text_small text="Save" style_text_color="#text_primary"/>
      </lv_button>
    </lv_obj>
    <!-- Row 1: Position card (left) | Right section with conditional E-Stop + Temps/Cooling -->
    <!-- Using explicit 55% height instead of flex-grow to avoid LVGL hidden-object bug -->
    <lv_obj width="100%"
            height="55%" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="row"
            style_pad_gap="#space_md" scrollable="false">
      <!-- Card 1: Position (Toolhead Position + Motion) -->
      <ui_card name="card_position"
               height="100%" flex_grow="1" flex_flow="column" style_flex_main_place="space_between"
               style_radius="#border_radius" style_pad_all="#space_sm" scrollable="false">
        <!-- Header -->
        <lv_obj height="content"
                flex_flow="row" style_flex_cross_place="center" style_flex_track_place="center" style_pad_all="0"
                style_pad_gap="#space_sm" style_border_width="0">
          <icon src="axis_arrow" size="sm" variant="secondary"/>
          <text_small text="Position" style_text_color="#text_secondary"/>
        </lv_obj>
        <!-- Position display with homing indicators -->
        <!-- Split into static label + dynamic value for proper alignment with proportional fonts -->
        <lv_obj width="100%"
                height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false"
                flex_flow="column" style_pad_gap="#space_xxs">
          <!-- X Position Row -->
          <lv_obj width="100%"
                  height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false"
                  flex_flow="row" style_flex_cross_place="center" style_pad_gap="#space_xs">
            <text_body width="content" text="X:"/>
            <text_body name="pos_x" bind_text="controls_pos_x" flex_grow="1" style_text_align="right"/>
            <lv_obj width="10" height="10" style_radius="9999" style_border_width="0" style_margin_left="#space_xs">
              <bind_style name="indicator_homed" subject="x_homed" ref_value="1"/>
              <bind_style name="indicator_unhomed" subject="x_homed" ref_value="0"/>
            </lv_obj>
          </lv_obj>
          <!-- Y Position Row -->
          <lv_obj width="100%"
                  height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false"
                  flex_flow="row" style_flex_cross_place="center" style_pad_gap="#space_xs">
            <text_body width="content" text="Y:"/>
            <text_body name="pos_y" bind_text="controls_pos_y" flex_grow="1" style_text_align="right"/>
            <lv_obj width="10" height="10" style_radius="9999" style_border_width="0" style_margin_left="#space_xs">
              <bind_style name="indicator_homed" subject="y_homed" ref_value="1"/>
              <bind_style name="indicator_unhomed" subject="y_homed" ref_value="0"/>
            </lv_obj>
          </lv_obj>
          <!-- Z Position Row -->
          <lv_obj width="100%"
                  height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false"
                  flex_flow="row" style_flex_cross_place="center" style_pad_gap="#space_xs">
            <text_body width="content" text="Z:"/>
            <text_body name="pos_z" bind_text="controls_pos_z" flex_grow="1" style_text_align="right"/>
            <lv_obj width="10" height="10" style_radius="9999" style_border_width="0" style_margin_left="#space_xs">
              <bind_style name="indicator_homed" subject="z_homed" ref_value="1"/>
              <bind_style name="indicator_unhomed" subject="z_homed" ref_value="0"/>
            </lv_obj>
          </lv_obj>
        </lv_obj>
        <!-- Speed/Flow Overrides -->
        <lv_obj width="100%"
                height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false"
                flex_flow="column" style_pad_gap="#space_xxs" style_pad_top="#space_xs">
          <!-- Speed Override Row -->
          <lv_obj width="100%"
                  height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false"
                  flex_flow="row" style_flex_main_place="space_between" style_flex_cross_place="center">
            <text_small text="Speed" style_text_color="#text_secondary"/>
            <lv_obj width="content"
                    height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false"
                    flex_flow="row" style_pad_gap="#space_xxs" style_flex_cross_place="center">
              <lv_button width="40"
                         height="40" style_radius="#border_radius" style_bg_color="#secondary_color" style_bg_opa="60"
                         style_border_width="0" style_pad_all="0">
                <event_cb trigger="clicked" callback="on_controls_speed_down"/>
                <text_body text="-" align="center"/>
              </lv_button>
              <text_body name="speed_pct" width="48" bind_text="controls_speed_pct" style_text_align="center"/>
              <lv_button width="40"
                         height="40" style_radius="#border_radius" style_bg_color="#secondary_color" style_bg_opa="60"
                         style_border_width="0" style_pad_all="0">
                <event_cb trigger="clicked" callback="on_controls_speed_up"/>
                <text_body text="+" align="center"/>
              </lv_button>
            </lv_obj>
          </lv_obj>
          <!-- Flow Override Row -->
          <lv_obj width="100%"
                  height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false"
                  flex_flow="row" style_flex_main_place="space_between" style_flex_cross_place="center">
            <text_small text="Flow" style_text_color="#text_secondary"/>
            <lv_obj width="content"
                    height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false"
                    flex_flow="row" style_pad_gap="#space_xxs" style_flex_cross_place="center">
              <lv_button width="40"
                         height="40" style_radius="#border_radius" style_bg_color="#secondary_color" style_bg_opa="60"
                         style_border_width="0" style_pad_all="0">
                <event_cb trigger="clicked" callback="on_controls_flow_down"/>
                <text_body text="-" align="center"/>
              </lv_button>
              <text_body name="flow_pct" width="48" bind_text="controls_flow_pct" style_text_align="center"/>
              <lv_button width="40"
                         height="40" style_radius="#border_radius" style_bg_color="#secondary_color" style_bg_opa="60"
                         style_border_width="0" style_pad_all="0">
                <event_cb trigger="clicked" callback="on_controls_flow_up"/>
                <text_body text="+" align="center"/>
              </lv_button>
            </lv_obj>
          </lv_obj>
        </lv_obj>
        <!-- Motion panel navigation button -->
        <lv_button name="btn_motion"
                   width="100%" height="#button_height_sm" style_radius="#border_radius" style_pad_left="#space_sm"
                   style_pad_right="#space_sm" style_bg_color="#primary_color" style_bg_opa="80" style_border_width="0"
                   flex_flow="row" style_flex_main_place="center" style_flex_cross_place="center"
                   style_flex_track_place="center" style_pad_gap="#space_xs">
          <event_cb trigger="clicked" callback="on_controls_quick_actions"/>
          <icon src="cursor_move" size="sm"/>
          <text_body text="Motion" style_text_color="#text_primary"/>
        </lv_button>
      </ui_card>

      <!-- Right section: E-Stop banner + Temps + Cooling -->
      <lv_obj height="100%"
              flex_grow="2" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column"
              style_pad_gap="#space_xs" style_pad_row="0" scrollable="false">
        <!-- Emergency Stop Banner (conditional, compact) -->
        <lv_button name="estop_button_controls"
                   width="100%" height="#button_height_sm" hidden="true" style_radius="#border_radius"
                   style_border_width="0" style_bg_color="#error_color" flex_flow="row" style_flex_main_place="center"
                   style_flex_cross_place="center" style_pad_gap="#space_sm">
          <lv_obj-bind_flag_if_eq subject="estop_visible" flag="hidden" ref_value="0"/>
          <event_cb trigger="clicked" callback="emergency_stop_clicked"/>
          <icon src="alert_octagon" size="sm" color="#text_primary"/>
          <text_body text="Emergency Stop" style_text_color="#text_primary"/>
        </lv_button>

        <!-- Temps + Cooling row (always visible) -->
        <lv_obj width="100%"
                flex_grow="1" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="row"
                style_pad_gap="#space_md" scrollable="false">
          <!-- Card 2: Temperatures (Combined Nozzle + Bed) -->
          <ui_card name="card_temperatures"
                   height="100%" flex_grow="1" flex_flow="column" style_flex_main_place="start"
                   style_flex_cross_place="center" style_radius="#border_radius" style_pad_all="#space_sm"
                   scrollable="false" clickable="true">
            <event_cb trigger="clicked" callback="on_controls_temperatures"/>
            <lv_obj width="100%" height="content"
                    flex_flow="row" style_flex_cross_place="center" style_pad_all="0"
                    style_pad_gap="#space_sm" style_border_width="0" scrollable="false">
              <icon src="heater" size="sm" variant="secondary"/>
              <text_small text="Temperatures" style_text_color="#text_secondary"/>
            </lv_obj>
            <!-- Nozzle section (clickable) -->
            <lv_button name="btn_nozzle_temp"
                       width="90%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0"
                       style_radius="0" flex_flow="row" style_flex_main_place="space_between"
                       style_flex_cross_place="center" style_pad_top="#space_sm">
              <event_cb trigger="clicked" callback="on_nozzle_temp_clicked"/>
              <text_small text="Nozzle" style_text_color="#text_secondary"/>
              <temp_display name="nozzle_temp_display"
                            size="md" show_target="true" bind_current="extruder_temp" bind_target="extruder_target"
                            event_cb="on_nozzle_temp_clicked"/>
            </lv_button>
            <text_small name="nozzle_status"
                       width="90%" bind_text="controls_nozzle_status" style_text_color="#text_secondary"
                       style_text_align="right"/>
            <!-- Bed section (clickable) -->
            <lv_button name="btn_bed_temp"
                       width="90%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0"
                       style_radius="0" flex_flow="row" style_flex_main_place="space_between"
                       style_flex_cross_place="center" style_pad_top="#space_xs">
              <event_cb trigger="clicked" callback="on_bed_temp_clicked"/>
              <text_small text="Bed" style_text_color="#text_secondary"/>
              <temp_display name="bed_temp_display"
                            size="md" show_target="true" bind_current="bed_temp" bind_target="bed_target"
                            event_cb="on_bed_temp_clicked"/>
            </lv_button>
            <text_small name="bed_status"
                       width="90%" bind_text="controls_bed_status" style_text_color="#text_secondary"
                       style_text_align="right"/>
          </ui_card>
          <!-- Card 3: Cooling (Multi-Fan) -->
          <ui_card name="card_cooling"
                   height="100%" flex_grow="1" flex_flow="column" style_flex_main_place="start"
                   style_flex_cross_place="center" style_radius="#border_radius" style_pad_all="#space_sm"
                   scrollable="false" clickable="true">
            <event_cb trigger="clicked" callback="on_controls_cooling"/>
            <lv_obj width="100%" height="content"
                    flex_flow="row" style_flex_cross_place="center" style_pad_all="0"
                    style_pad_gap="#space_sm" style_border_width="0" scrollable="false">
              <icon name="fan_icon" src="fan" size="sm" variant="secondary"/>
              <text_small text="Cooling" style_text_color="#text_secondary"/>
            </lv_obj>
            <!-- Part cooling hero section -->
            <text_small text="Part Fan" style_text_color="#text_secondary" style_pad_top="#space_sm"/>
            <lv_slider name="part_fan_slider"
                       width="80%" height="#space_lg" bind_value="controls_fan_pct" range_min="0" range_max="100"
                       style_bg_color="#theme_grey" style_radius="#space_md" style_pad_top="#space_xs"
                       style_margin_left="#space_md" style_margin_right="#space_sm">
              <event_cb trigger="value_changed" callback="on_controls_fan_slider"/>
            </lv_slider>
            <text_body name="fan_speed_display"
                       width="80%" bind_text="controls_fan_speed" style_text_align="right"/>
            <!-- Secondary fans list (populated dynamically) -->
            <lv_obj name="secondary_fans_list"
                    width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0"
                    scrollable="false" flex_flow="column" style_pad_gap="#space_xxs" style_pad_top="#space_xs">
              <!-- Dynamic fan rows will be added here by C++ -->
            </lv_obj>
          </ui_card>
        </lv_obj>
      </lv_obj>
    </lv_obj>
    <!-- Row 2: Calibration & Tools (40%) | Quick Actions (60%) -->
    <!-- Using flex_grow here since Row 1 has explicit 55% height -->
    <lv_obj width="100%"
            flex_grow="1" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="row"
            style_pad_gap="#space_md" scrollable="false">
      <!-- Card 4: Calibration & Tools (40% width, 2x2 grid) -->
      <ui_card name="card_calibration"
               width="0" height="100%" flex_grow="2" flex_flow="column" style_flex_main_place="start"
               style_radius="#border_radius" style_border_width="0" style_pad_all="#space_sm" style_pad_gap="#space_xs"
               scrollable="false">
        <!-- Header Row -->
        <lv_obj width="100%"
                height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false"
                flex_flow="row" style_flex_cross_place="center" style_pad_gap="#space_sm">
          <icon src="wrench" size="sm" variant="accent"/>
          <text_small text="Calibration &amp; Tools" style_text_color="#text_secondary"/>
        </lv_obj>
        <!-- 2x2 Grid Container -->
        <lv_obj width="100%"
                flex_grow="1" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column"
                style_pad_gap="#space_sm" scrollable="false">
          <!-- Row 1: Bed Mesh | Z-Offset -->
          <lv_obj width="100%"
                  flex_grow="1" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="row"
                  style_flex_main_place="center" style_flex_cross_place="center" style_pad_gap="#space_xs"
                  scrollable="false">
            <!-- Bed Mesh Button -->
            <lv_button name="btn_bed_mesh"
                       height="100%" flex_grow="1" style_radius="#border_radius" style_border_width="0"
                       style_shadow_width="0" style_bg_color="#card_bg" flex_flow="column"
                       style_flex_main_place="center" style_flex_cross_place="center" style_flex_track_place="center"
                       style_pad_all="#space_xs">
              <event_cb trigger="clicked" callback="on_calibration_bed_mesh"/>
              <icon src="grid_large" size="md" variant="accent"/>
              <text_small text="Bed Mesh" style_pad_top="#space_xxs"/>
            </lv_button>
            <!-- Z-Offset Button -->
            <lv_button name="btn_zoffset"
                       height="100%" flex_grow="1" style_radius="#border_radius" style_border_width="0"
                       style_shadow_width="0" style_bg_color="#card_bg" flex_flow="column"
                       style_flex_main_place="center" style_flex_cross_place="center" style_flex_track_place="center"
                       style_pad_all="#space_xs">
              <event_cb trigger="clicked" callback="on_calibration_zoffset"/>
              <icon src="z_closer" size="md" variant="accent"/>
              <text_small text="Z-Offset" style_pad_top="#space_xxs"/>
            </lv_button>
          </lv_obj>
          <!-- Row 2: Bed Screws | Motors Off -->
          <lv_obj width="100%"
                  flex_grow="1" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="row"
                  style_flex_main_place="center" style_flex_cross_place="center" style_pad_gap="#space_xs"
                  scrollable="false">
            <!-- Bed Screws Button -->
            <lv_button name="btn_screws"
                       height="100%" flex_grow="1" style_radius="#border_radius" style_border_width="0"
                       style_shadow_width="0" style_bg_color="#card_bg" flex_flow="column"
                       style_flex_main_place="center" style_flex_cross_place="center" style_flex_track_place="center"
                       style_pad_all="#space_xs">
              <event_cb trigger="clicked" callback="on_calibration_screws"/>
              <icon src="wrench" size="md" variant="accent"/>
              <text_small text="Bed Screws" style_pad_top="#space_xxs"/>
            </lv_button>
            <!-- Motors Off Button (disabled when motors already off) -->
            <lv_button name="btn_motors"
                       height="100%" flex_grow="1" style_radius="#border_radius" style_border_width="0"
                       style_shadow_width="0" style_bg_color="#card_bg" flex_flow="column"
                       style_flex_main_place="center" style_flex_cross_place="center" style_flex_track_place="center"
                       style_pad_all="#space_xs">
              <lv_obj-bind_state_if_eq subject="motors_enabled" state="disabled" ref_value="0"/>
              <event_cb trigger="clicked" callback="on_calibration_motors"/>
              <icon src="engine" size="md" variant="warning">
                <lv_obj-bind_flag_if_eq subject="motors_enabled" flag="hidden" ref_value="0"/>
              </icon>
              <icon src="engine_off" size="md" variant="secondary">
                <lv_obj-bind_flag_if_eq subject="motors_enabled" flag="hidden" ref_value="1"/>
              </icon>
              <text_small text="Motors Off" style_pad_top="#space_xxs"/>
            </lv_button>
          </lv_obj>
        </lv_obj>
      </ui_card>
      <!-- Card 5: Quick Actions (60% width) -->
      <ui_card name="card_quick_actions"
               width="0" height="100%" flex_grow="3" flex_flow="column" style_flex_main_place="space_between"
               style_radius="#border_radius" style_pad_all="#space_sm" scrollable="false">
        <!-- Header -->
        <lv_obj height="content"
                flex_flow="row" style_flex_cross_place="center" style_flex_track_place="center" style_pad_all="0"
                style_pad_gap="#space_sm" style_border_width="0">
          <icon src="home" size="sm" variant="secondary"/>
          <text_small text="Quick Actions" style_text_color="#text_secondary"/>
        </lv_obj>
        <!-- Home section header -->
        <text_small text="Home" style_text_color="#text_secondary" style_pad_bottom="#space_xxs"/>
        <!-- Home buttons row -->
        <lv_obj width="100%"
                height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false"
                flex_flow="row" style_flex_main_place="center" style_pad_gap="#space_xs">
          <lv_button name="btn_home_all"
                     width="0" height="#button_height_sm" flex_grow="1" style_radius="#border_radius"
                     style_border_width="1" style_border_color="#text_secondary" style_border_opa="60">
            <bind_style name="home_btn_homed" subject="all_homed" ref_value="1"/>
            <bind_style name="home_btn_unhomed" subject="all_homed" ref_value="0"/>
            <event_cb trigger="clicked" callback="on_controls_home_all"/>
            <text_small text="All" align="center"/>
          </lv_button>
          <lv_button name="btn_home_xy"
                     width="0" height="#button_height_sm" flex_grow="1" style_radius="#border_radius"
                     style_border_width="1" style_border_color="#text_secondary" style_border_opa="60">
            <bind_style name="home_btn_homed" subject="xy_homed" ref_value="1"/>
            <bind_style name="home_btn_unhomed" subject="xy_homed" ref_value="0"/>
            <event_cb trigger="clicked" callback="on_controls_home_xy"/>
            <text_small text="XY" align="center"/>
          </lv_button>
          <lv_button name="btn_home_z"
                     width="0" height="#button_height_sm" flex_grow="1" style_radius="#border_radius"
                     style_border_width="1" style_border_color="#text_secondary" style_border_opa="60">
            <bind_style name="home_btn_homed" subject="z_homed" ref_value="1"/>
            <bind_style name="home_btn_unhomed" subject="z_homed" ref_value="0"/>
            <event_cb trigger="clicked" callback="on_controls_home_z"/>
            <text_small text="Z" align="center"/>
          </lv_button>
        </lv_obj>
        <!-- Macro buttons grid (2x2) -->
        <lv_obj width="100%"
                flex_grow="1" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false"
                flex_flow="column" style_pad_gap="#space_xs" style_flex_main_place="end">
          <!-- Macro row 1 -->
          <lv_obj width="100%"
                  height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false"
                  flex_flow="row" style_pad_gap="#space_xs">
            <lv_button name="btn_macro_1"
                       width="0" height="#button_height_sm" flex_grow="1" style_radius="#border_radius"
                       style_bg_color="#secondary_color" style_bg_opa="40" style_border_width="0">
              <lv_obj-bind_flag_if_eq subject="macro_1_visible" flag="hidden" ref_value="0"/>
              <event_cb trigger="clicked" callback="on_controls_macro_1"/>
              <text_small name="macro_1_label" bind_text="macro_1_name" style_text_color="#text_primary" align="center"/>
            </lv_button>
            <lv_button name="btn_macro_2"
                       width="0" height="#button_height_sm" flex_grow="1" style_radius="#border_radius"
                       style_bg_color="#secondary_color" style_bg_opa="40" style_border_width="0">
              <lv_obj-bind_flag_if_eq subject="macro_2_visible" flag="hidden" ref_value="0"/>
              <event_cb trigger="clicked" callback="on_controls_macro_2"/>
              <text_small name="macro_2_label" bind_text="macro_2_name" style_text_color="#text_primary" align="center"/>
            </lv_button>
          </lv_obj>
          <!-- Macro row 2 -->
          <lv_obj width="100%"
                  height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false"
                  flex_flow="row" style_pad_gap="#space_xs">

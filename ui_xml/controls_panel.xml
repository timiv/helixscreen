<!-- Controls Panel Dashboard V3 - Position card + 70/30 bottom layout -->
<component>
  <styles>
    <!-- Homing button styles -->
    <style name="home_btn_homed" bg_color="#success"/>
    <style name="home_btn_unhomed" bg_color="#card_bg"/>
    <!-- Note: home_label styles removed - ui_button auto-contrast handles text color -->
    <!-- Motor icon styles: warning when enabled, dimmed when disabled -->
    <style name="icon_motors_enabled" text_color="#warning"/>
    <style name="icon_motors_disabled" text_color="#text_muted"/>
    <!-- Homing indicator styles for Position card -->
    <style name="indicator_homed" bg_color="#success"/>
    <style name="indicator_unhomed" bg_color="#text_muted"/>
  </styles>
  <!-- Main container: 3+2 layout (3 cards top, 2 cards bottom) -->
  <!-- NOTE: Using explicit heights (55%) instead of flex-grow to work around LVGL bug
       where hidden objects affect flex-grow space calculation -->
  <view name="controls_panel"
        extends="lv_obj" width="100%" height="100%" style_pad_all="#space_md" style_border_width="0" flex_flow="column"
        style_bg_color="#screen_bg" style_pad_gap="#space_md" scrollable="false">
    <!-- Row 1: Position card (left) | Right section with conditional E-Stop + Temps/Cooling -->
    <!-- Using explicit 55% height instead of flex-grow to avoid LVGL hidden-object bug -->
    <lv_obj width="100%" height="55%" style_pad_all="0" flex_flow="row" style_pad_gap="#space_md" scrollable="false">
      <!-- Card 1: Position (Toolhead Position + Motion) -->
      <ui_card name="card_position"
               height="100%" flex_grow="1" flex_flow="column" style_flex_main_place="space_between"
               style_radius="#border_radius" style_pad_all="#space_sm" scrollable="false">
        <!-- Header -->
        <lv_obj flex_flow="row"
                style_flex_cross_place="center" style_flex_track_place="center" style_pad_all="0"
                style_pad_gap="#space_sm">
          <icon src="axis_arrow" size="sm" variant="primary"/>
          <text_small text="Position" translation_tag="Position" style_translate_y="2" style_text_color="#text"/>
        </lv_obj>
        <!-- Position display with homing indicators -->
        <!-- Split into static label + dynamic value for proper alignment with proportional fonts -->
        <lv_obj width="100%"
                height="content" style_pad_all="0" scrollable="false" flex_flow="column" style_pad_gap="#space_xxs">
          <!-- X Position Row -->
          <lv_obj width="100%"
                  height="content" style_pad_all="0" scrollable="false" flex_flow="row" style_flex_cross_place="center"
                  style_pad_gap="#space_xs">
            <text_muted width="content" text="X:" translation_tag="X:"/>
            <text_body name="pos_x" bind_text="controls_pos_x" flex_grow="1" style_text_align="right"/>
            <lv_obj width="10" height="10" style_radius="9999" style_margin_left="#space_xs">
              <bind_style name="indicator_homed" subject="x_homed" ref_value="1"/>
              <bind_style name="indicator_unhomed" subject="x_homed" ref_value="0"/>
            </lv_obj>
          </lv_obj>
          <!-- Y Position Row -->
          <lv_obj width="100%"
                  height="content" style_pad_all="0" scrollable="false" flex_flow="row" style_flex_cross_place="center"
                  style_pad_gap="#space_xs">
            <text_muted width="content" text="Y:" translation_tag="Y:"/>
            <text_body name="pos_y" bind_text="controls_pos_y" flex_grow="1" style_text_align="right"/>
            <lv_obj width="10" height="10" style_radius="9999" style_margin_left="#space_xs">
              <bind_style name="indicator_homed" subject="y_homed" ref_value="1"/>
              <bind_style name="indicator_unhomed" subject="y_homed" ref_value="0"/>
            </lv_obj>
          </lv_obj>
          <!-- Z Position Row -->
          <lv_obj width="100%"
                  height="content" style_pad_all="0" scrollable="false" flex_flow="row" style_flex_cross_place="center"
                  style_pad_gap="#space_xs">
            <text_muted width="content" text="Z:"/>
            <text_body name="pos_z" bind_text="controls_pos_z" flex_grow="1" style_text_align="right"/>
            <lv_obj width="10" height="10" style_radius="9999" style_margin_left="#space_xs">
              <bind_style name="indicator_homed" subject="z_homed" ref_value="1"/>
              <bind_style name="indicator_unhomed" subject="z_homed" ref_value="0"/>
            </lv_obj>
          </lv_obj>
          <!-- Z-Offset display (clickable to open Print Tune overlay) -->
          <lv_obj name="btn_zoffset_tune"
                  width="100%" flex_flow="row" style_flex_cross_place="center" style_pad_gap="#space_xs"
                  style_margin_top="#space_sm" clickable="true" scrollable="false">
            <event_cb trigger="clicked" callback="on_zoffset_tune"/>
            <text_muted width="content" text="Z-Offset:" translation_tag="Z-Offset:"/>
            <text_body bind_text="controls_z_offset" flex_grow="1" style_text_align="right"/>
            <icon src="chevron_right" size="xs" variant="secondary"/>
          </lv_obj>
        </lv_obj>
        <!-- Save Z-Offset button (conditional: visible when gcode_z_offset != 0, disabled during print) -->
        <ui_button name="btn_save_z_offset"
                   width="100%" height="#button_height_sm" variant="success" icon="check" text="Save Z-Offset"
                   translation_tag="Save Z-Offset" hidden="true">
          <bind_flag_if_eq subject="gcode_z_offset" flag="hidden" ref_value="0"/>
          <bind_state_if_eq subject="print_active" state="disabled" ref_value="1"/>
          <event_cb trigger="clicked" callback="on_controls_save_z_offset"/>
        </ui_button>
        <!-- Motion panel navigation button -->
        <ui_button name="btn_motion"
                   width="100%" height="#button_height_sm" icon="cursor_move" text="Motion" translation_tag="Motion">
          <event_cb trigger="clicked" callback="on_controls_quick_actions"/>
        </ui_button>
      </ui_card>

      <!-- Right section: E-Stop banner + Temps + Cooling -->
      <lv_obj height="100%"
              flex_grow="2" style_pad_all="0" flex_flow="column" style_pad_gap="#space_xs" style_pad_row="0"
              scrollable="false">
        <!-- Emergency Stop Banner (conditional, compact) -->
        <ui_button name="estop_button_controls"
                   width="100%" height="#button_height_sm" hidden="true" variant="danger" icon="alert_octagon"
                   text="Emergency Stop" translation_tag="Emergency Stop">
          <bind_flag_if_eq subject="estop_visible" flag="hidden" ref_value="0"/>
          <event_cb trigger="clicked" callback="emergency_stop_clicked"/>
        </ui_button>

        <!-- Temps + Cooling row (always visible) -->
        <lv_obj width="100%"
                flex_grow="1" style_pad_all="0" flex_flow="row" style_pad_gap="#space_md" scrollable="false">
          <!-- Card 2: Temperatures (Combined Nozzle + Bed) -->
          <ui_card name="card_temperatures"
                   height="100%" flex_grow="1" flex_flow="column" style_flex_main_place="start"
                   style_flex_cross_place="center" style_radius="#border_radius" style_pad_all="#space_sm"
                   scrollable="false" clickable="true">
            <event_cb trigger="clicked" callback="on_controls_temperatures"/>
            <lv_obj width="100%"
                    height="content" flex_flow="row" style_flex_cross_place="center" style_pad_all="0"
                    style_pad_gap="#space_sm" scrollable="false">
              <icon src="heater" size="sm" variant="primary"/>
              <text_small text="Temperatures"
                          translation_tag="Temperatures" style_translate_y="2" style_text_color="#text"/>
            </lv_obj>
            <!-- Nozzle section (clickable) -->
            <lv_obj name="btn_nozzle_temp"
                    width="100%" flex_flow="row" style_flex_main_place="space_between" style_flex_cross_place="center"
                    style_margin_top="#space_xs" clickable="true" scrollable="false">
              <event_cb trigger="clicked" callback="on_nozzle_temp_clicked"/>
              <!-- Left side: animated heater icon + label -->
              <lv_obj width="content"
                      height="content" flex_flow="row" style_pad_all="0" scrollable="false"
                      style_flex_cross_place="center" style_pad_gap="#space_xs" clickable="false" event_bubble="true">
                <icon name="nozzle_heater_icon"
                      src="heater" size="xs" variant="secondary" clickable="false" event_bubble="true"/>
                <text_small bind_text="controls_nozzle_label"/>
              </lv_obj>
              <!-- Right side: temp display + edit icon -->
              <lv_obj width="content"
                      height="content" flex_flow="row" style_pad_all="0" scrollable="false"
                      style_flex_cross_place="center" style_pad_gap="#space_xs" clickable="false" event_bubble="true">
                <temp_display name="nozzle_temp_display"
                              size="md" show_target="true" bind_current="extruder_temp" bind_target="extruder_target"
                              event_cb="on_nozzle_temp_clicked"/>
                <icon src="pencil" size="xs" variant="secondary" clickable="false" event_bubble="true"/>
              </lv_obj>
            </lv_obj>
            <text_small name="nozzle_status"
                        width="100%" bind_text="controls_nozzle_status" style_text_color="#text"
                        style_text_align="right">
              <!-- Hidden on TINY screens (breakpoint 0) -->
              <bind_flag_if_eq subject="ui_breakpoint" flag="hidden" ref_value="0"/>
            </text_small>
            <!-- Bed section (clickable) -->
            <lv_obj name="btn_bed_temp"
                    width="100%" flex_flow="row" style_flex_main_place="space_between" style_flex_cross_place="center"
                    clickable="true" scrollable="false">
              <event_cb trigger="clicked" callback="on_bed_temp_clicked"/>
              <!-- Left side: animated bed icon + label -->
              <lv_obj width="content"
                      height="content" flex_flow="row" style_pad_all="0" scrollable="false"
                      style_flex_cross_place="center" style_pad_gap="#space_xs" clickable="false" event_bubble="true">
                <icon name="bed_heater_icon"
                      src="radiator" size="xs" variant="secondary" clickable="false" event_bubble="true"/>
                <text_small text="Bed" translation_tag="Bed"/>
              </lv_obj>
              <!-- Right side: temp display + edit icon -->
              <lv_obj width="content"
                      height="content" flex_flow="row" style_pad_all="0" scrollable="false"
                      style_flex_cross_place="center" style_pad_gap="#space_xs" clickable="false" event_bubble="true">
                <temp_display name="bed_temp_display"
                              size="md" show_target="true" bind_current="bed_temp" bind_target="bed_target"
                              event_cb="on_bed_temp_clicked"/>
                <icon src="pencil" size="xs" variant="secondary" clickable="false" event_bubble="true"/>
              </lv_obj>
            </lv_obj>
            <text_small name="bed_status"
                        width="100%" bind_text="controls_bed_status" style_text_color="#text" style_text_align="right">
              <bind_flag_if_eq subject="ui_breakpoint" flag="hidden" ref_value="0"/>
            </text_small>
            <!-- Chamber section (visible only if printer has chamber sensor) -->
            <lv_obj name="chamber_section"
                    width="100%" flex_flow="row" style_flex_main_place="space_between" style_flex_cross_place="center"
                    hidden="true">
              <bind_flag_if_eq subject="printer_has_chamber_sensor" flag="hidden" ref_value="0"/>
              <text_small text="Chamber:" translation_tag="Chamber:"/>
              <temp_display name="chamber_temp_display" size="md" show_target="false" bind_current="chamber_temp"/>
            </lv_obj>
            <!-- Secondary temperature sensors list (populated dynamically) -->
            <lv_obj name="secondary_temps_list"
                    width="100%" height="content" style_pad_all="0" scrollable="false" flex_flow="column"
                    style_pad_gap="#space_xxs" style_pad_top="#space_xxs">
              <!-- Dynamic temp sensor rows will be added here by C++ -->
            </lv_obj>
          </ui_card>
          <!-- Card 3: Cooling (Multi-Fan) -->
          <ui_card name="card_cooling"
                   height="100%" flex_grow="1" flex_flow="column" style_flex_main_place="start"
                   style_flex_cross_place="center" style_radius="#border_radius" style_pad_all="#space_sm"
                   scrollable="false" clickable="true">
            <event_cb trigger="clicked" callback="on_controls_cooling"/>
            <lv_obj width="100%"
                    height="content" flex_flow="row" style_flex_cross_place="center" style_pad_all="0"
                    style_pad_gap="#space_sm" scrollable="false">
              <icon name="fan_icon" src="fan" size="sm" variant="primary"/>
              <text_small text="Cooling" translation_tag="Cooling" style_translate_y="2" style_text_color="#text"/>
            </lv_obj>
            <!-- Part cooling hero section -->
            <text_small width="100%" text="Part Fan" translation_tag="Part Fan" style_margin_top="#space_sm"/>
            <lv_slider name="part_fan_slider"
                       width="80%" height="#space_lg" bind_value="controls_fan_pct" min_value="0" max_value="100"
                       style_radius="#space_md" style_margin_left="#space_md" style_margin_right="#space_sm">
              <event_cb trigger="value_changed" callback="on_controls_fan_slider"/>
            </lv_slider>
            <text_body name="fan_speed_display" width="80%" bind_text="controls_fan_speed" style_text_align="right">
              <bind_flag_if_eq subject="ui_breakpoint" flag="hidden" ref_value="0"/>
            </text_body>
            <!-- Secondary fans list (populated dynamically) -->
            <lv_obj name="secondary_fans_list"
                    width="100%" height="content" style_pad_all="0" scrollable="false" flex_flow="column"
                    style_pad_gap="#space_xxs" style_pad_top="#space_xs">
              <!-- Dynamic fan rows will be added here by C++ -->
            </lv_obj>
          </ui_card>
        </lv_obj>
      </lv_obj>
    </lv_obj>
    <!-- Row 2: Calibration & Tools (40%) | Quick Actions (60%) -->
    <!-- Using flex_grow here since Row 1 has explicit 55% height -->
    <lv_obj width="100%" flex_grow="1" style_pad_all="0" flex_flow="row" style_pad_gap="#space_md" scrollable="false">
      <!-- Card 4: Calibration & Tools (40% width, 2x2 grid) -->
      <ui_card name="card_calibration"
               width="0" height="100%" flex_grow="2" flex_flow="column" style_flex_main_place="start"
               style_radius="#border_radius" style_border_width="0" style_pad_all="#space_sm" style_pad_gap="#space_xs"
               scrollable="false">
        <!-- Header Row -->
        <lv_obj width="100%"
                height="content" style_pad_all="0" scrollable="false" flex_flow="row" style_flex_cross_place="center"
                style_pad_gap="#space_sm">
          <icon src="wrench" size="sm" variant="primary"/>
          <text_small text="Calibration &amp; Tools"
                      translation_tag="Calibration &amp; Tools" style_translate_y="2" style_text_color="#text"/>
        </lv_obj>
        <!-- 2x2 Grid Container -->
        <lv_obj width="100%"
                flex_grow="1" style_pad_all="0" flex_flow="column" style_pad_gap="#space_sm" scrollable="false">
          <!-- Row 1: Bed Mesh | Z-Offset -->
          <lv_obj width="100%"
                  flex_grow="1" style_pad_all="0" flex_flow="row" style_flex_main_place="center"
                  style_flex_cross_place="center" style_pad_gap="#space_xs" scrollable="false">
            <!-- Bed Mesh Button -->
            <ui_button name="btn_bed_mesh"
                       height="100%" flex_grow="1" icon="grid_large" text="Bed Mesh" translation_tag="Bed Mesh"
                       icon_position="top" style_bg_opa="0" style_border_width="0">
              <event_cb trigger="clicked" callback="on_calibration_bed_mesh"/>
            </ui_button>

            <!-- Z Calibration Button (beta gated) -->
            <ui_button name="btn_z_calibration"
                       height="100%" flex_grow="1" icon="z_closer" text="Z Calibration" translation_tag="Z Calibration"
                       icon_position="top" style_bg_opa="0" style_border_width="0">
              <bind_flag_if_eq subject="show_beta_features" flag="hidden" ref_value="0"/>
              <bind_state_if_eq subject="print_active" state="disabled" ref_value="1"/>
              <event_cb trigger="clicked" callback="on_calibration_zoffset"/>
            </ui_button>
          </lv_obj>
          <!-- Row 2: Bed Screws | Motors Off -->
          <lv_obj width="100%"
                  flex_grow="1" style_pad_all="0" flex_flow="row" style_flex_main_place="center"
                  style_flex_cross_place="center" style_pad_gap="#space_xs" scrollable="false">

            <!-- Bed Screws Button (hidden if screws_tilt_adjust not configured) -->
            <ui_button name="btn_screws"
                       height="100%" flex_grow="1" icon="wrench" text="Bed Screws" translation_tag="Bed Screws"
                       icon_position="top" style_bg_opa="0" style_border_width="0" hidden="true">
              <bind_flag_if_eq subject="printer_has_screws_tilt" flag="hidden" ref_value="0"/>
              <bind_state_if_eq subject="print_active" state="disabled" ref_value="1"/>
              <event_cb trigger="clicked" callback="on_calibration_screws"/>
            </ui_button>

            <!-- Motors On/Off Button (disabled when motors already off) -->
            <lv_obj name="btn_motors"
                    height="100%" flex_grow="1" style_bg_opa="0" style_pad_all="0" style_pad_gap="0" clickable="true">
              <bind_state_if_eq subject="motors_enabled" state="disabled" ref_value="0"/>
              <event_cb trigger="clicked" callback="on_calibration_motors"/>
              <lv_obj flex_flow="column"
                      style_flex_cross_place="center" align="center" style_pad_all="0" style_pad_gap="0"
                      clickable="false" scrollable="false">
                <icon src="engine" size="sm" variant="warning" clickable="false">
                  <bind_flag_if_eq subject="motors_enabled" flag="hidden" ref_value="0"/>
                </icon>
                <icon src="engine_off" size="sm" variant="secondary" clickable="false">
                  <bind_flag_if_eq subject="motors_enabled" flag="hidden" ref_value="1"/>
                </icon>
                <text_small text="Motors Off" translation_tag="Motors Off"/>
              </lv_obj>
            </lv_obj>
          </lv_obj>
          <!-- row 2 -->
        </lv_obj>
      </ui_card>
      <!-- Card 5: Quick Actions (60% width) -->
      <ui_card name="card_quick_actions"
               width="0" height="100%" flex_grow="3" flex_flow="column" style_flex_main_place="space_between"
               style_radius="#border_radius" style_pad_all="#space_sm" scrollable="false">
        <!-- Header -->
        <lv_obj flex_flow="row"
                style_flex_cross_place="center" style_flex_track_place="center" style_pad_all="0"
                style_pad_gap="#space_sm">
          <icon src="flash" size="sm" variant="primary"/>
          <text_small text="Quick Actions"
                      translation_tag="Quick Actions" style_translate_y="2" style_text_color="#text"/>
        </lv_obj>
        <!-- Home row: label + homing buttons inline -->
        <lv_obj width="100%"
                height="content" style_pad_all="0" scrollable="false" flex_flow="row"
                style_flex_cross_place="center" style_pad_gap="#space_xs">
          <text_small text="Home" translation_tag="Home" style_min_width="40"/>
          <ui_button name="btn_home_all"
                     width="0" height="#button_height_sm" text="All" translation_tag="All" flex_grow="1"
                     style_radius="#border_radius" style_border_width="1" style_border_color="#text_muted"
                     style_border_opa="60">
            <bind_style name="home_btn_homed" subject="all_homed" ref_value="1"/>
            <bind_style name="home_btn_unhomed" subject="all_homed" ref_value="0"/>
            <bind_state_if_eq subject="controls_operation_in_progress" state="disabled" ref_value="1"/>
            <event_cb trigger="clicked" callback="on_controls_home_all"/>
          </ui_button>
          <ui_button name="btn_home_x"
                     width="0" height="#button_height_sm" text="X" flex_grow="1" style_radius="#border_radius"
                     style_border_width="1" style_border_color="#text_muted" style_border_opa="60">
            <bind_style name="home_btn_homed" subject="x_homed" ref_value="1"/>
            <bind_style name="home_btn_unhomed" subject="x_homed" ref_value="0"/>
            <bind_state_if_eq subject="controls_operation_in_progress" state="disabled" ref_value="1"/>
            <event_cb trigger="clicked" callback="on_controls_home_x"/>
          </ui_button>
          <ui_button name="btn_home_y"
                     width="0" height="#button_height_sm" text="Y" flex_grow="1" style_radius="#border_radius"
                     style_border_width="1" style_border_color="#text_muted" style_border_opa="60">
            <bind_style name="home_btn_homed" subject="y_homed" ref_value="1"/>
            <bind_style name="home_btn_unhomed" subject="y_homed" ref_value="0"/>
            <bind_state_if_eq subject="controls_operation_in_progress" state="disabled" ref_value="1"/>
            <event_cb trigger="clicked" callback="on_controls_home_y"/>
          </ui_button>
          <ui_button name="btn_home_xy"
                     width="0" height="#button_height_sm" text="XY" flex_grow="1" style_radius="#border_radius"
                     style_border_width="1" style_border_color="#text_muted" style_border_opa="60">
            <bind_style name="home_btn_homed" subject="xy_homed" ref_value="1"/>
            <bind_style name="home_btn_unhomed" subject="xy_homed" ref_value="0"/>
            <bind_state_if_eq subject="controls_operation_in_progress" state="disabled" ref_value="1"/>
            <event_cb trigger="clicked" callback="on_controls_home_xy"/>
          </ui_button>
          <ui_button name="btn_home_z"
                     width="0" height="#button_height_sm" text="Z" flex_grow="1" style_radius="#border_radius"
                     style_border_width="1" style_border_color="#text_muted" style_border_opa="60">
            <bind_style name="home_btn_homed" subject="z_homed" ref_value="1"/>
            <bind_style name="home_btn_unhomed" subject="z_homed" ref_value="0"/>
            <bind_state_if_eq subject="controls_operation_in_progress" state="disabled" ref_value="1"/>
            <event_cb trigger="clicked" callback="on_controls_home_z"/>
          </ui_button>
        </lv_obj>
        <!-- Macro buttons grid with QGL/Z-Tilt -->
        <lv_obj width="100%"
                flex_grow="1" style_pad_all="0" scrollable="false" flex_flow="column" style_pad_gap="#space_xs"
                style_flex_main_place="end">
          <!-- Macro row 1: QGL/Z-Tilt + macro_1 + macro_2 -->
          <lv_obj width="100%"
                  height="content" style_pad_all="0" scrollable="false" flex_flow="row" style_pad_gap="#space_xs">
            <!-- QGL button - visible only if printer has quad_gantry_level -->
            <ui_button name="btn_qgl"
                       width="0" height="#button_height_sm" flex_grow="1" text="Quad Gantry Level"
                       translation_tag="Quad Gantry Level" variant="secondary" hidden="true"
                       style_text_font="#font_xs" long_mode="wrap">
              <bind_flag_if_eq subject="printer_has_qgl" flag="hidden" ref_value="0"/>
              <bind_state_if_eq subject="print_active" state="disabled" ref_value="1"/>
              <bind_state_if_eq subject="controls_operation_in_progress" state="disabled" ref_value="1"/>
              <event_cb trigger="clicked" callback="on_controls_qgl"/>
            </ui_button>
            <!-- Z-Tilt button - visible only if printer has z_tilt_adjust -->
            <ui_button name="btn_z_tilt"
                       width="0" height="#button_height_sm" flex_grow="1" text="Z-Tilt Adjust"
                       translation_tag="Z-Tilt Adjust" variant="secondary" hidden="true"
                       style_text_font="#font_xs" long_mode="wrap">
              <bind_flag_if_eq subject="printer_has_z_tilt" flag="hidden" ref_value="0"/>
              <bind_state_if_eq subject="print_active" state="disabled" ref_value="1"/>
              <bind_state_if_eq subject="controls_operation_in_progress" state="disabled" ref_value="1"/>
              <event_cb trigger="clicked" callback="on_controls_z_tilt"/>
            </ui_button>
            <ui_button name="btn_macro_1"
                       width="0" height="#button_height_sm" flex_grow="1" bind_text="macro_1_name" variant="secondary"
                       style_text_font="#font_xs" long_mode="wrap">
              <bind_flag_if_eq subject="macro_1_visible" flag="hidden" ref_value="0"/>
              <bind_state_if_eq subject="print_active" state="disabled" ref_value="1"/>
              <event_cb trigger="clicked" callback="on_controls_macro" user_data="0"/>
            </ui_button>
            <ui_button name="btn_macro_2"
                       width="0" height="#button_height_sm" flex_grow="1" bind_text="macro_2_name" variant="secondary"
                       style_text_font="#font_xs" long_mode="wrap">
              <bind_flag_if_eq subject="macro_2_visible" flag="hidden" ref_value="0"/>
              <bind_state_if_eq subject="print_active" state="disabled" ref_value="1"/>
              <event_cb trigger="clicked" callback="on_controls_macro" user_data="1"/>
            </ui_button>
          </lv_obj>
          <!-- Macro row 2 -->
          <lv_obj width="100%"

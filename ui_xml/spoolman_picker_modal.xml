<!-- Modal picker for selecting a Spoolman spool to assign to an AMS slot -->
<component>
  <consts>
    <px name="modal_width" value="320"/>
    <px name="modal_max_height" value="400"/>
    <px name="list_max_height" value="280"/>
  </consts>
  <!-- Full-screen backdrop -->
  <view name="spoolman_picker_backdrop"
        extends="lv_obj" width="100%" height="100%" style_bg_color="0x000000" style_bg_opa="180" style_border_width="0"
        style_pad_all="0" style_radius="0" clickable="true">
    <!-- Modal card (centered) -->
    <ui_card name="picker_modal"
             width="#modal_width" height="content" align="center" style_radius="#border_radius_large"
             style_pad_all="#space_md" flex_flow="column" style_flex_main_place="start" style_flex_cross_place="stretch"
             style_pad_gap="#space_sm" scrollable="false" style_max_height="#modal_max_height">
      <!-- Header row -->
      <lv_obj width="100%"
              height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="row"
              style_flex_main_place="space_between" style_flex_cross_place="center" scrollable="false">
        <text_heading text="Select Filament"/>
        <lv_button name="btn_close"
                   width="32" height="32" style_radius="#border_radius_small" style_bg_opa="0" style_border_width="0"
                   style_shadow_width="0" clickable="true">
          <icon src="close" size="sm" variant="secondary" align="center"/>
          <event_cb trigger="clicked" callback="spoolman_picker_close_cb"/>
        </lv_button>
      </lv_obj>
      <!-- Slot indicator -->
      <text_small name="slot_indicator" text="Assigning to Slot 1" style_text_color="#text_secondary"/>
      <!-- Loading state -->
      <lv_obj name="loading_container"
              width="100%" height="80" style_bg_opa="0" style_border_width="0" flex_flow="column"
              style_flex_main_place="center" style_flex_cross_place="center" scrollable="false">
        <bind_flag_if_not_eq subject="ams_picker_state" flag="hidden" ref_value="0"/>
        <lv_spinner width="32"
                    height="32" style_arc_width_indicator="#input_border_width" style_arc_color="#primary_color" style_arc_opa_main="0"/>
        <text_small text="Loading spools..." style_text_color="#text_secondary"/>
      </lv_obj>
      <!-- Empty state -->
      <lv_obj name="empty_container"
              width="100%" height="80" style_bg_opa="0" style_border_width="0" flex_flow="column"
              style_flex_main_place="center" style_flex_cross_place="center" scrollable="false">
        <bind_flag_if_not_eq subject="ams_picker_state" flag="hidden" ref_value="1"/>
        <icon src="spoolman" size="lg" variant="secondary"/>
        <text_small text="No spools available" style_text_color="#text_secondary"/>
      </lv_obj>
      <!-- Spool list (scrollable) -->
      <lv_obj name="spool_list"
              width="100%" height="content" style_max_height="#list_max_height" style_bg_opa="0" style_border_width="0"
              style_pad_all="0" style_pad_gap="#space_xs" flex_flow="column" style_flex_main_place="start"
              style_flex_cross_place="stretch" scrollable="true" scroll_direction="y" overflow="scroll">
        <bind_flag_if_not_eq subject="ams_picker_state" flag="hidden" ref_value="2"/>
        <!-- Spool items populated dynamically by C++ -->
      </lv_obj>
      <!-- Unlink button (for clearing assignment) -->
      <lv_button name="btn_unlink"
                 width="100%" height="#button_height_small" style_radius="#border_radius_small" style_bg_color="#theme_grey"
                 style_border_width="0" style_shadow_width="0" hidden="true">
        <text_body text="Clear Assignment" align="center" style_text_color="#text_secondary"/>
        <event_cb trigger="clicked" callback="spoolman_picker_unlink_cb"/>
      </lv_button>
    </ui_card>
  </view>
</component>

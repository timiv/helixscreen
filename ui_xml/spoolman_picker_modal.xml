<!-- Modal picker for selecting a Spoolman spool to assign to an AMS slot -->
<!-- NOTE: Backdrop created programmatically by Modal system -->
<component>
  <consts>
    <px name="modal_width" value="320"/>
    <px name="modal_max_height" value="400"/>
    <px name="list_max_height" value="280"/>
  </consts>
  <!-- Modal card (backdrop created programmatically) -->
  <view name="spoolman_picker_modal"
        extends="ui_dialog" width="#modal_width" height="content" align="center" style_pad_all="#space_md"
        flex_flow="column" style_flex_main_place="start" style_flex_cross_place="start" style_pad_gap="#space_sm"
        scrollable="false" style_max_height="#modal_max_height">
    <!-- Header row -->
    <lv_obj width="100%"
            height="content" style_pad_all="0" flex_flow="row" style_flex_main_place="space_between"
            style_flex_cross_place="center" scrollable="false">
      <text_heading text="Select Filament" translation_tag="Select Filament"/>
      <ui_button name="btn_close" width="32" height="32" icon="close" variant="ghost">
        <event_cb trigger="clicked" callback="spoolman_picker_close_cb"/>
      </ui_button>
    </lv_obj>
    <!-- Slot indicator -->
    <text_small name="slot_indicator" text="Assigning to Slot 1" translation_tag="Assigning to Slot 1"/>
    <!-- Loading state -->
    <lv_obj name="loading_container"
            width="100%" height="80" flex_flow="column" style_flex_main_place="center" style_flex_cross_place="center"
            scrollable="false">
      <bind_flag_if_not_eq subject="ams_picker_state" flag="hidden" ref_value="0"/>
      <lv_spinner width="32" height="32" style_arc_width_indicator="2" style_arc_color="#primary" style_arc_opa_main="0"/>
      <text_small text="Loading spools..." translation_tag="Loading spools..."/>
    </lv_obj>
    <!-- Empty state -->
    <lv_obj name="empty_container" width="100%" height="80" scrollable="false">
      <bind_flag_if_not_eq subject="ams_picker_state" flag="hidden" ref_value="1"/>
      <empty_state icon="spoolman" text="No spools available" translation_tag="No spools available"/>
    </lv_obj>
    <!-- Spool list (scrollable) -->
    <lv_obj name="spool_list"
            width="100%" height="content" style_max_height="#list_max_height" style_pad_all="0"
            style_pad_gap="#space_xs" flex_flow="column" style_flex_main_place="start" style_flex_cross_place="start"
            scrollable="true">
      <bind_flag_if_not_eq subject="ams_picker_state" flag="hidden" ref_value="2"/>
      <!-- Spool items populated dynamically by C++ -->
    </lv_obj>
    <!-- Unlink button (for clearing assignment) -->
    <ui_button name="btn_unlink"
               width="100%" height="#button_height_sm" text="Clear Assignment" translation_tag="Clear Assignment"
               variant="secondary" hidden="true">
      <event_cb trigger="clicked" callback="spoolman_picker_unlink_cb"/>
    </ui_button>
  </view>
</component>

<!-- Wizard vendor row: vendor name + source badge (Spoolman/Database) -->
<!-- Used in spool_wizard step 0 vendor list -->
<component>
  <view name="wizard_vendor_row"
        extends="ui_card" width="100%" height="content" style_pad_all="#space_sm" flex_flow="row"
        style_flex_cross_place="center" style_pad_gap="#space_md" clickable="true" scrollable="false">
    <!-- Vendor name -->
    <text_body name="vendor_name" text="Vendor" flex_grow="1" long_mode="dots"/>
    <!-- Source badge -->
    <text_small name="vendor_source" text="Database" translation_tag="Database" style_text_color="#text_muted"/>
    <!-- Click handler -->
    <event_cb trigger="clicked" callback="on_wizard_vendor_selected"/>
  </view>
</component>

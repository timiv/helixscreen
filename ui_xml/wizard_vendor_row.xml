<!-- Wizard vendor row: vendor name + source badge (Spoolman/Database) -->
<!-- Used in spool_wizard step 0 vendor list -->
<component>
  <styles>
    <style name="selected_style"
           border_width="#space_xs" border_side="left" border_color="#primary" bg_color="#elevated_bg"/>
  </styles>
  <view name="wizard_vendor_row"
        extends="lv_button" width="100%" height="content" style_bg_opa="0"
        style_border_width="0" style_shadow_width="0"
        style_pad_all="#space_sm" style_radius="#border_radius"
        flex_flow="row" style_flex_cross_place="center" style_pad_gap="#space_md"
        clickable="true" scrollable="false">
    <style name="selected_style" selector="checked"/>
    <!-- Vendor name -->
    <text_body name="vendor_name" text="Vendor" flex_grow="1" long_mode="dots" clickable="false"/>
    <!-- Source badge -->
    <text_small name="vendor_source" text="Database" translation_tag="Database"
                style_text_color="#text_muted" clickable="false"/>
    <!-- Click handler -->
    <event_cb trigger="clicked" callback="on_wizard_vendor_selected"/>
  </view>
</component>

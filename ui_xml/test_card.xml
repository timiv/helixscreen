<component>
  <!-- Test Card Component for Dynamic Instantiation -->
  <view extends="lv_obj" width="200" style_radius="8" style_pad_all="#file_card_padding" flex_flow="column">
    <!-- Placeholder thumbnail (gray square) -->
    <lv_obj name="card_thumbnail" width="176" height="176" style_radius="6"/>
    <!-- Filename label -->
    <text_body name="card_filename" text="test.gcode" style_pad_top="8"/>
    <!-- Metadata row -->
    <lv_obj flex_flow="row" style_pad_gap="#space_md" style_pad_top="4">
      <!-- Print time -->
      <lv_obj flex_flow="row" style_pad_gap="#space_xs">
        <lv_image width="16"
                  height="16" src="mat_clock_img" scale_x="64" scale_y="64" style_image_recolor_opa="100%"
                  align="center"/>
        <text_small name="card_print_time" text="0m"/>
      </lv_obj>
      <!-- Filament weight -->
      <lv_obj flex_flow="row" style_pad_gap="#space_xs">
        <lv_image width="16"
                  height="16" src="mat_spoolman_img" scale_x="64" scale_y="64" style_image_recolor_opa="100%"
                  align="center"/>
        <text_small name="card_filament" text="0g"/>
      </lv_obj>
    </lv_obj>
  </view>
</component>

<component>
  <!-- Print Cancel Confirmation Modal -->
  <!-- Note: Backdrop is created programmatically by Modal class in C++ -->
  <view name="print_cancel_confirm_modal"
        extends="ui_dialog" width="70%" height="content" align="center" flex_flow="column" style_flex_main_place="start"
        style_pad_gap="0">
    <!-- Content area -->
    <lv_obj width="100%"
            height="content" style_min_height="140" style_bg_opa="0" style_border_width="0" style_pad_left="#space_lg"
            style_pad_right="#space_lg" style_pad_top="#space_lg" style_pad_bottom="#space_lg" flex_flow="column"
            style_flex_cross_place="center" style_pad_gap="#space_md">
      <!-- Warning icon -->
      <icon src="alert_octagon" size="lg" color="#error_color"/>
      <!-- Title -->
      <text_heading width="100%" text="Stop Print?" style_text_align="center"/>
      <!-- Warning message -->
      <text_body width="100%"
                 text="Are you sure you want to cancel this print? All progress will be lost." long_mode="wrap"
                 style_text_align="center" style_text_color="#text_secondary"/>
    </lv_obj>
    <!-- Button row -->
    <modal_button_row secondary_text="Keep Printing"
                      secondary_callback="on_print_cancel_dismiss" primary_text="Stop"
                      primary_callback="on_print_cancel_confirm" primary_bg_color="#error_color"/>
  </view>
</component>

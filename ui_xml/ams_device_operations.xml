<!-- AMS Management Overlay Panel -->
<!-- Quick Actions, system info, and progressive disclosure sections -->
<component>
  <view name="ams_device_operations"
        extends="overlay_panel" width="#overlay_panel_width_full" title="AMS Management" title_tag="AMS Management" bg_color="#screen_bg">
    <!-- Content Area (scrollable) -->
    <lv_obj name="overlay_content"
            width="100%" flex_grow="1" style_pad_all="#space_md" scrollable="true" flex_flow="column"
            style_pad_gap="#space_md">

      <!-- System info line (e.g. "System: AFC · v1.2.3") -->
      <text_muted name="system_info_label" width="100%" bind_text="ams_device_ops_system_info"/>

      <!-- ================================================================== -->
      <!-- Card 1: Quick Actions & Behavior                                    -->
      <!-- ================================================================== -->
      <ui_card name="quick_actions_card"
               width="100%" height="content" style_radius="#border_radius" style_pad_all="#space_md" flex_flow="column"
               style_pad_gap="#space_md">

        <!-- Quick Actions Header -->
        <lv_obj width="100%"
                height="content" style_pad_all="0" flex_flow="row" style_flex_cross_place="center"
                style_pad_gap="#space_sm" scrollable="false">
          <icon src="flash" size="sm" variant="primary"/>
          <text_body text="Quick Actions" translation_tag="Quick Actions"/>
        </lv_obj>

        <!-- Action Buttons Row: Home | Recover | Abort -->
        <lv_obj name="action_buttons_row"
                width="100%" height="content" style_pad_all="0" flex_flow="row" style_pad_gap="#space_sm"
                scrollable="false">
          <!-- Home Button -->
          <ui_button name="btn_home" height="44" icon="home" text="Home" translation_tag="Home" flex_grow="1">
            <event_cb trigger="clicked" callback="on_ams_device_ops_home"/>
          </ui_button>
          <!-- Recover Button -->
          <ui_button name="btn_recover" height="44" icon="refresh" text="Recover" translation_tag="Recover" flex_grow="1">
            <event_cb trigger="clicked" callback="on_ams_device_ops_recover"/>
          </ui_button>
          <!-- Abort Button -->
          <ui_button name="btn_abort" height="44" icon="stop" text="Abort" translation_tag="Abort" flex_grow="1">
            <event_cb trigger="clicked" callback="on_ams_device_ops_abort"/>
          </ui_button>
        </lv_obj>

        <!-- Divider -->
        <lv_obj width="100%" height="1" style_bg_color="#text_muted" style_bg_opa="30"/>

        <!-- Bypass Mode Container (hidden when bypass not supported) -->
        <lv_obj name="bypass_container" width="100%" height="content" style_pad_all="0"
                style_layout="flex" style_flex_flow="column" scrollable="false">
          <bind_flag_if_eq subject="ams_device_ops_supports_bypass" flag="hidden" ref_value="0"/>

          <!-- Virtual toggle (no hardware sensor) -->
          <lv_obj name="bypass_virtual_row"
                  width="100%" height="content" style_pad_all="0" flex_flow="row"
                  style_flex_main_place="space_between" style_flex_cross_place="center">
            <bind_flag_if_eq subject="ams_device_ops_hw_bypass_sensor" flag="hidden" ref_value="1"/>
            <lv_obj height="content"
                    style_pad_all="0" flex_flow="row" style_flex_cross_place="center" style_pad_gap="#space_sm"
                    scrollable="false" flex_grow="1">
              <icon src="arrow_left_right" size="sm" variant="secondary"/>
              <lv_obj height="content" style_pad_all="0" flex_flow="column" style_pad_gap="#space_xs" scrollable="false">
                <text_body text="Bypass Mode" translation_tag="Bypass Mode"/>
                <text_small text="Feed filament directly to extruder" translation_tag="Feed filament directly to extruder"/>
              </lv_obj>
            </lv_obj>
            <ui_switch name="bypass_toggle" size="small">
              <bind_state_if_eq subject="ams_device_ops_bypass_active" state="checked" ref_value="1"/>
              <event_cb trigger="value_changed" callback="on_ams_device_ops_bypass_toggled"/>
            </ui_switch>
          </lv_obj>

          <!-- Hardware sensor indicator (read-only) -->
          <lv_obj name="bypass_hw_row"
                  width="100%" height="content" style_pad_all="0" flex_flow="row"
                  style_flex_main_place="space_between" style_flex_cross_place="center">
            <bind_flag_if_eq subject="ams_device_ops_hw_bypass_sensor" flag="hidden" ref_value="0"/>
            <lv_obj height="content"
                    style_pad_all="0" flex_flow="row" style_flex_cross_place="center" style_pad_gap="#space_sm"
                    scrollable="false" flex_grow="1">
              <icon src="arrow_left_right" size="sm" variant="secondary"/>
              <lv_obj height="content" style_pad_all="0" flex_flow="column" style_pad_gap="#space_xs" scrollable="false">
                <text_body text="Bypass Mode" translation_tag="Bypass Mode"/>
                <text_small text="Controlled by hardware sensor" translation_tag="Controlled by hardware sensor"/>
              </lv_obj>
            </lv_obj>
            <status_pill name="bypass_status_pill" text="Inactive" variant="muted"/>
          </lv_obj>
        </lv_obj>

        <!-- Auto-Heat Info Row (shown when supported) -->
        <lv_obj name="auto_heat_row"
                width="100%" height="content" style_pad_all="0" flex_flow="row" style_flex_main_place="start"
                style_flex_cross_place="center" style_pad_gap="#space_sm">
          <bind_flag_if_eq subject="ams_device_ops_supports_auto_heat" flag="hidden" ref_value="0"/>
          <!-- Left side: Icon -->
          <icon src="fire" size="sm" variant="secondary"/>
          <!-- Middle: Label/Description -->
          <lv_obj height="content"
                  style_pad_all="0" flex_flow="column" style_pad_gap="#space_xs" scrollable="false" flex_grow="1">
            <text_body text="Auto-Heat on Load" translation_tag="Auto-Heat on Load"/>
            <text_small text="Extruder heats automatically based on material" translation_tag="Extruder heats automatically based on material"/>
          </lv_obj>
          <!-- Right side: Status indicator -->
          <icon src="check_circle" size="sm" variant="primary"/>
        </lv_obj>

        <!-- Status Row -->
        <lv_obj name="status_row"
                width="100%" height="content" style_pad_all="0" flex_flow="row" style_flex_main_place="start"
                style_flex_cross_place="center" style_pad_gap="#space_sm">
          <icon src="info" size="sm" variant="secondary"/>
          <lv_obj height="content"
                  style_pad_all="0" flex_flow="column" style_pad_gap="#space_xs" scrollable="false" flex_grow="1">
            <text_body text="Status" translation_tag="Status"/>
            <text_small name="status_label" bind_text="ams_device_ops_status"/>
          </lv_obj>
        </lv_obj>
      </ui_card>

      <!-- ================================================================== -->
      <!-- Section List (progressive disclosure — rows push detail overlays) -->
      <!-- ================================================================== -->
      <ui_card name="sections_card"
               width="100%" height="content" style_radius="#border_radius" style_pad_all="#space_sm" flex_flow="column"
               style_pad_gap="0">
        <bind_flag_if_eq subject="ams_device_ops_has_backend" flag="hidden" ref_value="0"/>
        <!-- Dynamic section rows container (populated in C++) -->
        <lv_obj name="section_list_container"
                width="100%" height="content" style_pad_all="0" flex_flow="column" style_pad_gap="0"
                scrollable="false">
          <!-- Section rows added dynamically: icon + label + chevron -->
        </lv_obj>
      </ui_card>

      <!-- ================================================================== -->
      <!-- No Backend Message (shown when no AMS connected)                   -->
      <!-- ================================================================== -->
      <ui_card name="no_backend_card"
               width="100%" height="content" style_radius="#border_radius" style_pad_all="#space_lg" flex_flow="column"
               style_flex_cross_place="center" style_pad_gap="#space_sm">
        <bind_flag_if_eq subject="ams_device_ops_has_backend" flag="hidden" ref_value="1"/>
        <icon src="info" size="lg" variant="secondary"/>
        <text_muted name="no_backend_text" width="100%" text="No AMS system connected." translation_tag="No AMS system connected." style_text_align="center"/>
      </ui_card>

    </lv_obj>
  </view>
</component>

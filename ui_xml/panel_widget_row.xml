<!-- Reusable Home Widget Row Component -->
<!-- Creates a draggable row with icon, label/description, and toggle switch -->
<!-- Switch state/events are wired from C++ (hardware gating, dynamic indices) -->
<component>
  <api>
    <prop name="label" type="string" default="Widget"/>
    <prop name="label_tag" type="string" default=""/>
    <prop name="description" type="string" default=""/>
    <prop name="description_tag" type="string" default=""/>
    <prop name="icon" type="string" default=""/>
    <prop name="icon_variant" type="string" default="secondary"/>
  </api>
  <view name="widget_row"
        extends="lv_obj" width="100%" height="content" flex_flow="row" style_flex_main_place="start"
        style_flex_cross_place="center" style_bg_opa="0" style_border_width="0" style_pad_left="#space_lg"
        style_pad_right="#space_lg" style_pad_top="#space_md" style_pad_bottom="#space_md" style_pad_gap="#space_sm"
        scrollable="false">
    <!-- Drag handle (reorder grip) -->
    <icon name="drag_handle" src="swap_vertical" size="sm" variant="muted"/>
    <!-- Widget icon -->
    <icon name="row_icon" src="$icon" size="sm" variant="$icon_variant"/>
    <!-- Text column: label + description -->
    <lv_obj height="content"
            style_pad_all="0" flex_flow="column" style_pad_gap="#space_xxs" flex_grow="1" scrollable="false">
      <text_body name="label" text="$label" translation_tag="$label_tag"/>
      <text_small name="description" text="$description" translation_tag="$description_tag"/>
    </lv_obj>
    <!-- Toggle switch (state set from C++) -->
    <ui_switch name="toggle" size="small"/>
  </view>
</component>

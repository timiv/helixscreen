<!-- Status Bar Component - Persistent icons at top of screen -->
<component>
  <view extends="lv_obj" name="status_bar" width="100%" height="40"
        style_bg_opa="0" style_border_width="0"
        style_pad_left="#padding_small" style_pad_right="#padding_small"
        style_pad_top="#padding_tiny" style_pad_bottom="#padding_tiny"
        style_pad_gap="#gap_normal"
        flex_flow="row" style_flex_main_place="end" style_flex_cross_place="center"
        scrollbar_mode="off">

    <!-- Network status icon (LV_SYMBOL_WIFI) -->
    <lv_label name="status_network_icon" text="&#xF1EB;"
              style_text_font="#font_heading"
              style_text_color="#text_secondary"
              clickable="true">
      <event_cb trigger="clicked" callback="status_network_icon_clicked"/>
    </lv_label>

    <!-- Printer status icon (LV_SYMBOL_IMAGE) -->
    <lv_label name="status_printer_icon" text="&#xF03E;"
              style_text_font="#font_heading"
              style_text_color="#text_secondary"
              clickable="true">
      <event_cb trigger="clicked" callback="status_printer_icon_clicked"/>
    </lv_label>

    <!-- Notification alert icon (LV_SYMBOL_BELL, hidden by default) -->
    <lv_label name="status_notification_icon" text="&#xF0F3;"
              style_text_font="#font_heading"
              style_text_color="#text_secondary"
              clickable="true"
              hidden="true">
      <event_cb trigger="clicked" callback="status_notification_icon_clicked"/>
    </lv_label>

    <!-- Notification history button with unread badge -->
    <lv_obj name="status_notification_history_container"
            style_bg_opa="0" style_border_width="0"
            style_pad_all="0"
            width="60" height="40"
            clickable="true">
      <event_cb trigger="clicked" callback="status_notification_history_clicked"/>

      <!-- Bell icon (LV_SYMBOL_BELL) -->
      <lv_label name="status_notification_history_icon" text="&#xF0F3;"
                align="center"
                style_text_font="#font_heading"
                style_text_color="#text_secondary"/>

      <!-- Unread badge (hidden when count is 0) -->
      <lv_obj name="notification_badge"
              width="20" height="20"
              align="top_right"
              style_radius="10"
              style_bg_color="#error_color"
              style_border_width="0"
              style_pad_all="0"
              hidden="true">
        <lv_label name="notification_badge_count" text="0"
                  align="center"
                  style_text_font="montserrat_12"
                  style_text_color="#FFFFFF"/>
      </lv_obj>
    </lv_obj>
  </view>
</component>

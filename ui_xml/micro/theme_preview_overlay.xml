<!-- MICRO OVERRIDE of ui_xml/theme_preview_overlay.xml for 480x272 displays -->
<!-- Divergences from standard:
     - Uses #overlay_panel_width_full (vs default width)
     - Tighter padding: #space_sm (vs #space_md)
     - Action buttons in header bar use #button_height_sm + #space_xs padding
-->
<component>
  <view name="theme_preview_overlay"
        extends="overlay_panel" width="#overlay_panel_width_full" title="Theme" title_tag="Theme" bg_color="#screen_bg"
        hide_action_button="false" action_button_text="Apply" action_button_callback="on_apply_theme_clicked"
        action_button_height="#button_height_sm" action_button_pad="#space_xs"
        action_button_disabled_subject="theme_apply_disabled" hide_action_button_2="false" action_button_2_text="Edit"
        action_button_2_callback="on_edit_colors_clicked" action_button_2_bg_color="#secondary">
    <lv_obj name="overlay_content"
            width="100%" flex_grow="1" style_pad_all="#space_sm" flex_flow="column" style_pad_gap="#space_sm"
            scrollable="true">
      <!-- Theme Selection Controls -->
      <lv_obj name="theme_controls_row"
              width="100%" height="content" flex_flow="row" style_pad_all="0" style_pad_gap="#space_sm"
              style_flex_cross_place="center" scrollable="false">
        <!-- Theme Preset Dropdown -->
        <lv_obj width="0"
                height="content" flex_grow="1" flex_flow="column" style_pad_all="0" style_pad_gap="#space_xs"
                scrollable="false">
          <text_small name="preview_label_preset" text="Theme Preset" translation_tag="Theme Preset"/>
          <lv_dropdown name="theme_preset_dropdown" width="100%" height="#input_height">
            <event_cb trigger="value_changed" callback="on_theme_preset_changed"/>
          </lv_dropdown>
        </lv_obj>
        <!-- Dark/Light Mode Toggle (visibility controlled by reactive binding) -->
        <lv_obj name="dark_mode_toggle_container"
                width="content" height="content" flex_flow="column" style_pad_all="#space_xs" style_pad_gap="#space_xs"
                scrollable="false">
          <bind_flag_if_eq subject="settings_dark_mode_available" flag="hidden" ref_value="0"/>
          <text_small name="preview_label_dark_mode" text="Dark Mode" translation_tag="Dark Mode"/>
          <ui_switch name="preview_dark_mode_toggle" size="small" checked="true">
            <event_cb trigger="value_changed" callback="on_preview_dark_mode_toggled"/>
          </ui_switch>
        </lv_obj>
      </lv_obj>
      <text_muted name="preview_description"
                  text="Explore how the selected palette shapes text, controls, and status colors." translation_tag="Explore how the selected palette shapes text, controls, and status colors." long_mode="wrap"/>
      <!-- Preview Cards Row -->
      <lv_obj name="preview_row"
              width="100%" height="content" flex_flow="row" style_pad_all="0" style_pad_gap="#space_sm"
              scrollable="false">
        <!-- Typography Preview Card -->
        <ui_card name="preview_typography_card" width="0" height="content" flex_grow="3" flex_flow="column">
          <lv_obj width="100%"
                  height="content" flex_flow="row" style_pad_all="0" style_pad_gap="#space_sm"
                  style_flex_cross_place="center" scrollable="false">
            <icon name="preview_icon_typography" src="tune" size="sm" variant="primary"/>
            <text_heading name="preview_sample_heading" text="Heading" translation_tag="Heading" flex_grow="1"/>
            <ui_button name="preview_open_button"
                       width="content" height="#button_height_sm" text="Open" translation_tag="Open" variant="tertiary">
              <event_cb trigger="clicked" callback="on_preview_open_modal"/>
            </ui_button>
          </lv_obj>
          <text_body name="preview_sample_body"
                     width="100%" text="Body text supports longer guidance while staying readable." translation_tag="Body text supports longer guidance while staying readable." long_mode="wrap"/>
          <text_small name="preview_sample_small" text="Small labels help keep controls calm and focused." translation_tag="Small labels help keep controls calm and focused."/>
          <divider_horizontal/>
          <lv_obj width="100%"
                  height="content" flex_flow="row" style_pad_all="0" style_pad_gap="#space_md"
                  style_flex_cross_place="center" scrollable="false">
            <lv_obj width="0"
                    height="content" flex_grow="1" flex_flow="column" style_pad_all="0" style_pad_gap="#space_xs"
                    scrollable="false">
              <text_small name="preview_label_mode" text="Mode" translation_tag="Mode"/>
              <lv_dropdown name="preview_dropdown" width="100%" height="#input_height" options="Standard&#10;Quiet&#10;Focused"/>
            </lv_obj>
            <lv_obj height="content"
                    flex_flow="column" style_pad_all="#space_xs" style_pad_gap="#space_xs" scrollable="false">
              <text_small name="preview_label_auto" text="Auto" translation_tag="Auto"/>
              <ui_switch name="preview_switch" size="small" checked="true"/>
            </lv_obj>
          </lv_obj>
          <text_small name="preview_label_input" text="Input" translation_tag="Input"/>
          <text_input name="preview_text_input"
                      width="100%" height="#input_height" placeholder_text="Type to preview input field..." placeholder_tag="Type to preview input field..." translation_tag="Type to preview input field..."/>
          <text_small name="preview_label_intensity" text="Intensity" translation_tag="Intensity"/>
          <lv_obj width="100%"
                  height="content" flex_flow="row" style_pad_top="#space_sm" style_pad_bottom="#space_sm"
                  style_pad_left="0" style_pad_right="0" style_pad_gap="#space_sm" style_flex_cross_place="center"
                  scrollable="false">
            <icon src="light_off" size="xs" variant="secondary"/>
            <lv_slider name="preview_intensity_slider" flex_grow="1" min_value="0" max_value="100" value="60"/>
            <icon src="light" size="xs" variant="primary"/>
            <lv_checkbox name="preview_checkbox" text="Enable" translation_tag="Enable" style_pad_all="#space_xs" checked="true"/>
          </lv_obj>
        </ui_card>
        <!-- Actions Preview Card -->
        <ui_card name="preview_actions_card" width="0" height="content" flex_grow="2" flex_flow="column">
          <bind_flag_if_eq subject="ui_breakpoint" flag="hidden" ref_value="0"/>
          <lv_obj width="100%"
                  height="content" flex_flow="row" style_pad_all="0" style_pad_gap="#space_sm"
                  style_flex_cross_place="center" scrollable="false">
            <icon name="preview_icon_actions" src="check_circle" size="sm" variant="primary"/>
            <text_heading name="preview_heading_actions" text="Actions" translation_tag="Actions"/>
          </lv_obj>
          <lv_obj width="100%"
                  height="content" flex_flow="row" style_pad_all="0" style_pad_gap="#space_sm"
                  style_flex_cross_place="center" scrollable="false">
            <ui_button name="example_btn_primary"
                       width="0" height="#button_height_sm" text="Primary" translation_tag="Primary" variant="primary" flex_grow="1"/>
            <ui_button name="example_btn_secondary"
                       width="0" height="#button_height_sm" text="Secondary" translation_tag="Secondary" variant="secondary" flex_grow="1"/>
          </lv_obj>
          <lv_obj width="100%"
                  height="content" flex_flow="row" style_pad_all="0" style_pad_gap="#space_sm"
                  style_flex_cross_place="center" scrollable="false">
            <ui_button name="example_btn_tertiary"
                       width="0" height="#button_height_sm" text="Tertiary" translation_tag="Tertiary" variant="tertiary" flex_grow="1"/>
            <ui_button name="example_btn_warning"
                       width="0" height="#button_height_sm" text="Warning" translation_tag="Warning" variant="warning" flex_grow="1"/>
          </lv_obj>
          <ui_button name="example_btn_danger" width="100%" height="#button_height_sm" text="Danger" translation_tag="Danger" variant="danger"/>
          <divider_horizontal/>
          <lv_obj width="100%"
                  height="content" flex_flow="row" style_pad_all="0" style_pad_gap="#space_sm"
                  style_flex_cross_place="center" scrollable="false">
            <icon src="info" size="sm" variant="info"/>
            <icon src="check_circle" size="sm" variant="success"/>
            <icon src="alert" size="sm" variant="warning"/>
            <icon src="alert_octagon" size="sm" variant="danger"/>
            <text_small name="preview_label_status_icons" text="Status icons" translation_tag="Status icons"/>
          </lv_obj>
          <lv_obj width="100%"
                  height="content" flex_flow="column" style_pad_all="0" style_pad_gap="#space_xs" scrollable="false">
            <text_small name="preview_label_status" text="Status" translation_tag="Status"/>
            <lv_obj name="aurora_row"
                    width="100%" height="content" flex_flow="row" style_pad_all="0"
                    style_flex_main_place="space_between" style_flex_cross_place="center" scrollable="false">
              <lv_obj name="aurora_0"
                      width="#color_preview_size_small" height="#color_preview_size_small" style_bg_color="#danger"
                      style_bg_opa="255" style_border_width="1" style_border_color="#border" style_border_opa="80"
                      scrollable="false"/>
              <lv_obj name="aurora_1"
                      width="#color_preview_size_small" height="#color_preview_size_small" style_bg_color="#warning"
                      style_bg_opa="255" style_border_width="1" style_border_color="#border" style_border_opa="80"
                      scrollable="false"/>
              <lv_obj name="aurora_2"
                      width="#color_preview_size_small" height="#color_preview_size_small" style_bg_color="#success"
                      style_bg_opa="255" style_border_width="1" style_border_color="#border" style_border_opa="80"
                      scrollable="false"/>
              <lv_obj name="aurora_3"
                      width="#color_preview_size_small" height="#color_preview_size_small" style_bg_color="#info"
                      style_bg_opa="255" style_border_width="1" style_border_color="#border" style_border_opa="80"
                      scrollable="false"/>
            </lv_obj>
          </lv_obj>
        </ui_card>
      </lv_obj>
      <!-- Background Preview -->
      <ui_card name="preview_background"
               width="100%" height="content" style_bg_color="#screen_bg" style_pad_gap="#space_xs" flex_flow="column">
        <text_body name="preview_bg_title" text="App Background" translation_tag="App Background"/>
        <text_small name="preview_bg_description"
                    text="Surfaces inherit app background tokens for light and dark modes." translation_tag="Surfaces inherit app background tokens for light and dark modes." long_mode="wrap"/>
      </ui_card>
      <!-- <info_note icon="info" text="Theme changes apply after restart." translation_tag="Theme changes apply after restart."/> -->
    </lv_obj>
  </view>
</component>

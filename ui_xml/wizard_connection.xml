<component>
  <!-- First-Run Wizard: Connection Screen -->
  <!-- User enters Moonraker IP/hostname and port, tests connection -->
  <view extends="lv_obj" width="100%" height="100%" scrollable="false" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column" style_flex_main_place="start" style_flex_cross_place="start" name="wizard_connection_root">
    <!-- Help text -->
    <text_body text="Enter your printer's network address" width="100%"/>
    <text_small text="Usually looks like 127.0.0.1 or printer.local" width="100%"/>
    <!-- Card container for inputs and button -->
    <ui_card width="100%" flex_grow="1" style_pad_gap="#gap_normal" scrollable="false" flex_flow="column" style_flex_main_place="start" style_flex_cross_place="center">
      <!-- Horizontal input row: Network Address (left) and Port (right) -->
      <lv_obj width="100%" flex_grow="6" scrollable="false" style_border_width="0" style_pad_all="0" style_pad_gap="#gap_small" flex_flow="row">
        <!-- Left -->
        <lv_obj flex_grow="3" style_border_width="0" style_pad_all="0" style_pad_gap="#gap_tiny" flex_flow="column" style_flex_main_place="start" style_flex_cross_place="start">
          <text_body text="Network Address" width="100%"/>
          <lv_textarea name="ip_input" bind_text="connection_ip" placeholder_text="127.0.0.1" width="100%" height="#input_height"/>
        </lv_obj>
        <!-- Right -->
        <lv_obj flex_grow="1" style_border_width="0" style_pad_all="0" style_pad_gap="#gap_tiny" flex_flow="column" style_flex_main_place="start" style_flex_cross_place="start">
          <text_body text="Port" width="100%"/>
          <lv_textarea name="port_input" bind_text="connection_port" placeholder_text="7125" width="100%" height="#input_height"/>
        </lv_obj>
      </lv_obj>
      <!-- network address and port -->
      <!-- Test connection button and status row -->
      <lv_obj width="100%" flex_grow="10" style_bg_opa="0" style_border_width="0" scrollable="false" style_pad_all="0" style_pad_gap="#gap_normal" flex_flow="row" style_flex_main_place="start" style_flex_cross_place="start">
        <!-- Test Connection Button -->
        <lv_button name="btn_test_connection" width="200" height="#button_height">
          <text_body text="Test Connection" align="center"/>
          <!-- Disable button while connection test is in progress -->
          <lv_obj-bind_state_if_eq subject="connection_testing" state="disabled" ref_value="1"/>
          <!-- Remove clickable flag when connection test is in progress -->
          <lv_obj-bind_flag_if_eq subject="connection_testing" flag="clickable" ref_value="0"/>
        </lv_button>
        <!-- Connection Status (icon + text) -->
        <lv_obj style_pad_left="#gap_small" flex_grow="1" flex_flow="row" style_border_width="0" style_flex_main_place="start" style_flex_cross_place="center" style_pad_column="#gap_small">
          <!-- Status Icon (FontAwesome) -->
          <lv_label name="connection_status_icon" bind_text="connection_status_icon" style_text_font="fa_icons_16"/>
          <!-- Status Text (Montserrat) -->
          <text_body name="connection_status_text" bind_text="connection_status_text"/>
        </lv_obj>
      </lv_obj>
    </ui_card>
  </view>
</component>

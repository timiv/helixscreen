<component>
  <!-- First-Run Wizard: Connection Screen -->
  <!-- User enters Moonraker IP/hostname and port, tests connection -->
  <consts>
    <!-- Step metadata (read by wizard orchestrator) -->
    <str name="step_title" value="Printer Setup: Connection"/>
    <str name="step_subtitle" value="Enter 127.0.0.1 if Moonraker is local, or the hostname/IP of a remote printer"/>
    <int name="step_order" value="2"/>
  </consts>
  <view name="wizard_connection_root"
        extends="lv_obj" width="100%" height="100%" scrollable="false" style_bg_opa="0" style_border_width="0"
        style_pad_all="0" flex_flow="column" style_flex_main_place="start" style_flex_cross_place="start">
    <!-- Card container for inputs and button -->
    <ui_card width="100%"
             flex_grow="1" style_pad_gap="#space_md" flex_flow="column" style_flex_main_place="start"
             style_flex_cross_place="center">
      <!-- mDNS Discovery Section -->
      <lv_obj name="discovery_section"
              width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column">
        <lv_obj width="100%"
                height="content" flex_flow="row" style_flex_cross_place="center" style_bg_opa="0" style_border_width="0"
                style_pad_all="0">
          <text_body text="Discovered Printers" style_flex_grow="1"/>
          <text_small name="discovery_status" bind_text="mdns_status" style_text_color="#text_secondary"/>
        </lv_obj>
        <lv_dropdown name="printer_dropdown" width="100%">
          <event_cb trigger="value_changed" callback="on_printer_selected"/>
        </lv_dropdown>
      </lv_obj>

      <!-- Separator -->
      <text_body text="Or Enter Manually"
                 style_text_color="#text_secondary" style_pad_top="#space_sm" style_pad_bottom="0"/>

      <!-- Horizontal input row: Network Address (left) and Port (right) -->
      <lv_obj width="100%"
              flex_grow="6" scrollable="false" style_border_width="0" style_pad_all="0" style_pad_gap="#space_sm"
              flex_flow="row">
        <!-- Left -->
        <lv_obj flex_grow="3"
                style_border_width="0" style_pad_all="0" style_pad_gap="#space_xs" flex_flow="column"
                style_flex_main_place="start" style_flex_cross_place="start">
          <text_body width="100%" text="Network Address"/>
          <text_input name="ip_input" width="100%" bind_text="connection_ip" placeholder_text="127.0.0.1"/>
        </lv_obj>
        <!-- Right -->
        <lv_obj flex_grow="1"
                style_border_width="0" style_pad_all="0" style_pad_gap="#space_xs" flex_flow="column"
                style_flex_main_place="start" style_flex_cross_place="start">
          <text_body width="100%" text="Port"/>
          <text_input name="port_input"
                      width="100%" bind_text="connection_port" placeholder_text="7125" keyboard_hint="numeric"/>
        </lv_obj>
      </lv_obj>
      <!-- network address and port -->
      <!-- Test connection button and status row -->
      <lv_obj width="100%"
              height="content" style_bg_opa="0" style_border_width="0" scrollable="false" style_pad_all="0"
              style_pad_gap="#space_sm" flex_flow="column" style_flex_main_place="start" style_flex_cross_place="start">
        <!-- Button + Status row -->
        <lv_obj width="100%"
                height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" style_pad_gap="#space_md"
                flex_flow="row" style_flex_main_place="start" style_flex_cross_place="center">
          <!-- Test Connection Button -->
          <lv_button name="btn_test_connection" width="200" height="#button_height">
            <text_body text="Test Connection" align="center"/>
            <!-- Disable button while connection test is in progress -->
            <bind_state_if_eq subject="connection_testing" state="disabled" ref_value="1"/>
            <!-- Remove clickable flag when connection test is in progress -->
            <bind_flag_if_eq subject="connection_testing" flag="clickable" ref_value="0"/>
          </lv_button>
          <!-- Connection Status (icon + text) -->
          <lv_obj height="content"
                  style_pad_left="#space_sm" flex_grow="1" flex_flow="row" style_bg_opa="0" style_border_width="0"
                  style_flex_main_place="start" style_flex_cross_place="center" style_pad_column="#space_sm">
            <!-- Status Spinner (visible ONLY when discovering) -->
            <spinner name="connection_spinner" size="sm">
              <bind_flag_if_eq subject="connection_discovering" flag="hidden" ref_value="0"/>
            </spinner>
            <!-- Status Icon - MDI (hidden when discovering) -->
            <lv_label name="connection_status_icon" bind_text="connection_status_icon" style_text_font="mdi_icons_16">
              <bind_flag_if_eq subject="connection_discovering" flag="hidden" ref_value="1"/>
            </lv_label>
            <!-- Status Text (wrapping enabled to prevent overflow) -->
            <text_body name="connection_status_text"
                       width="0" bind_text="connection_status_text" flex_grow="1" long_mode="wrap"/>
          </lv_obj>
        </lv_obj>
        <!-- Help text: connection must be tested (hidden on successful auto-probe) -->
        <text_small name="help_text"
                    text="Connection must be tested successfully to continue" style_text_color="#text_secondary"/>
      </lv_obj>
    </ui_card>
  </view>
</component>

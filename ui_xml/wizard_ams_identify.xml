<component>
  <!-- First-Run Wizard: AMS Identification Screen (Informational) -->
  <!-- Displays detected AMS system type and lane count -->
  <consts>
    <!-- Step metadata (read by wizard orchestrator) -->
    <str name="step_title" value="Multi-Material System Detected"/>
    <str name="step_subtitle" value="Your printer has an automatic filament changer"/>
    <int name="step_order" value="6"/>
  </consts>
  <view name="wizard_ams_identify_root"
        extends="lv_obj" width="100%" height="100%" style_bg_opa="0" style_border_width="0" style_pad_all="0"
        flex_flow="column" style_flex_main_place="start" style_flex_cross_place="center">

    <!-- Info card -->
    <ui_card width="100%"
             flex_grow="1" style_radius="#border_radius" style_pad_all="#space_xl" style_pad_gap="#space_sm"
             flex_flow="column" style_flex_main_place="center" style_flex_cross_place="center" 
             style_flex_track_place="center">

      <!-- Logo image - 64x64 icons, use min_width/min_height to prevent clipping -->
      <lv_image name="ams_logo" width="64" height="64" min_width="64" min_height="64"
                inner_align="center" hidden="true"/>

      <!-- Spacer between logo and text -->
      <lv_obj width="1" height="#space_md" style_bg_opa="0" style_border_width="0"/>

      <!-- AMS Type name - REACTIVE BINDING -->
      <text_heading name="ams_type_label" bind_text="wizard_ams_type"
                    style_text_align="center"/>

      <!-- Details: "4 lanes â€¢ Turtle_1" - REACTIVE BINDING -->
      <text_body name="ams_details_label" bind_text="wizard_ams_details"
                 style_text_color="#text_secondary" style_text_align="center"/>

      <!-- Spacer between content and message -->
      <lv_obj width="1" height="#space_lg" style_bg_opa="0" style_border_width="0"/>

      <!-- Integration message - static text -->
      <text_body width="85%" style_text_align="center" style_text_color="#text_secondary"
                 text="HelixScreen will integrate with your filament changer for multi-spool/color print operations."/>

    </ui_card>

  </view>
</component>

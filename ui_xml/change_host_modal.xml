<!-- Change Printer Host Modal - Allows changing Moonraker connection -->
<!-- NOTE: Backdrop created programmatically by Modal system -->
<component>
  <!-- Subjects managed in C++ (init_subjects registers change_host_testing, change_host_validated) -->
  <!-- Dialog card (backdrop created programmatically) -->
  <view name="change_host_modal"
        extends="ui_dialog" width="70%" height="content" align="center"
        flex_flow="column" style_flex_main_place="start" style_pad_gap="0">
    <!-- Form container -->
    <lv_obj name="form_container"
            width="100%" height="content" style_min_height="200"
            style_pad_left="#space_lg" style_pad_right="#space_lg"
            style_pad_top="#space_lg" style_pad_bottom="#space_lg"
            flex_flow="column" style_flex_cross_place="center"
            style_pad_gap="#space_md">
      <!-- Title -->
      <text_heading width="100%" text="Change Printer Host" translation_tag="Change Printer Host" style_text_align="center"/>
      <!-- Input row: Host (75%) + Port (25%) -->
      <lv_obj width="100%" height="content" scrollable="false"
              style_pad_all="0" style_pad_gap="#space_sm" flex_flow="row">
        <!-- Left: Host -->
        <lv_obj flex_grow="3"
                style_pad_all="0" style_pad_gap="#space_xs" flex_flow="column"
                style_flex_main_place="start" style_flex_cross_place="start">
          <text_body width="100%" text="Host" translation_tag="Host"/>
          <text_input name="host_input" width="100%"
                      bind_text="change_host_ip"
                      placeholder_text="192.168.1.100" placeholder_tag="192.168.1.100"/>
        </lv_obj>
        <!-- Right: Port -->
        <lv_obj flex_grow="1"
                style_pad_all="0" style_pad_gap="#space_xs" flex_flow="column"
                style_flex_main_place="start" style_flex_cross_place="start">
          <text_body width="100%" text="Port" translation_tag="Port"/>
          <text_input name="port_input" width="100%"
                      bind_text="change_host_port"
                      placeholder_text="7125" keyboard_hint="numeric"/>
        </lv_obj>
      </lv_obj>
      <!-- Test Connection button + Status row -->
      <lv_obj width="100%" height="content" style_pad_all="0" style_pad_gap="#space_md"
              flex_flow="row" style_flex_main_place="start" style_flex_cross_place="center">
        <ui_button name="btn_test_connection" width="200"
                   text="Test Connection" translation_tag="Test Connection">
          <bind_state_if_eq subject="change_host_testing" state="disabled" ref_value="1"/>
          <event_cb trigger="clicked" callback="on_change_host_test"/>
        </ui_button>
        <!-- Status display -->
        <lv_obj style_pad_left="#space_sm" flex_grow="1" flex_flow="row"
                style_flex_main_place="start" style_flex_cross_place="center"
                style_pad_column="#space_sm">
          <lv_label name="status_icon" text="" style_text_font="mdi_icons_16"/>
          <text_body name="status_text" width="0" text="" flex_grow="1" long_mode="wrap"/>
        </lv_obj>
      </lv_obj>
    </lv_obj>
    <!-- Divider -->
    <divider_horizontal/>
    <!-- Button row -->
    <lv_obj width="100%" height="#button_height" style_pad_all="0" style_pad_gap="0" flex_flow="row">
      <ui_button name="modal_cancel_btn" height="100%" text="Cancel" translation_tag="Cancel"
                 flex_grow="1" style_radius="0">
        <event_cb trigger="clicked" callback="on_change_host_cancel"/>
      </ui_button>
      <divider_vertical/>
      <ui_button name="modal_save_btn" height="100%" text="Save" translation_tag="Save"
                 flex_grow="1" style_radius="0">
        <bind_state_if_eq subject="change_host_validated" state="disabled" ref_value="0"/>
        <event_cb trigger="clicked" callback="on_change_host_save"/>
      </ui_button>
    </lv_obj>
  </view>
</component>

<!-- Filament Sensor Row Component -->
<!-- A single row in the filament sensors settings list -->
<!-- Shows sensor name, role dropdown, and enable toggle -->
<!-- Usage: Created dynamically by C++ in sensors_overlay -->
<component>
  <api>
    <prop name="sensor_name" type="string" default="Sensor"/>
    <prop name="sensor_type" type="string" default="switch"/>
  </api>
  <view name="sensor_row"
        extends="lv_obj" width="100%" height="content" style_bg_opa="0" style_border_width="0"
        style_pad_left="#space_sm" style_pad_right="#space_sm" style_pad_top="#space_md" style_pad_bottom="#space_md"
        scrollable="false" flex_flow="column" style_pad_gap="#space_sm">
    <!-- Top Row: Name + Type indicator -->
    <lv_obj width="100%"
            height="content" style_pad_all="0" scrollable="false" flex_flow="row" style_flex_main_place="space_between"
            style_flex_cross_place="center">
      <!-- Left: Sensor name -->
      <lv_obj height="content"
              style_pad_all="0" scrollable="false" flex_flow="row" style_flex_cross_place="center"
              style_pad_gap="#space_sm">
        <icon src="filament" size="sm" variant="primary"/>
        <text_body name="name_label" text="$sensor_name"/>
      </lv_obj>
      <!-- Right: Type badge (switch/motion) -->
      <status_pill name="type_label" text="$sensor_type" variant="muted"/>
    </lv_obj>
    <!-- Bottom Row: Role dropdown + Enable toggle -->
    <lv_obj width="100%"
            height="content" style_pad_all="0" scrollable="false" flex_flow="row" style_flex_main_place="space_between"
            style_flex_cross_place="center">
      <!-- Role Dropdown -->
      <lv_obj height="content"
              style_pad_all="0" scrollable="false" flex_flow="row" style_flex_cross_place="center"
              style_pad_gap="#space_sm">
        <text_small text="Role:" translation_tag="Role:"/>
        <lv_dropdown name="role_dropdown"
                     width="120" height="36" options="None&#10;Runout&#10;Toolhead&#10;Entry" style_radius="#border_radius"
                     style_border_width="0"/>
      </lv_obj>
      <!-- Enable Toggle -->
      <lv_obj height="content"
              style_pad_all="0" scrollable="false" flex_flow="row" style_flex_cross_place="center"
              style_pad_gap="#space_sm">
        <text_small text="Enabled" translation_tag="Enabled"/>
        <ui_switch name="enable_toggle" size="tiny"/>
      </lv_obj>
    </lv_obj>
    <!-- Divider at bottom -->
    <divider_horizontal style_margin_top="#space_xs"/>
  </view>
</component>

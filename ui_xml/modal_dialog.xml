<!-- NOTE: Backdrop created programmatically by Modal system -->
<component>
  <api>
    <prop name="title" type="string"/>
    <prop name="title_tag" type="string" default=""/>
    <prop name="message" type="string"/>
    <prop name="message_tag" type="string" default=""/>
  </api>
  <!-- Dialog card (backdrop created programmatically) -->
  <view name="modal_dialog"
        extends="ui_dialog" width="70%" height="content" align="center" flex_flow="column" style_flex_main_place="start"
        style_pad_gap="0">
    <!-- Header row with icon + title -->
    <lv_obj width="100%"
            height="content" style_pad_left="#space_lg" style_pad_right="#space_lg" style_pad_top="#space_lg"
            style_pad_bottom="#space_sm" flex_flow="row" style_flex_cross_place="center" style_pad_gap="#space_sm">
      <!-- INFO icon - shown when dialog_severity=0 (default) -->
      <icon name="icon_info" src="info" size="md" variant="primary">
        <bind_flag_if_not_eq subject="dialog_severity" flag="hidden" ref_value="0"/>
      </icon>
      <!-- WARNING icon - shown when dialog_severity=1 -->
      <icon name="icon_warning" src="alert" size="md" variant="warning" hidden="true">
        <bind_flag_if_not_eq subject="dialog_severity" flag="hidden" ref_value="1"/>
      </icon>
      <!-- ERROR icon - shown when dialog_severity=2 -->
      <icon name="icon_error" src="alert_octagon" size="md" variant="danger" hidden="true">
        <bind_flag_if_not_eq subject="dialog_severity" flag="hidden" ref_value="2"/>
      </icon>
      <!-- Title -->
      <text_heading name="dialog_title" text="$title" translation_tag="$title_tag" style_text_align="left" flex_grow="1"/>
    </lv_obj>
    <!-- Message content area (scrollable for long content) -->
    <!-- Max height ensures long content scrolls instead of making dialog huge -->
    <lv_obj name="content_container"
            width="100%" height="content" style_min_height="60" style_max_height="300" style_pad_left="#space_lg"
            style_pad_right="#space_lg" style_pad_top="0" style_pad_bottom="#space_lg" scrollable="true"
            scroll_snap_y="none">
      <text_body name="dialog_message" width="100%" text="$message" translation_tag="$message_tag" style_text_align="left" long_mode="wrap"/>
    </lv_obj>
    <!-- Horizontal divider above buttons -->
    <divider_horizontal/>
    <!-- Button row -->
    <lv_obj width="100%" height="#button_height" style_pad_all="0" style_pad_gap="0" flex_flow="row">
      <!-- Secondary button - hidden by default, shown when dialog_show_cancel=1 -->
      <ui_button name="btn_secondary"
                 height="100%" flex_grow="1" style_radius="0" focusable="false" hidden="true" bind_text="@dialog_cancel_text">
        <bind_flag_if_eq subject="dialog_show_cancel" flag="hidden" ref_value="0"/>
        <!-- NOTE: Callbacks wired programmatically per-instance, not via XML -->
      </ui_button>
      <!-- Vertical divider between buttons (only when cancel is visible) -->
      <divider_vertical name="btn_divider" hidden="true">
        <bind_flag_if_eq subject="dialog_show_cancel" flag="hidden" ref_value="0"/>
      </divider_vertical>
      <!-- Primary button (always visible) -->
      <ui_button name="btn_primary" height="100%" flex_grow="1" style_radius="0" focusable="false" bind_text="@dialog_primary_text">
        <!-- NOTE: Callbacks wired programmatically per-instance, not via XML -->
      </ui_button>
    </lv_obj>
  </view>
</component>

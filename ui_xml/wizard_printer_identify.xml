<component>
  <!-- First-Run Wizard: Printer Identification Screen -->
  <!-- Auto-detect printer type and allow user to name printer -->
  <view extends="lv_obj" width="100%" height="100%" scrollable="false" style_bg_opa="0" style_border_width="0" style_pad_all="0" style_pad_gap="#gap_normal" flex_flow="column" style_flex_main_place="start" style_flex_cross_place="start" name="wizard_printer_identify_root">
    <!-- Help text -->
    <text_body text="Give your printer a name and confirm its type" width="100%"/>
    <text_small text="We'll try to detect your printer automatically" width="100%"/>
    <!-- Main card container -->
    <ui_card width="100%" flex_grow="1" scrollable="false" style_pad_gap="#gap_normal" flex_flow="column" style_flex_main_place="start" style_flex_cross_place="start">
      <!-- Horizontal row: Printer Name (left) and Printer Type (right) -->
      <lv_obj width="100%" flex_grow="1" scrollable="false" style_bg_opa="0" style_border_width="0" style_pad_all="0" style_pad_gap="#gap_small" flex_flow="row">
        <!-- Left column: Printer name input and status -->
        <lv_obj flex_grow="1" style_bg_opa="0" style_border_width="0" style_pad_all="0" style_pad_gap="#gap_tiny" flex_flow="column" style_flex_main_place="start" style_flex_cross_place="start">
          <text_body text="Printer Name" width="100%"/>
          <lv_textarea name="printer_name_input" bind_text="printer_name" placeholder_text="My Printer" width="100%" height="#input_height"/>
          <!-- Detection status -->
          <text_small name="detection_status" bind_text="printer_detection_status" width="100%" style_pad_top="#gap_small"/>
        </lv_obj>
        <!-- Right column: Printer type selection -->
        <lv_obj flex_grow="1" height="100%" style_bg_opa="0" style_border_width="0" style_pad_all="0" style_pad_gap="#gap_tiny" flex_flow="column" style_flex_main_place="start" style_flex_cross_place="start">
          <text_body text="Printer Type" width="100%"/>
          <!-- Roller options set from PrinterTypes::PRINTER_TYPES_ROLLER in C++ -->
          <lv_roller name="printer_type_roller" width="100%" flex_grow="1" style_text_font="#font_body" style_border_width="2" style_border_opa="60" style_selected_bg_color="#primary_color"/>
        </lv_obj>
      </lv_obj>
    </ui_card>
  </view>
</component>

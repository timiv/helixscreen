<!-- Humidity Sensor Row Component -->
<!-- A single row for humidity/temperature sensors (BME280, HTU21D) -->
<!-- Shows sensor name, type badge, and enable toggle -->
<!-- Usage: Created dynamically by C++ in sensor settings overlays -->
<component>
  <api>
    <prop name="sensor_name" type="string" default="Humidity Sensor"/>
    <prop name="sensor_type" type="string" default="bme280"/>
  </api>
  <view name="sensor_row"
        extends="lv_obj" width="100%" height="content" style_pad_left="#space_sm" style_pad_right="#space_sm"
        style_pad_top="#space_md" style_pad_bottom="#space_md" scrollable="false" flex_flow="column"
        style_pad_gap="#space_sm">
    <!-- Row: Name + Type badge + Enable toggle -->
    <lv_obj width="100%"
            height="content" style_pad_all="0" scrollable="false" flex_flow="row" style_flex_main_place="space_between"
            style_flex_cross_place="center">
      <!-- Left: Sensor name with icon -->
      <lv_obj height="content"
              style_pad_all="0" scrollable="false" flex_flow="row" style_flex_cross_place="center"
              style_pad_gap="#space_sm">
        <icon src="water" size="sm" variant="primary"/>
        <text_body name="name_label" text="$sensor_name"/>
        <!-- Type badge -->
        <status_pill name="type_label" text="$sensor_type" variant="muted"/>
      </lv_obj>
      <!-- Right: Enable toggle -->
      <lv_obj height="content"
              style_pad_all="0" scrollable="false" flex_flow="row" style_flex_cross_place="center"
              style_pad_gap="#space_sm">
        <text_small text="Enabled" translation_tag="Enabled"/>
        <ui_switch name="enable_toggle" size="tiny"/>
      </lv_obj>
    </lv_obj>
    <!-- Divider at bottom -->
    <divider_horizontal style_margin_top="#space_xs"/>
  </view>
</component>

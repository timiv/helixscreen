<component>
  <consts>
    <!-- Mini bar dimensions (used by C++ for dynamic bar creation) -->
    <px name="status_line_height" value="3"/>
    <px name="status_line_gap" value="2"/>
  </consts>
  <view name="ams_unit_card"
        extends="lv_obj" height="content" scrollable="false" flex_flow="column" style_flex_main_place="start"
        style_flex_cross_place="center" style_bg_color="#elevated_bg" style_bg_opa="255" style_radius="#border_radius"
        style_pad_all="#space_sm" style_pad_gap="#space_xs" style_border_width="1" style_border_color="#border"
        style_border_opa="80" style_min_width="#ams_card_min_width" style_max_width="#ams_card_max_width"
        clickable="true">
    <!-- Unit header: logo + name (clickable=false + event_bubble so clicks reach card) -->
    <lv_obj width="100%"
            height="content" scrollable="false" clickable="false" event_bubble="true" flex_flow="row"
            style_flex_main_place="center" style_flex_cross_place="center" style_pad_all="0"
            style_pad_gap="#space_xs" style_bg_opa="0" style_border_width="0">
      <lv_image name="unit_logo" width="#ams_logo_size" height="#ams_logo_size" inner_align="contain"/>
      <text_body name="unit_name" text="Unit"/>
    </lv_obj>
    <!-- Mini status bars container (clickable=false + event_bubble so clicks reach card) -->
    <lv_obj name="bars_container"
            width="100%" height="#ams_bars_height" scrollable="false" clickable="false" event_bubble="true"
            flex_flow="row" style_flex_main_place="center" style_flex_cross_place="end" style_pad_all="0"
            style_pad_column="#space_xxs" style_bg_opa="0" style_border_width="0"/>
    <!-- Slot count label -->
    <text_small name="slot_count" text="0 slots" event_bubble="true"/>
  </view>
</component>

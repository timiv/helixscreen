<!-- Z-Offset Calibration Panel -->
<!-- Interactive calibration using PROBE_CALIBRATE, TESTZ, ACCEPT, ABORT commands -->
<component>
  <view name="calibration_zoffset_panel"
        extends="lv_obj" width="#overlay_panel_width" height="100%" align="right_mid" style_bg_opa="255"
        style_bg_color="#card_bg" style_pad_all="0" style_border_width="0" scrollable="false" flex_flow="column">
    <!-- Header Bar -->
    <header_bar name="overlay_header" title="Z-Offset Calibration"/>
    <!-- Content Area -->
    <lv_obj name="overlay_content"
            width="100%" flex_grow="1" style_bg_opa="0" style_pad_left="#space_lg" style_pad_right="#space_lg"
            style_pad_top="#space_lg" style_pad_bottom="#space_lg" style_border_width="0" flex_flow="column"
            style_pad_gap="#space_lg" scrollable="false">
      <!-- ================================================================== -->
      <!-- STATE: IDLE (0) - Instructions and Start Button -->
      <!-- ================================================================== -->
      <lv_obj name="state_idle"
              width="100%" flex_grow="1" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column"
              style_flex_main_place="center" style_flex_cross_place="center" style_pad_gap="#space_lg"
              scrollable="false">
        <bind_flag_if_not_eq subject="zoffset_cal_state" flag="hidden" ref_value="0"/>
        <!-- Instructions -->
        <lv_obj width="100%"
                height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column"
                style_pad_gap="#space_sm">
          <text_heading width="100%" text="Paper Test Calibration" style_text_align="center"/>
          <text_small width="100%"
                      text="This calibration uses the paper friction method to set your Z-offset."
                      style_text_align="center"/>
          <text_small width="100%"
                      text="Have a piece of paper ready before starting." style_text_align="center"
                      style_text_color="#text_secondary"/>
        </lv_obj>
        <!-- Steps Preview -->
        <lv_obj width="90%"
                height="content" style_bg_color="#section_bg_color" style_radius="#border_radius"
                style_pad_all="#space_lg" style_border_width="0" flex_flow="column" style_pad_gap="#space_xs">
          <text_small width="100%" text="1. Printer homes and probes the bed"/>
          <text_small width="100%" text="2. Place paper between nozzle and bed"/>
          <text_small width="100%" text="3. Lower nozzle until paper drags slightly"/>
          <text_small width="100%" text="4. Paper should move but with resistance"/>
        </lv_obj>
        <!-- Start Button -->
        <lv_button name="btn_start"
                   width="200" height="56" style_radius="#border_radius" style_bg_color="#primary_color">
          <text_body text="Start Calibration" align="center"/>
          <event_cb trigger="clicked" callback="on_zoffset_start_clicked"/>
        </lv_button>
      </lv_obj>
      <!-- ================================================================== -->
      <!-- STATE: PROBING (1) - Waiting for probe to complete -->
      <!-- ================================================================== -->
      <lv_obj name="state_probing"
              width="100%" flex_grow="1" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column"
              style_flex_main_place="center" style_flex_cross_place="center" style_pad_gap="#space_lg"
              scrollable="false">
        <bind_flag_if_not_eq subject="zoffset_cal_state" flag="hidden" ref_value="1"/>
        <spinner size="lg"/>
        <text_heading text="Probing Bed..." style_text_align="center"/>
        <text_small width="80%" text="Please wait while the printer homes and probes." style_text_align="center"/>
        <!-- Abort Button -->
        <lv_button name="btn_abort_probing"
                   width="120" height="48" style_radius="#border_radius" style_bg_color="#error_color">
          <text_body text="Abort" align="center"/>
          <event_cb trigger="clicked" callback="on_zoffset_abort_clicked"/>
        </lv_button>
      </lv_obj>
      <!-- ================================================================== -->
      <!-- STATE: ADJUSTING (2) - Interactive Z adjustment -->
      <!-- ================================================================== -->
      <lv_obj name="state_adjusting"
              width="100%" flex_grow="1" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column"
              style_flex_main_place="start" style_flex_cross_place="center" style_pad_gap="#space_lg" scrollable="false">
        <bind_flag_if_not_eq subject="zoffset_cal_state" flag="hidden" ref_value="2"/>
        <!-- Current Z Position Display -->
        <lv_obj width="100%"
                height="80" style_bg_color="#section_bg_color" style_radius="#border_radius" style_pad_all="#space_md"
                style_border_width="0" flex_flow="column" style_flex_main_place="center" style_flex_cross_place="center">
          <text_small text="Current Z Position" style_text_color="#text_secondary"/>
          <lv_label name="z_position_display" text="Z: 0.000" style_text_font="montserrat_28"/>
        </lv_obj>
        <!-- Instructions -->
        <text_small width="100%"
                    text="Move paper back and forth while adjusting. Stop when paper catches slightly but still slides."
                    style_text_align="center"/>
        <!-- Adjustment Buttons Grid -->
        <lv_obj width="100%"
                height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column"
                style_pad_gap="#space_sm" scrollable="false">
          <!-- Row 1: Large adjustments -->
          <lv_obj width="100%"
                  height="56" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="row"
                  style_flex_main_place="center" style_pad_gap="#space_md" scrollable="false">
            <lv_button name="btn_z_down_1" width="100" height="56" style_radius="#border_radius">
              <text_body text="-1mm" align="center"/>
              <event_cb trigger="clicked" callback="on_zoffset_z_down_1"/>
            </lv_button>
            <lv_button name="btn_z_down_01" width="100" height="56" style_radius="#border_radius">
              <text_body text="-0.1mm" align="center"/>
              <event_cb trigger="clicked" callback="on_zoffset_z_down_01"/>
            </lv_button>
            <lv_button name="btn_z_up_01" width="100" height="56" style_radius="#border_radius">
              <text_body text="+0.1mm" align="center"/>
              <event_cb trigger="clicked" callback="on_zoffset_z_up_01"/>
            </lv_button>
            <lv_button name="btn_z_up_1" width="100" height="56" style_radius="#border_radius">
              <text_body text="+1mm" align="center"/>
              <event_cb trigger="clicked" callback="on_zoffset_z_up_1"/>
            </lv_button>
          </lv_obj>
          <!-- Row 2: Fine adjustments -->
          <lv_obj width="100%"
                  height="56" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="row"
                  style_flex_main_place="center" style_pad_gap="#space_md" scrollable="false">
            <lv_button name="btn_z_down_001" width="100" height="56" style_radius="#border_radius">
              <text_small text="-0.01mm" align="center"/>
              <event_cb trigger="clicked" callback="on_zoffset_z_down_001"/>
            </lv_button>
            <lv_button name="btn_z_down_005" width="100" height="56" style_radius="#border_radius">
              <text_small text="-0.05mm" align="center"/>
              <event_cb trigger="clicked" callback="on_zoffset_z_down_005"/>
            </lv_button>
            <lv_button name="btn_z_up_005" width="100" height="56" style_radius="#border_radius">
              <text_small text="+0.05mm" align="center"/>
              <event_cb trigger="clicked" callback="on_zoffset_z_up_005"/>
            </lv_button>
            <lv_button name="btn_z_up_001" width="100" height="56" style_radius="#border_radius">
              <text_small text="+0.01mm" align="center"/>
              <event_cb trigger="clicked" callback="on_zoffset_z_up_001"/>
            </lv_button>
          </lv_obj>
        </lv_obj>
        <!-- Spacer -->
        <lv_obj flex_grow="1" style_bg_opa="0" style_border_width="0"/>
        <!-- Accept / Abort Buttons -->
        <lv_obj width="100%"
                height="56" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="row"
                style_flex_main_place="center" style_pad_gap="#space_md" scrollable="false">
          <lv_button name="btn_abort"
                     width="140" height="56" style_radius="#border_radius" style_bg_color="#error_color">
            <text_body text="Abort" align="center"/>
            <event_cb trigger="clicked" callback="on_zoffset_abort_clicked"/>
          </lv_button>
          <lv_button name="btn_accept"
                     width="200" height="56" style_radius="#border_radius" style_bg_color="#success_color">
            <text_body text="Accept" align="center"/>
            <event_cb trigger="clicked" callback="on_zoffset_accept_clicked"/>
          </lv_button>
        </lv_obj>
      </lv_obj>
      <!-- ================================================================== -->
      <!-- STATE: SAVING (3) - Saving configuration -->
      <!-- ================================================================== -->
      <lv_obj name="state_saving"
              width="100%" flex_grow="1" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column"
              style_flex_main_place="center" style_flex_cross_place="center" style_pad_gap="#space_lg"
              scrollable="false">
        <bind_flag_if_not_eq subject="zoffset_cal_state" flag="hidden" ref_value="3"/>
        <spinner size="lg"/>
        <text_heading text="Saving Configuration..." style_text_align="center"/>
        <text_small width="80%"
                    text="Klipper will restart to apply changes." style_text_align="center"
                    style_text_color="#text_secondary"/>
      </lv_obj>
      <!-- ================================================================== -->
      <!-- STATE: COMPLETE (4) - Calibration finished -->
      <!-- ================================================================== -->
      <lv_obj name="state_complete"
              width="100%" flex_grow="1" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column"
              style_flex_main_place="center" style_flex_cross_place="center" style_flex_track_place="center"
              style_pad_gap="#space_lg" scrollable="false">
        <bind_flag_if_not_eq subject="zoffset_cal_state" flag="hidden" ref_value="4"/>
        <lv_label text="#icon_check_circle" style_text_font="mdi_icons_48" style_text_color="#success_color"/>
        <text_heading text="Calibration Complete!" style_text_align="center"/>
        <text_body name="final_offset_label" text="New Z-Offset: 0.000" style_text_color="#text_secondary"/>
        <lv_button name="btn_done" width="140" height="56" style_radius="#border_radius">
          <text_body text="Done" align="center"/>
          <event_cb trigger="clicked" callback="on_zoffset_done_clicked"/>
        </lv_button>
      </lv_obj>
      <!-- ================================================================== -->
      <!-- STATE: ERROR (5) - Something went wrong -->
      <!-- ================================================================== -->
      <lv_obj name="state_error"
              width="100%" flex_grow="1" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column"
              style_flex_main_place="center" style_flex_cross_place="center" style_flex_track_place="center"
              style_pad_gap="#space_lg" scrollable="false">
        <bind_flag_if_not_eq subject="zoffset_cal_state" flag="hidden" ref_value="5"/>
        <lv_label text="#icon_xmark_circle" style_text_font="mdi_icons_48" style_text_color="#error_color"/>
        <text_heading text="Calibration Failed" style_text_align="center"/>
        <text_body name="error_message"
                   width="80%" text="An error occurred during calibration." style_text_color="#text_secondary"
                   style_text_align="center" long_mode="wrap"/>
        <lv_obj width="100%"
                height="56" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="row"
                style_flex_main_place="center" style_pad_gap="#space_md" scrollable="false">
          <lv_button name="btn_close_error" width="140" height="56" style_radius="#border_radius">
            <text_body text="Close" align="center"/>
            <event_cb trigger="clicked" callback="on_zoffset_done_clicked"/>
          </lv_button>
          <lv_button name="btn_retry"
                     width="140" height="56" style_radius="#border_radius" style_bg_color="#primary_color">
            <text_body text="Retry" align="center"/>
            <event_cb trigger="clicked" callback="on_zoffset_retry_clicked"/>
          </lv_button>
        </lv_obj>
      </lv_obj>
    </lv_obj>
  </view>
</component>

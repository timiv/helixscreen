<!-- Z-Offset Calibration Panel -->
<!-- Interactive calibration using PROBE_CALIBRATE, TESTZ, ACCEPT, ABORT commands -->
<component>
  <view name="calibration_zoffset_panel"
        extends="lv_obj" width="#overlay_panel_width" height="100%" align="right_mid" style_bg_opa="255"
        style_bg_color="#card_bg" style_pad_all="0" style_border_width="0" scrollable="false" flex_flow="column">
    <!-- Header Bar -->
    <header_bar name="overlay_header" title="Z-Offset Calibration" title_tag="Z-Offset Calibration"/>
    <!-- Content Area -->
    <lv_obj name="overlay_content"
            width="100%" flex_grow="1" style_pad_left="#space_lg" style_pad_right="#space_lg" style_pad_top="#space_lg"
            style_pad_bottom="#space_lg" flex_flow="column" style_pad_gap="#space_lg" scrollable="false">
      <!-- ================================================================== -->
      <!-- STATE: IDLE (0) - Instructions and Start Button -->
      <!-- ================================================================== -->
      <lv_obj name="state_idle"
              width="100%" flex_grow="1" style_pad_all="0" flex_flow="column" style_flex_main_place="center"
              style_flex_cross_place="center" style_pad_gap="#space_lg" scrollable="false">
        <bind_flag_if_not_eq subject="zoffset_cal_state" flag="hidden" ref_value="0"/>
        <!-- Instructions -->
        <lv_obj width="100%" style_pad_all="0" flex_flow="column" style_pad_gap="#space_sm">
          <text_heading width="100%" text="Paper Test Calibration" translation_tag="Paper Test Calibration" style_text_align="center"/>
          <text_small width="100%"
                      text="This calibration uses the paper friction method to set your Z-offset." translation_tag="This calibration uses the paper friction method to set your Z-offset."
                      style_text_align="center"/>
          <text_small width="100%" text="Have a piece of paper ready before starting." translation_tag="Have a piece of paper ready before starting." style_text_align="center"/>
        </lv_obj>
        <!-- Steps Preview -->
        <lv_obj width="90%"
                height="content" style_bg_color="#section_bg_color" style_radius="#border_radius"
                style_pad_all="#space_lg" flex_flow="column" style_pad_gap="#space_xs">
          <text_small width="100%" text="1. Printer homes and probes the bed" translation_tag="1. Printer homes and probes the bed"/>
          <text_small width="100%" text="2. Place paper between nozzle and bed" translation_tag="2. Place paper between nozzle and bed"/>
          <text_small width="100%" text="3. Lower nozzle until paper drags slightly" translation_tag="3. Lower nozzle until paper drags slightly"/>
          <text_small width="100%" text="4. Paper should move but with resistance" translation_tag="4. Paper should move but with resistance"/>
        </lv_obj>
        <!-- Start Button -->
        <ui_button name="btn_start" width="200" height="56" text="Start Calibration" translation_tag="Start Calibration">
          <event_cb trigger="clicked" callback="on_zoffset_start_clicked"/>
        </ui_button>
      </lv_obj>
      <!-- ================================================================== -->
      <!-- STATE: PROBING (1) - Waiting for probe to complete -->
      <!-- ================================================================== -->
      <lv_obj name="state_probing"
              width="100%" flex_grow="1" style_pad_all="0" flex_flow="column" style_flex_main_place="center"
              style_flex_cross_place="center" style_pad_gap="#space_lg" scrollable="false">
        <bind_flag_if_not_eq subject="zoffset_cal_state" flag="hidden" ref_value="1"/>
        <spinner size="lg"/>
        <text_heading text="Probing Bed..." translation_tag="Probing Bed..." style_text_align="center"/>
        <text_small width="80%" text="Please wait while the printer homes and probes." translation_tag="Please wait while the printer homes and probes." style_text_align="center"/>
        <!-- Abort Button -->
        <ui_button name="btn_abort_probing" width="120" height="48" text="Abort" translation_tag="Abort" variant="danger">
          <event_cb trigger="clicked" callback="on_zoffset_abort_clicked"/>
        </ui_button>
      </lv_obj>
      <!-- ================================================================== -->
      <!-- STATE: ADJUSTING (2) - Interactive Z adjustment -->
      <!-- ================================================================== -->
      <lv_obj name="state_adjusting"
              width="100%" flex_grow="1" style_pad_all="0" flex_flow="column" style_flex_main_place="start"
              style_flex_cross_place="center" style_pad_gap="#space_lg" scrollable="false">
        <bind_flag_if_not_eq subject="zoffset_cal_state" flag="hidden" ref_value="2"/>
        <!-- Current Z Position Display -->
        <lv_obj width="100%"
                height="80" style_bg_color="#section_bg_color" style_radius="#border_radius" style_pad_all="#space_md"
                flex_flow="column" style_flex_main_place="center" style_flex_cross_place="center">
          <text_small text="Current Z Position" translation_tag="Current Z Position"/>
          <lv_label name="z_position_display" text="Z: 0.000" translation_tag="Z: 0.000" style_text_font="montserrat_28"/>
        </lv_obj>
        <!-- Instructions -->
        <text_small width="100%"
                    text="Move paper back and forth while adjusting. Stop when paper catches slightly but still slides." translation_tag="Move paper back and forth while adjusting. Stop when paper catches slightly but still slides."
                    style_text_align="center"/>
        <!-- Adjustment Buttons Grid -->
        <lv_obj width="100%"
                height="content" style_pad_all="0" flex_flow="column" style_pad_gap="#space_sm" scrollable="false">
          <!-- Row 1: Large adjustments -->
          <lv_obj width="100%"
                  height="56" style_pad_all="0" flex_flow="row" style_flex_main_place="center" style_pad_gap="#space_md"
                  scrollable="false">
            <ui_button name="btn_z_down_1" width="100" height="56" text="-1mm" translation_tag="-1mm">
              <event_cb trigger="clicked" callback="on_zoffset_z_adjust" user_data="-1.0"/>
            </ui_button>
            <ui_button name="btn_z_down_01" width="100" height="56" text="-0.1mm" translation_tag="-0.1mm">
              <event_cb trigger="clicked" callback="on_zoffset_z_adjust" user_data="-0.1"/>
            </ui_button>
            <ui_button name="btn_z_up_01" width="100" height="56" text="+0.1mm" translation_tag="+0.1mm">
              <event_cb trigger="clicked" callback="on_zoffset_z_adjust" user_data="0.1"/>
            </ui_button>
            <ui_button name="btn_z_up_1" width="100" height="56" text="+1mm" translation_tag="+1mm">
              <event_cb trigger="clicked" callback="on_zoffset_z_adjust" user_data="1.0"/>
            </ui_button>
          </lv_obj>
          <!-- Row 2: Fine adjustments -->
          <lv_obj width="100%"
                  height="56" style_pad_all="0" flex_flow="row" style_flex_main_place="center" style_pad_gap="#space_md"
                  scrollable="false">
            <ui_button name="btn_z_down_001" width="100" height="56" text="-0.01mm" translation_tag="-0.01mm">
              <event_cb trigger="clicked" callback="on_zoffset_z_adjust" user_data="-0.01"/>
            </ui_button>
            <ui_button name="btn_z_down_005" width="100" height="56" text="-0.05mm" translation_tag="-0.05mm">
              <event_cb trigger="clicked" callback="on_zoffset_z_adjust" user_data="-0.05"/>
            </ui_button>
            <ui_button name="btn_z_up_005" width="100" height="56" text="+0.05mm" translation_tag="+0.05mm">
              <event_cb trigger="clicked" callback="on_zoffset_z_adjust" user_data="0.05"/>
            </ui_button>
            <ui_button name="btn_z_up_001" width="100" height="56" text="+0.01mm" translation_tag="+0.01mm">
              <event_cb trigger="clicked" callback="on_zoffset_z_adjust" user_data="0.01"/>
            </ui_button>
          </lv_obj>
        </lv_obj>
        <!-- Spacer -->
        <lv_obj flex_grow="1"/>
        <!-- Accept / Abort Buttons -->
        <lv_obj width="100%"
                height="56" style_pad_all="0" flex_flow="row" style_flex_main_place="center" style_pad_gap="#space_md"
                scrollable="false">
          <ui_button name="btn_abort" width="140" height="56" text="Abort" translation_tag="Abort" variant="danger">
            <event_cb trigger="clicked" callback="on_zoffset_abort_clicked"/>
          </ui_button>
          <ui_button name="btn_accept" width="200" height="56" text="Accept" translation_tag="Accept" variant="success">
            <event_cb trigger="clicked" callback="on_zoffset_accept_clicked"/>
          </ui_button>
        </lv_obj>
      </lv_obj>
      <!-- ================================================================== -->
      <!-- STATE: SAVING (3) - Saving configuration -->
      <!-- ================================================================== -->
      <lv_obj name="state_saving"
              width="100%" flex_grow="1" style_pad_all="0" flex_flow="column" style_flex_main_place="center"
              style_flex_cross_place="center" style_pad_gap="#space_lg" scrollable="false">
        <bind_flag_if_not_eq subject="zoffset_cal_state" flag="hidden" ref_value="3"/>
        <spinner size="lg"/>
        <text_heading text="Saving Configuration..." translation_tag="Saving Configuration..." style_text_align="center"/>
        <text_small width="80%" text="Klipper will restart to apply changes." translation_tag="Klipper will restart to apply changes." style_text_align="center"/>
      </lv_obj>
      <!-- ================================================================== -->
      <!-- STATE: COMPLETE (4) - Calibration finished -->
      <!-- ================================================================== -->
      <lv_obj name="state_complete"
              width="100%" flex_grow="1" style_pad_all="0" flex_flow="column" style_flex_main_place="center"
              style_flex_cross_place="center" style_flex_track_place="center" style_pad_gap="#space_lg"
              scrollable="false">
        <bind_flag_if_not_eq subject="zoffset_cal_state" flag="hidden" ref_value="4"/>
        <lv_label text="#icon_check_circle" style_text_font="mdi_icons_48" style_text_color="#success"/>
        <text_heading text="Calibration Complete!" translation_tag="Calibration Complete!" style_text_align="center"/>
        <text_body name="final_offset_label" text="New Z-Offset: 0.000" translation_tag="New Z-Offset: 0.000"/>
        <ui_button name="btn_done" width="140" height="56" text="Done" translation_tag="Done">
          <event_cb trigger="clicked" callback="on_zoffset_done_clicked"/>
        </ui_button>
      </lv_obj>
      <!-- ================================================================== -->
      <!-- STATE: ERROR (5) - Something went wrong -->
      <!-- ================================================================== -->
      <lv_obj name="state_error"
              width="100%" flex_grow="1" style_pad_all="0" flex_flow="column" style_flex_main_place="center"
              style_flex_cross_place="center" style_flex_track_place="center" style_pad_gap="#space_lg"
              scrollable="false">
        <bind_flag_if_not_eq subject="zoffset_cal_state" flag="hidden" ref_value="5"/>
        <lv_label text="#icon_xmark_circle" style_text_font="mdi_icons_48" style_text_color="#danger"/>
        <text_heading text="Calibration Failed" translation_tag="Calibration Failed" style_text_align="center"/>
        <text_muted name="error_message"
                    width="80%" text="An error occurred during calibration." translation_tag="An error occurred during calibration." style_text_align="center" long_mode="wrap"/>
        <lv_obj width="100%"
                height="56" style_pad_all="0" flex_flow="row" style_flex_main_place="center" style_pad_gap="#space_md"
                scrollable="false">
          <ui_button name="btn_close_error" width="140" height="56" text="Close" translation_tag="Close">
            <event_cb trigger="clicked" callback="on_zoffset_done_clicked"/>
          </ui_button>
          <ui_button name="btn_retry" width="140" height="56" text="Retry" translation_tag="Retry">
            <event_cb trigger="clicked" callback="on_zoffset_retry_clicked"/>
          </ui_button>
        </lv_obj>
      </lv_obj>
    </lv_obj>
  </view>
</component>

<!-- Filament sensor indicator - colored dot showing sensor state -->
<!-- Green=detected(1), Red=empty(0), Hidden=no sensor(-1) or disabled -->
<component>
  <view name="filament_sensor_indicator"
        extends="lv_obj" width="10" height="10" style_radius="1000" style_border_width="0"
        style_bg_color="#success_color" style_bg_opa="255" scrollable="false">
    <!-- Hidden when no sensor (value=-1) -->
    <lv_obj-bind_flag_if_eq subject="filament_runout_detected" flag="hidden" ref_value="-1"/>
    <!-- Hidden when master disabled -->
    <lv_obj-bind_flag_if_eq subject="filament_master_enabled" flag="hidden" ref_value="0"/>
  </view>
</component>

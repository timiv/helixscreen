<!-- Bed Mesh Calibrate Modal - 3-state: PROBING, NAMING, ERROR -->
<!-- NOTE: Backdrop created programmatically by Modal system -->
<component>
  <!-- Dialog card (backdrop created programmatically) -->
  <view name="bed_mesh_calibrate_modal"
        extends="ui_dialog" width="75%" height="content" align="center" flex_flow="column" style_flex_main_place="start"
        style_pad_gap="0">
    <!-- ============================================================ -->
    <!-- STATE: PROBING (state=1) - Progress bar + E-Stop -->
    <!-- ============================================================ -->
    <lv_obj name="probing_container"
            width="100%" height="content" style_min_height="200" style_pad_left="#space_lg" style_pad_right="#space_lg"
            style_pad_top="#space_lg" style_pad_bottom="#space_lg" flex_flow="column" style_flex_cross_place="center"
            style_flex_main_place="start" style_flex_track_place="center" style_pad_gap="#space_md" hidden="true">
      <!-- Show only when state=1 -->
      <bind_flag_if_not_eq subject="bed_mesh_calibrate_state" flag="hidden" ref_value="1"/>
      <!-- Title -->
      <text_heading width="100%" text="Probing Bed Mesh" translation_tag="Probing Bed Mesh" style_text_align="center"/>
      <!-- Progress text -->
      <text_muted name="probe_progress_text"
                  width="100%" bind_text="bed_mesh_probe_text" text="Initializing..." translation_tag="Initializing..." style_text_align="center"/>
      <!-- Progress bar -->
      <progress_bar name="probe_progress_bar" width="90%" bind_value="bed_mesh_probe_progress"/>
      <!-- E-Stop button (prominent, red) -->
      <ui_button name="btn_emergency_stop"
                 width="100%" height="#button_height_lg" variant="danger" icon="alert_octagon" text="EMERGENCY STOP" translation_tag="EMERGENCY STOP"
                 style_margin_top="#space_sm">
        <event_cb trigger="clicked" callback="on_bed_mesh_emergency_stop"/>
      </ui_button>
      <!-- Warning text -->
      <text_small width="100%" text="Stops all motion. Requires firmware restart." translation_tag="Stops all motion. Requires firmware restart." style_text_align="center"/>
    </lv_obj>
    <!-- ============================================================ -->
    <!-- STATE: NAMING (state=2) - Success + Profile name input -->
    <!-- ============================================================ -->
    <lv_obj name="naming_container"
            width="100%" height="content" style_min_height="200" style_pad_left="#space_lg" style_pad_right="#space_lg"
            style_pad_top="#space_lg" style_pad_bottom="#space_lg" flex_flow="column" style_flex_cross_place="center"
            style_flex_main_place="start" style_flex_track_place="center" style_pad_gap="#space_md" hidden="true">
      <!-- Show only when state=2 -->
      <bind_flag_if_not_eq subject="bed_mesh_calibrate_state" flag="hidden" ref_value="2"/>
      <!-- Success icon -->
      <icon src="check_circle" size="lg" variant="success"/>
      <!-- Title -->
      <text_heading width="100%" text="Mesh Complete" translation_tag="Mesh Complete" style_text_align="center"/>
      <!-- Instructions -->
      <text_small width="100%" text="Enter a name to save this profile" translation_tag="Enter a name to save this profile" style_text_align="center"/>
      <!-- Profile name input -->
      <text_input name="calibrate_profile_name_input"
                  width="100%" height="#input_height" placeholder_text="Profile name (e.g., default)" placeholder_tag="Profile name (e.g., default)" translation_tag="Profile name (e.g., default)"
                  style_margin_top="#space_xs"/>
    </lv_obj>
    <!-- ============================================================ -->
    <!-- STATE: ERROR (state=3) - Error message -->
    <!-- ============================================================ -->
    <lv_obj name="error_container"
            width="100%" height="content" style_min_height="180" style_pad_left="#space_lg" style_pad_right="#space_lg"
            style_pad_top="#space_lg" style_pad_bottom="#space_lg" flex_flow="column" style_flex_cross_place="center"
            style_flex_main_place="start" style_flex_track_place="center" style_pad_gap="#space_md" hidden="true">
      <!-- Show only when state=3 -->
      <bind_flag_if_not_eq subject="bed_mesh_calibrate_state" flag="hidden" ref_value="3"/>
      <!-- Error icon -->
      <icon src="alert_circle" size="lg" variant="danger"/>
      <!-- Title -->
      <text_heading width="100%" text="Calibration Failed" translation_tag="Calibration Failed" style_text_align="center"/>
      <!-- Error message (bound to subject) -->
      <text_muted name="error_message_label"
                  width="100%" bind_text="bed_mesh_error_message" text="An error occurred during calibration." translation_tag="An error occurred during calibration."
                  long_mode="wrap" style_text_align="center"/>
    </lv_obj>
    <!-- Horizontal divider above buttons -->
    <divider_horizontal/>
    <!-- ============================================================ -->
    <!-- Button row: PROBING state (state=1) - Cancel only -->
    <!-- ============================================================ -->
    <lv_obj name="probing_button_row"
            width="100%" height="#button_height" style_pad_all="0" style_pad_gap="0" flex_flow="row" hidden="true"
            scrollable="false">
      <bind_flag_if_not_eq subject="bed_mesh_calibrate_state" flag="hidden" ref_value="1"/>
      <!-- Cancel button -->
      <ui_button name="btn_cancel_probing" height="100%" flex_grow="1" style_radius="0" text="Cancel" translation_tag="Cancel">
        <event_cb trigger="clicked" callback="on_bed_mesh_calibrate_cancel"/>
      </ui_button>
    </lv_obj>
    <!-- ============================================================ -->
    <!-- Button row: NAMING state (state=2) - Don't Save | Save -->
    <!-- ============================================================ -->
    <lv_obj name="naming_button_row"
            width="100%" height="#button_height" style_pad_all="0" style_pad_gap="0" flex_flow="row" hidden="true"
            scrollable="false">
      <bind_flag_if_not_eq subject="bed_mesh_calibrate_state" flag="hidden" ref_value="2"/>
      <!-- Don't Save button -->
      <ui_button name="btn_dont_save"
                 height="100%" flex_grow="1" style_radius="0" text="Don't Save" translation_tag="Don't Save">
        <event_cb trigger="clicked" callback="on_bed_mesh_calibrate_cancel"/>
      </ui_button>
      <!-- Vertical divider -->
      <divider_vertical/>
      <!-- Save button -->
      <ui_button name="btn_save" height="100%" flex_grow="1" style_radius="0" text="Save" translation_tag="Save">
        <event_cb trigger="clicked" callback="on_bed_mesh_save_profile"/>
      </ui_button>
    </lv_obj>
    <!-- ============================================================ -->
    <!-- Button row: ERROR state (state=3) - Close only -->
    <!-- ============================================================ -->
    <lv_obj name="error_button_row"
            width="100%" height="#button_height" style_pad_all="0" style_pad_gap="0" flex_flow="row" hidden="true"
            scrollable="false">
      <bind_flag_if_not_eq subject="bed_mesh_calibrate_state" flag="hidden" ref_value="3"/>
      <!-- Close button -->
      <ui_button name="btn_close" height="100%" flex_grow="1" style_radius="0" text="Close" translation_tag="Close">
        <event_cb trigger="clicked" callback="on_bed_mesh_calibrate_cancel"/>
      </ui_button>
    </lv_obj>
  </view>
</component>

<component>
  <view name="console_panel" extends="overlay_panel" title="Console">
    <!-- Content Area -->
    <lv_obj name="overlay_content"
            width="100%" flex_grow="1" style_bg_opa="0" style_border_width="0" style_pad_all="#space_lg"
            scrollable="false" flex_flow="column" style_pad_gap="#space_sm">
      <!-- Status message -->
      <text_small name="status_message" width="100%" text="" bind_text="console_status" style_text_align="center"/>
      <!-- Console output container (scrollable, subtle background) -->
      <lv_obj name="console_container"
              width="100%" flex_grow="1" style_bg_color="#app_bg" style_bg_opa="255" style_border_width="0"
              style_radius="#border_radius" style_pad_all="#space_md" scrollable="true" scroll_dir="ver"
              flex_flow="column" style_pad_gap="#space_xxs">
        <!-- Console entries populated dynamically by C++ (text_small labels) -->
      </lv_obj>
      <!-- Empty state (shown when no history available) -->
      <lv_obj name="empty_state"
              width="100%" flex_grow="1" style_bg_opa="0" style_border_width="0" flex_flow="column"
              style_flex_main_place="center" style_flex_cross_place="center" style_pad_gap="#space_md" hidden="true"
              scrollable="false">
        <icon src="console" size="xl" variant="secondary"/>
        <text_heading text="No History" style_text_align="center"/>
        <text_muted text="G-code commands will appear here" style_text_align="center"/>
      </lv_obj>
      <!-- G-code input row -->
      <lv_obj name="input_row"
              width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0"
              flex_flow="row" style_pad_gap="#space_sm" style_flex_cross_place="center" scrollable="false">
        <!-- G-code text input -->
        <text_input name="gcode_input" flex_grow="1" placeholder="Enter G-code command..." one_line="true"/>
        <!-- Send button -->
        <ui_button name="send_btn" width="60">
          <event_cb trigger="clicked" callback="on_console_send_clicked"/>
          <icon src="send" size="md" variant="primary"/>
        </ui_button>
        <!-- Clear button -->
        <ui_button name="clear_btn" width="60" height="100%" variant="secondary">
          <event_cb trigger="clicked" callback="on_console_clear_clicked"/>
          <icon src="delete" size="md" variant="secondary"/>
        </ui_button>
      </lv_obj>
    </lv_obj>
  </view>
</component>

<!-- Probe indicator - colored dot showing probe state -->
<!-- Green=triggered(1), Red=not triggered(0), Hidden=no probe(-1 or count=0) -->
<component>
  <styles>
    <style name="probe_triggered" bg_color="#success"/>
    <style name="probe_not_triggered" bg_color="#danger"/>
  </styles>
  <view name="probe_indicator"
        extends="lv_obj" width="16" height="16" style_radius="1000" style_border_width="0" style_bg_opa="255"
        scrollable="false">
    <!-- Hidden when no probe sensor -->
    <bind_flag_if_eq subject="probe_count" flag="hidden" ref_value="0"/>
    <bind_flag_if_eq subject="probe_triggered" flag="hidden" ref_value="-1"/>
    <!-- Color bindings based on state -->
    <bind_style name="probe_triggered" subject="probe_triggered" ref_value="1"/>
    <bind_style name="probe_not_triggered" subject="probe_triggered" ref_value="0"/>
  </view>
</component>

<!-- Humidity indicator - shows chamber humidity percentage -->
<component>
  <view name="humidity_indicator"
        extends="lv_obj" width="content" height="content" style_bg_opa="0" style_border_width="0"
        style_pad_all="0" flex_flow="row" style_pad_gap="#space_xs" scrollable="false">
    <!-- Hidden when no sensor -->
    <bind_flag_if_eq subject="humidity_sensor_count" flag="hidden" ref_value="0"/>
    <icon src="water" size="sm" variant="secondary"/>
    <text_tiny bind_text="chamber_humidity_text"/>
  </view>
</component>

<component>
  <!-- Save Z-Offset Warning Modal -->
  <!-- Note: Backdrop is created programmatically by Modal class in C++ -->
  <view name="save_z_offset_modal"
        extends="ui_dialog" width="70%" height="content" align="center" flex_flow="column" style_flex_main_place="start"
        style_pad_gap="0">
    <!-- Content area -->
    <lv_obj width="100%"
            height="content" style_min_height="160" style_bg_opa="0" style_border_width="0" style_pad_left="#space_lg"
            style_pad_right="#space_lg" style_pad_top="#space_lg" style_pad_bottom="#space_lg" flex_flow="column"
            style_flex_cross_place="center" style_pad_gap="#space_md">
      <!-- Warning icon -->
      <icon src="alert" size="lg" color="#warning_color"/>
      <!-- Title -->
      <text_heading width="100%" text="Save Z-Offset?" style_text_align="center"/>
      <!-- Warning message (VERY IMPORTANT) -->
      <text_body width="100%"
                 text="Saving will restart Klipper and CANCEL any active print!" long_mode="wrap"
                 style_text_align="center" style_text_color="#warning_color"/>
      <!-- Info message -->
      <text_small width="100%"
                  text="Adjustments stay active until restart. Save after print completes." long_mode="wrap"
                  style_text_align="center" style_text_color="#text_secondary"/>
    </lv_obj>
    <!-- Button row -->
    <modal_button_row secondary_text="Cancel"
                      secondary_callback="on_z_offset_cancel" primary_text="Save &amp; Restart"
                      primary_callback="on_z_offset_save" primary_bg_color="#error_color"/>
  </view>
</component>

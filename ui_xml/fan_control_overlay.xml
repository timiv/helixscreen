<!-- Fan Control Overlay: Full-width overlay panel displaying all fans -->
<!-- Top row: Controllable fans (part fan, generic fans) with dial controls -->
<!-- Bottom row: Auto-controlled fans (heater_fan, controller_fan) with status cards -->
<component>
  <api>
    <prop name="title" type="string" default="All Fans"/>
  </api>
  <view name="fan_control_overlay"
        extends="overlay_panel" width="#overlay_panel_width_full" title="$title" bg_color="#app_bg_color">
    <!-- Main Content Area -->
    <lv_obj name="content_area"
            width="100%" flex_grow="1" style_bg_opa="0" style_pad_all="#space_lg" style_pad_gap="#space_md"
            scrollable="false" style_border_width="0" flex_flow="column" style_flex_main_place="start"
            style_flex_cross_place="center">
      <!-- ================================================================== -->
      <!-- Controllable Fans Row (part fan, generic fans) - ~55% height      -->
      <!-- ================================================================== -->
      <lv_obj name="controllable_row"
              width="100%" height="55%" style_bg_opa="0" style_border_width="0"
              style_pad_all="0" style_pad_gap="#space_md" scrollable="false"
              flex_flow="row" style_flex_main_place="center" style_flex_cross_place="center">
        <!-- FanDial widgets are created here dynamically by C++ -->
      </lv_obj>
      <!-- ================================================================== -->
      <!-- Divider with "Auto-Controlled" label                               -->
      <!-- ================================================================== -->
      <lv_obj name="divider_row"
              width="100%" height="content" style_bg_opa="0" style_border_width="0"
              style_pad_all="0" scrollable="false" flex_flow="row"
              style_flex_main_place="center" style_flex_cross_place="center"
              style_pad_gap="#space_sm">
        <!-- Left line -->
        <lv_obj width="80" height="1" style_bg_color="#card_border" style_bg_opa="100"
                style_border_width="0" scrollable="false"/>
        <!-- Label -->
        <text_small text="Auto-Controlled" style_text_color="#text_secondary"/>
        <!-- Right line -->
        <lv_obj width="80" height="1" style_bg_color="#card_border" style_bg_opa="100"
                style_border_width="0" scrollable="false"/>
      </lv_obj>
      <!-- ================================================================== -->
      <!-- Auto-Controlled Fans Row (heater_fan, controller_fan) - remaining -->
      <!-- ================================================================== -->
      <lv_obj name="auto_row"
              width="100%" flex_grow="1" style_bg_opa="0" style_border_width="0"
              style_pad_all="0" style_pad_gap="#space_md" scrollable="false"
              flex_flow="row" style_flex_main_place="center" style_flex_cross_place="center">
        <!-- fan_status_card widgets are created here dynamically by C++ -->
      </lv_obj>
    </lv_obj>
  </view>
</component>

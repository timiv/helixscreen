<!-- Fan Control Overlay: Full-width overlay panel displaying all fans -->
<!-- Single flex-wrap row: controllable fans first, then auto-controlled fans -->
<component>
  <api>
    <prop name="title" type="string" default="All Fans"/>
  </api>
  <view name="fan_control_overlay"
        extends="overlay_panel" width="#overlay_panel_width_full" title="$title" bg_color="#app_bg_color">
    <!-- Main Content Area - reduced top padding -->
    <lv_obj name="content_area"
            width="100%" flex_grow="1" style_bg_opa="0" style_pad_left="#space_lg" style_pad_right="#space_lg"
            style_pad_top="#space_sm" style_pad_bottom="#space_md" scrollable="false" style_border_width="0"
            flex_flow="column" style_flex_main_place="start" style_flex_cross_place="center">
      <!-- ================================================================== -->
      <!-- Single flex-wrap row for all fans (controllable first, then auto) -->
      <!-- ================================================================== -->
      <lv_obj name="fans_container"
              width="100%" flex_grow="1" style_bg_opa="0" style_border_width="0" style_pad_all="0"
              style_pad_gap="#space_md" scrollable="false" flex_flow="row_wrap" style_flex_main_place="center"
              style_flex_cross_place="start">
        <!-- All fan widgets (FanDial and fan_status_card) are created here dynamically by C++ -->
        <!-- Controllable fans are added first, then auto-controlled fans -->
      </lv_obj>
    </lv_obj>
  </view>
</component>

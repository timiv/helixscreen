<!-- Hardware Health Overlay - Shows detailed hardware validation results -->
<!-- Displays issues grouped by severity: Critical, Warning, Info -->
<component>
  <view name="hardware_health_overlay"
        extends="overlay_panel" width="#overlay_panel_width_full" title="Hardware Health" bg_color="#app_bg_color">
    <!-- Content Area -->
    <lv_obj name="overlay_content"
            width="100%" flex_grow="1" style_bg_opa="0" style_pad_all="#space_lg" scrollable="true" scroll_dir="ver"
            style_border_width="0" flex_flow="column" style_pad_gap="#space_md">
      <!-- ================================================================== -->
      <!-- STATUS CARD - Shows overall health status -->
      <!-- ================================================================== -->
      <lv_obj name="status_card"
              width="100%" height="content" style_bg_color="#card_bg" style_bg_opa="255" style_radius="#border_radius"
              style_border_width="0" style_pad_all="#space_lg" scrollable="false" flex_flow="row"
              style_flex_cross_place="center" style_pad_gap="#space_md">
        <!-- Status icon - changes based on severity -->
        <lv_obj name="status_icon_container"
                width="48" height="48" style_bg_color="#success_color" style_bg_opa="255" style_radius="24"
                style_border_width="0" scrollable="false" style_pad_all="0" flex_flow="column"
                style_flex_main_place="center" style_flex_cross_place="center" style_flex_track_place="center">
          <bind_flag_if_not_eq subject="hardware_has_issues" flag="hidden" ref_value="0"/>
          <icon name="status_icon_ok" src="check" size="md" color="#ffffff"/>
        </lv_obj>
        <lv_obj name="status_icon_container_warn"
                width="48" height="48" style_bg_color="#warning_color" style_bg_opa="255" style_radius="24"
                style_border_width="0" scrollable="false" style_pad_all="0" flex_flow="column"
                style_flex_main_place="center" style_flex_cross_place="center" style_flex_track_place="center">
          <bind_flag_if_eq subject="hardware_has_issues" flag="hidden" ref_value="0"/>
          <bind_flag_if_eq subject="hardware_max_severity" flag="hidden" ref_value="2"/>
          <icon name="status_icon_warn" src="alert" size="md" color="#ffffff"/>
        </lv_obj>
        <lv_obj name="status_icon_container_crit"
                width="48" height="48" style_bg_color="#error_color" style_bg_opa="255" style_radius="24"
                style_border_width="0" scrollable="false" style_pad_all="0" flex_flow="column"
                style_flex_main_place="center" style_flex_cross_place="center" style_flex_track_place="center">
          <bind_flag_if_eq subject="hardware_has_issues" flag="hidden" ref_value="0"/>
          <bind_flag_if_not_eq subject="hardware_max_severity" flag="hidden" ref_value="2"/>
          <icon name="status_icon_crit" src="alert_octagon" size="md" color="#ffffff"/>
        </lv_obj>
        <!-- Status text -->
        <lv_obj width="content"
                height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false"
                flex_flow="column" style_pad_gap="#space_xs">
          <text_heading name="status_title" bind_text="hardware_status_title"/>
          <text_small name="status_detail" bind_text="hardware_status_detail" style_text_color="#text_secondary"/>
        </lv_obj>
      </lv_obj>
      <!-- ================================================================== -->
      <!-- CRITICAL ISSUES SECTION (red) - Missing required hardware -->
      <!-- ================================================================== -->
      <lv_obj name="critical_section"
              width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false"
              flex_flow="column" style_pad_gap="#space_sm">
        <bind_flag_if_eq subject="hardware_critical_count" flag="hidden" ref_value="0"/>
        <setting_section_header title="CRITICAL" icon="alert_octagon"/>
        <lv_obj name="critical_issues_list"
                width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0"
                scrollable="false" flex_flow="column" style_pad_gap="#space_xs">
          <!-- hardware_issue_row components added dynamically by C++ -->
        </lv_obj>
      </lv_obj>
      <!-- ================================================================== -->
      <!-- WARNING ISSUES SECTION (orange) - Missing configured hardware -->
      <!-- ================================================================== -->
      <lv_obj name="warning_section"
              width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false"
              flex_flow="column" style_pad_gap="#space_sm">
        <bind_flag_if_eq subject="hardware_warning_count" flag="hidden" ref_value="0"/>
        <setting_section_header title="MISSING CONFIGURED" icon="alert"/>
        <lv_obj name="warning_issues_list"
                width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0"
                scrollable="false" flex_flow="column" style_pad_gap="#space_xs">
          <!-- hardware_issue_row components added dynamically by C++ -->
        </lv_obj>
      </lv_obj>
      <!-- ================================================================== -->
      <!-- INFO ISSUES SECTION (blue) - Newly discovered hardware -->
      <!-- ================================================================== -->
      <lv_obj name="info_section"
              width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false"
              flex_flow="column" style_pad_gap="#space_sm">
        <bind_flag_if_eq subject="hardware_info_count" flag="hidden" ref_value="0"/>
        <setting_section_header title="NEWLY DISCOVERED" icon="info"/>
        <lv_obj name="info_issues_list"
                width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0"
                scrollable="false" flex_flow="column" style_pad_gap="#space_xs">
          <!-- hardware_issue_row components added dynamically by C++ -->
        </lv_obj>
      </lv_obj>
      <!-- ================================================================== -->
      <!-- SESSION CHANGES SECTION - Hardware changed since last session -->
      <!-- ================================================================== -->
      <lv_obj name="session_section"
              width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false"
              flex_flow="column" style_pad_gap="#space_sm">
        <bind_flag_if_eq subject="hardware_session_count" flag="hidden" ref_value="0"/>
        <setting_section_header title="CHANGED FROM LAST SESSION" icon="refresh"/>
        <lv_obj name="session_issues_list"
                width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0"
                scrollable="false" flex_flow="column" style_pad_gap="#space_xs">
          <!-- hardware_issue_row components added dynamically by C++ -->
        </lv_obj>
      </lv_obj>
      <!-- ================================================================== -->
      <!-- ALL HEALTHY MESSAGE (shown when no issues) -->
      <!-- ================================================================== -->
      <lv_obj name="all_healthy_message"
              width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="#space_xl"
              scrollable="false" flex_flow="column" style_flex_main_place="center" style_flex_cross_place="center"
              style_pad_gap="#space_md">
        <bind_flag_if_not_eq subject="hardware_has_issues" flag="hidden" ref_value="0"/>
        <icon src="check_circle" size="lg" variant="primary"/>
        <text_body text="All hardware healthy" style_text_color="#success_color"/>
        <text_small text="All configured hardware was detected and matches expectations"
                    style_text_color="#text_secondary" style_text_align="center"/>
      </lv_obj>
      <!-- ================================================================== -->
      <!-- INFO NOTE -->
      <!-- ================================================================== -->
      <lv_obj width="100%"
              height="content" style_bg_opa="0" style_border_width="0" scrollable="false" style_pad_left="0"
              style_pad_right="0" style_pad_top="#space_md" style_pad_bottom="#space_lg" flex_flow="row"
              style_flex_cross_place="center" style_pad_gap="#space_sm">
        <icon src="info" size="xs" variant="secondary"/>
        <text_small text="Hardware is validated on startup and reconnection" style_text_color="#text_secondary"/>
      </lv_obj>
    </lv_obj>
  </view>
</component>

<?xml version="1.0"?>
<!-- Memory Stats Overlay - Development tool for monitoring memory usage -->
<!-- Toggle with M key or show-memory flag -->
<component>
  <view name="memory_stats_overlay"
        extends="lv_obj" width="170" height="content" align="top_right" x="-12" y="12" style_pad_all="12"
        style_pad_row="6" style_radius="8" style_bg_opa="230" style_bg_color="#222222" style_border_width="1"
        style_border_color="#444444" style_shadow_width="16" style_shadow_opa="200" style_shadow_color="#000000"
        style_layout="flex" style_flex_flow="column">
    <!-- Title -->
    <lv_label name="memory_title"
              width="100%" text="Memory (MB)" style_text_font="noto_sans_12" style_text_color="#888888"
              style_text_align="center"/>
    <!-- RSS row -->
    <lv_obj width="100%"
            height="content" style_bg_opa="0" style_pad_all="0" style_border_width="0" style_layout="flex"
            style_flex_flow="row" style_flex_main_place="space_between">
      <lv_label text="RSS:" style_text_font="noto_sans_14" style_text_color="#888888"/>
      <lv_label name="rss_value" text="--" style_text_font="noto_sans_14" style_text_color="#ffffff"/>
    </lv_obj>
    <!-- Peak row -->
    <lv_obj width="100%"
            height="content" style_bg_opa="0" style_pad_all="0" style_border_width="0" style_layout="flex"
            style_flex_flow="row" style_flex_main_place="space_between">
      <lv_label text="Peak:" style_text_font="noto_sans_14" style_text_color="#888888"/>
      <lv_label name="hwm_value" text="--" style_text_font="noto_sans_14" style_text_color="#ffffff"/>
    </lv_obj>
    <!-- Private row -->
    <lv_obj width="100%"
            height="content" style_bg_opa="0" style_pad_all="0" style_border_width="0" style_layout="flex"
            style_flex_flow="row" style_flex_main_place="space_between">
      <lv_label text="Private:" style_text_font="noto_sans_14" style_text_color="#888888"/>
      <lv_label name="private_value" text="--" style_text_font="noto_sans_14" style_text_color="#ffffff"/>
    </lv_obj>
    <!-- Delta row -->
    <lv_obj width="100%"
            height="content" style_bg_opa="0" style_pad_all="0" style_border_width="0" style_layout="flex"
            style_flex_flow="row" style_flex_main_place="space_between">
      <lv_label text="Delta:" style_text_font="noto_sans_14" style_text_color="#888888"/>
      <lv_label name="delta_value" text="--" style_text_font="noto_sans_14" style_text_color="#4CAF50"/>
    </lv_obj>
    <!-- Hint -->
    <lv_label name="memory_hint"
              width="100%" text="M to toggle" style_text_font="noto_sans_10" style_text_color="#666666"
              style_text_align="center" style_margin_top="4"/>
  </view>
</component>

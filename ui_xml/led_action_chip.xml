<!-- Reusable tappable chip/pill for LED effects, WLED presets, macros -->
<!-- Extends ui_button for proper text color handling (auto-contrast) -->
<component>
  <api>
    <prop name="label" type="string" default="Action"/>
  </api>
  <px name="chip_height" value="36"/>
  <px name="chip_radius" value="18"/>
  <view name="led_action_chip" extends="ui_button"
        variant="secondary" text="$label"
        height="#chip_height" style_radius="#chip_radius"/>
</component>

<component>
  <view extends="lv_obj"
        width="#nav_width" height="100%" style_pad_all="#space_xl" flex_flow="column"
        style_flex_main_place="space_between" style_flex_track_place="center" style_flex_cross_place="center"
        style_border_width="0" style_radius="0" scrollable="false">
    <!-- ================================================================== -->
    <!-- Navigation Buttons - Dual icon pattern (accent/secondary variants) -->
    <!-- ================================================================== -->
    <!-- Home Button (Panel 0) -->
    <lv_button name="nav_btn_home"
               width="100%" height="content" scrollable="false" style_bg_opa="0" style_border_width="0"
               style_shadow_width="0" style_radius="0" style_pad_all="#space_sm" flex_flow="column"
               style_flex_main_place="center" style_flex_cross_place="center" style_flex_track_place="center">
      <!-- Active icon (accent color) - shown when active_panel == 0 -->
      <icon name="nav_icon_home_active" src="home" size="lg" variant="accent" hidden="true">
        <bind_flag_if_not_eq subject="active_panel" flag="hidden" ref_value="0"/>
      </icon>
      <!-- Inactive icon (gray) - shown when active_panel != 0 -->
      <icon name="nav_icon_home_inactive" src="home" size="lg" variant="secondary">
        <bind_flag_if_eq subject="active_panel" flag="hidden" ref_value="0"/>
      </icon>
    </lv_button>
    <!-- Controls Button (Panel 2) - CONNECTION + KLIPPY READY REQUIRED -->
    <!-- Uses combined nav_buttons_enabled subject (1=enabled when connected AND klippy ready) -->
    <lv_button name="nav_btn_controls"
               width="100%" height="content" scrollable="false" style_bg_opa="0" style_border_width="0"
               style_shadow_width="0" style_radius="0" style_pad_all="#space_sm" flex_flow="column"
               style_flex_main_place="center" style_flex_cross_place="center" style_flex_track_place="center">
      <!-- Disabled clickability when not enabled (disconnected OR klippy not ready) -->
      <bind_state_if_not_eq subject="nav_buttons_enabled" state="disabled" ref_value="1"/>
      <!-- Normal icons container - visible only when enabled -->
      <lv_obj name="nav_controls_icons"
              width="content" height="content" clickable="false" style_bg_opa="0" style_pad_all="0"
              style_border_width="0">
        <bind_flag_if_eq subject="nav_buttons_enabled" flag="hidden" ref_value="0"/>
        <!-- Active icon (accent) - shown when on controls panel -->
        <icon name="nav_icon_controls_active" src="fine_tune" size="lg" variant="accent" hidden="true">
          <bind_flag_if_not_eq subject="active_panel" flag="hidden" ref_value="2"/>
        </icon>
        <!-- Inactive icon (secondary) - shown when not on controls panel -->
        <icon name="nav_icon_controls_inactive" src="fine_tune" size="lg" variant="secondary">
          <bind_flag_if_eq subject="active_panel" flag="hidden" ref_value="2"/>
        </icon>
      </lv_obj>
      <!-- Disabled icon - visible only when disabled (disconnected OR klippy not ready) -->
      <icon name="nav_icon_controls_disabled" src="fine_tune" size="lg" variant="disabled">
        <bind_flag_if_eq subject="nav_buttons_enabled" flag="hidden" ref_value="1"/>
      </icon>
    </lv_button>
    <!-- Filament Button (Panel 3) - CONNECTION + KLIPPY READY REQUIRED -->
    <!-- Uses combined nav_buttons_enabled subject (1=enabled when connected AND klippy ready) -->
    <lv_button name="nav_btn_filament"
               width="100%" height="content" scrollable="false" style_bg_opa="0" style_border_width="0"
               style_shadow_width="0" style_radius="0" style_pad_all="#space_sm" flex_flow="column"
               style_flex_main_place="center" style_flex_cross_place="center" style_flex_track_place="center">
      <!-- Disabled clickability when not enabled (disconnected OR klippy not ready) -->
      <bind_state_if_not_eq subject="nav_buttons_enabled" state="disabled" ref_value="1"/>
      <!-- Normal icons container - visible only when enabled -->
      <lv_obj name="nav_filament_icons"
              width="content" height="content" clickable="false" style_bg_opa="0" style_pad_all="0"
              style_border_width="0">
        <bind_flag_if_eq subject="nav_buttons_enabled" flag="hidden" ref_value="0"/>
        <!-- Active icon (accent) - shown when on filament panel -->
        <icon name="nav_icon_filament_active" src="filament" size="lg" variant="accent" hidden="true">
          <bind_flag_if_not_eq subject="active_panel" flag="hidden" ref_value="3"/>
        </icon>
        <!-- Inactive icon (secondary) - shown when not on filament panel -->
        <icon name="nav_icon_filament_inactive" src="filament" size="lg" variant="secondary">
          <bind_flag_if_eq subject="active_panel" flag="hidden" ref_value="3"/>
        </icon>
      </lv_obj>
      <!-- Disabled icon - visible only when disabled (disconnected OR klippy not ready) -->
      <icon name="nav_icon_filament_disabled" src="filament" size="lg" variant="disabled">
        <bind_flag_if_eq subject="nav_buttons_enabled" flag="hidden" ref_value="1"/>
      </icon>
    </lv_button>
    <!-- Settings Button (Panel 4) -->
    <lv_button name="nav_btn_settings"
               width="100%" height="content" scrollable="false" style_bg_opa="0" style_border_width="0"
               style_shadow_width="0" style_radius="0" style_pad_all="#space_sm" flex_flow="column"
               style_flex_main_place="center" style_flex_cross_place="center" style_flex_track_place="center">
      <icon name="nav_icon_settings_active" src="settings" size="lg" variant="accent" hidden="true">
        <bind_flag_if_not_eq subject="active_panel" flag="hidden" ref_value="4"/>
      </icon>
      <icon name="nav_icon_settings_inactive" src="settings" size="lg" variant="secondary">
        <bind_flag_if_eq subject="active_panel" flag="hidden" ref_value="4"/>
      </icon>
    </lv_button>
    <!-- Advanced Button (Panel 5) -->
    <lv_button name="nav_btn_advanced"
               width="100%" height="content" scrollable="false" style_bg_opa="0" style_border_width="0"
               style_shadow_width="0" style_radius="0" style_pad_all="#space_sm" flex_flow="column"
               style_flex_main_place="center" style_flex_cross_place="center" style_flex_track_place="center">
      <icon name="nav_icon_advanced_active" src="dots_vertical" size="lg" variant="accent" hidden="true">
        <bind_flag_if_not_eq subject="active_panel" flag="hidden" ref_value="5"/>
      </icon>
      <icon name="nav_icon_advanced_inactive" src="dots_vertical" size="lg" variant="secondary">
        <bind_flag_if_eq subject="active_panel" flag="hidden" ref_value="5"/>
      </icon>
    </lv_button>
  </view>
</component>

<component>
  <!-- Vertical Navigation Bar with Reactive Icon Highlighting + Status Icons at Bottom -->
  <view extends="lv_obj" width="#nav_width" height="100%" style_pad_all="#nav_padding" style_border_width="0" style_radius="0" flex_flow="column" style_flex_main_place="space_between" style_flex_cross_place="center">

    <!-- Navigation Buttons Container (top, grows to fill available space) -->
    <lv_obj width="100%" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column" style_flex_main_place="space_evenly" style_flex_cross_place="center" flex_grow="1">
      <!-- Home Button (Panel 0) -->
      <lv_button name="nav_btn_home" width="#nav_button_size" height="#nav_button_size" style_bg_opa="0" style_shadow_width="0" style_border_width="0" style_radius="0" style_pad_all="0">
        <icon name="nav_icon_home" src="mat_home" align="center"/>
      </lv_button>
      <!-- Print Select Button (Panel 1 - beneath Home) -->
      <lv_button name="nav_btn_print_select" width="#nav_button_size" height="#nav_button_size" style_bg_opa="0" style_shadow_width="0" style_border_width="0" style_radius="0" style_pad_all="0">
        <icon name="nav_icon_print_select" src="mat_print" align="center"/>
      </lv_button>
      <!-- Controls Button (Panel 2) -->
      <lv_button name="nav_btn_controls" width="#nav_button_size" height="#nav_button_size" style_bg_opa="0" style_shadow_width="0" style_border_width="0" style_radius="0" style_pad_all="0">
        <icon name="nav_icon_controls" src="mat_move" align="center"/>
      </lv_button>
      <!-- Filament Button (Panel 3) -->
      <lv_button name="nav_btn_filament" width="#nav_button_size" height="#nav_button_size" style_bg_opa="0" style_shadow_width="0" style_border_width="0" style_radius="0" style_pad_all="0">
        <icon name="nav_icon_filament" src="mat_filament" align="center"/>
      </lv_button>
      <!-- Settings Button (Panel 4) -->
      <lv_button name="nav_btn_settings" width="#nav_button_size" height="#nav_button_size" style_bg_opa="0" style_shadow_width="0" style_border_width="0" style_radius="0" style_pad_all="0">
        <icon name="nav_icon_settings" src="mat_fine_tune" align="center"/>
      </lv_button>
      <!-- Advanced Button (Panel 5) -->
      <lv_button name="nav_btn_advanced" width="#nav_button_size" height="#nav_button_size" style_bg_opa="0" style_shadow_width="0" style_border_width="0" style_radius="0" style_pad_all="0">
        <icon name="nav_icon_advanced" src="mat_sysinfo" align="center"/>
      </lv_button>
    </lv_obj>

    <!-- Status Icons Container - smaller height (50px vs 70px nav) for tighter visual density -->
    <!-- Names must match what ui_status_bar_init() expects for reactive coloring -->
    <lv_obj width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column" style_flex_cross_place="center" style_pad_row="0">
      <!-- Printer Status Button (wrapped in lv_obj for consistent layout) -->
      <lv_obj width="#nav_button_size" height="50" style_bg_opa="0" style_border_width="0" style_pad_all="0">
        <lv_button name="status_btn_printer" width="100%" height="100%" style_bg_opa="0" style_shadow_width="0" style_border_width="0" style_radius="0" style_pad_all="0">
          <icon name="status_printer_icon" src="mat_printer_3d" align="center"/>
        </lv_button>
      </lv_obj>
      <!-- Network Status Button (wrapped in lv_obj for consistent layout) -->
      <lv_obj width="#nav_button_size" height="50" style_bg_opa="0" style_border_width="0" style_pad_all="0">
        <lv_button name="status_btn_network" width="100%" height="100%" style_bg_opa="0" style_shadow_width="0" style_border_width="0" style_radius="0" style_pad_all="0">
          <icon name="status_network_icon" src="mat_lan" align="center"/>
        </lv_button>
      </lv_obj>
      <!-- Notification Button with Badge -->
      <lv_obj name="status_notification_history_container" width="#nav_button_size" height="50" style_bg_opa="0" style_border_width="0" style_pad_all="0">
        <lv_button name="status_btn_notification" width="100%" height="100%" style_bg_opa="0" style_shadow_width="0" style_border_width="0" style_radius="0" style_pad_all="0">
          <icon name="status_notification_icon" src="mat_notifications" align="center"/>
        </lv_button>
        <!-- Notification Count Badge (hidden by default) -->
        <lv_obj name="notification_badge" width="18" height="18" align="top_right" style_radius="9" style_bg_color="#error_color" style_border_width="0" style_pad_all="0" hidden="true">
          <lv_label name="notification_badge_count" text="0" align="center" style_text_font="#font_small" style_text_color="#ffffff"/>
        </lv_obj>
      </lv_obj>
    </lv_obj>
  </view>
</component>

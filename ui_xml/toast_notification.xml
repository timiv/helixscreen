<component>
  <api>
    <prop name="message" type="string"/>
  </api>
  <!-- Toast container - floating appearance with shadow, positioned top-right -->
  <view name="toast_root"
        extends="lv_obj" width="content" height="content" align="top_right" x="#space_2xl_neg" y="#space_2xl"
        style_min_width="50%" style_max_width="450" style_radius="#border_radius" style_pad_all="#space_lg"
        style_pad_gap="#space_sm" style_border_width="0" style_bg_color="#app_bg_color" style_shadow_width="#space_2xl"
        style_shadow_spread="#space_xs" style_shadow_opa="120" style_shadow_ofs_y="#space_xs" flex_flow="row"
        style_flex_main_place="start" style_flex_cross_place="center">
    <!-- INFO icon (circle-info) - shown when toast_severity=0 -->
    <lv_label name="icon_info" text="#icon_info_circle" style_text_font="mdi_icons_24" style_text_color="#info_color">
      <lv_obj-bind_flag_if_not_eq subject="toast_severity" flag="hidden" ref_value="0"/>
    </lv_label>
    <!-- SUCCESS icon (check) - shown when toast_severity=1 -->
    <lv_label name="icon_success"
              text="#icon_check" style_text_font="mdi_icons_24" style_text_color="#success_color" hidden="true">
      <lv_obj-bind_flag_if_not_eq subject="toast_severity" flag="hidden" ref_value="1"/>
    </lv_label>
    <!-- WARNING icon (triangle-exclamation) - shown when toast_severity=2 -->
    <lv_label name="icon_warning"
              text="#icon_triangle_exclamation" style_text_font="mdi_icons_24" style_text_color="#warning_color"
              hidden="true">
      <lv_obj-bind_flag_if_not_eq subject="toast_severity" flag="hidden" ref_value="2"/>
    </lv_label>
    <!-- ERROR icon (triangle-exclamation) - shown when toast_severity=3 -->
    <lv_label name="icon_error"
              text="#icon_triangle_exclamation" style_text_font="mdi_icons_24" style_text_color="#error_color"
              hidden="true">
      <lv_obj-bind_flag_if_not_eq subject="toast_severity" flag="hidden" ref_value="3"/>
    </lv_label>
    <!-- Message text (wraps to fit content) -->
    <text_body name="toast_message"
               text="$message" flex_grow="1" long_mode="wrap" style_pad_left="#space_sm" style_pad_right="#space_sm"/>
    <!-- Action button (hidden by default, shown via toast_action_visible subject) -->
    <lv_button name="toast_action_btn"
               width="content" height="36" style_min_width="72" style_radius="#border_radius_small"
               style_border_width="0" style_bg_color="#secondary_color" style_pad_left="#space_lg"
               style_pad_right="#space_lg" hidden="true" clickable="true">
      <lv_obj-bind_flag_if_eq subject="toast_action_visible" flag="hidden" ref_value="0"/>
      <text_body name="toast_action_label" align="center" style_text_color="#text_primary" bind_text="toast_action_text"/>
    </lv_button>
    <!-- Close button -->
    <lv_button name="toast_close_btn"
               width="32" height="32" style_radius="#border_radius_small" style_border_width="0" style_bg_opa="0"
               style_pad_all="0" clickable="true">
      <lv_label text="#icon_xmark" style_text_font="mdi_icons_16" style_text_color="#text_secondary" align="center"/>
      <event_cb trigger="clicked" callback="toast_close_btn_clicked"/>
    </lv_button>
  </view>
</component>

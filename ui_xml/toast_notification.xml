<!-- Toast Notification Component - Temporary non-blocking messages -->
<component>
  <api>
    <prop type="string" name="severity"/>
    <prop type="string" name="message"/>
    <prop type="string" name="border_color"/>
  </api>

  <!-- Toast container - flex row layout -->
  <view extends="lv_obj" name="toast_root"
        width="70%"
        style_min_height="#header_height"
        style_max_height="100"
        style_radius="#border_radius"
        style_pad_all="#padding_normal"
        style_pad_gap="#gap_small"
        style_border_width="2"
        style_border_color="$border_color"
        style_shadow_width="12"
        style_shadow_spread="2"
        style_shadow_opa="80"
        flex_flow="row"
        style_flex_main_place="space_between"
        style_flex_cross_place="center">

    <!-- Severity icon (left) -->
    <lv_label name="toast_icon" text="&#xF0"
              style_text_font="#font_heading"
              style_text_color="$border_color"/>

    <!-- Message text (center, grows to fill space) -->
    <lv_label name="toast_message" text="$message"
              style_text_font="#font_body"
              flex_grow="1"
              long_mode="scroll_circular"
              style_pad_left="#gap_small"
              style_pad_right="#gap_small"/>

    <!-- Close button (right) -->
    <lv_button name="toast_close_btn"
               width="#button_height_small"
               height="#button_height_small"
               style_radius="#border_radius"
               style_border_width="0"
               style_pad_all="0"
               clickable="true">
      <event_cb trigger="clicked" callback="toast_close_btn_clicked"/>
      <lv_label text="&#xF0" align="center" style_text_font="#font_body"/>
    </lv_button>
  </view>
</component>

<!-- Settings Panel Launcher - 6 Card Menu -->
<component>
  <view extends="lv_obj" name="settings_panel" width="100%" height="100%" style_pad_all="#padding_normal" style_border_width="0" flex_flow="row_wrap" style_pad_gap="#padding_normal" scrollable="true" scroll_dir="ver">
    <!-- Card 1: Network Settings -->
    <ui_card name="card_network" width="#launcher_card_width" height="#launcher_card_height" flex_flow="column" flex_main_place="center" flex_cross_place="center" style_radius="#border_radius_large" style_pad_all="#launcher_card_padding" style_opa="128">
      <!-- Disabled appearance - placeholder -->
      <!-- Icon -->
      <icon src="mat_wifi" variant="secondary" style_pad_bottom="#launcher_card_icon_padding"/>
      <!-- Label -->
      <text_body text="Network" style_pad_bottom="#launcher_card_title_padding"/>
      <!-- Subtitle -->
      <text_small text="Coming soon"/>
    </ui_card>
    <!-- Card 2: Display Settings -->
    <ui_card name="card_display" width="#launcher_card_width" height="#launcher_card_height" flex_flow="column" flex_main_place="center" flex_cross_place="center" style_radius="#border_radius_large" style_pad_all="#launcher_card_padding" style_opa="128">
      <!-- Disabled appearance - placeholder -->
      <!-- Icon -->
      <icon src="mat_light" variant="secondary" style_pad_bottom="#launcher_card_icon_padding"/>
      <!-- Label -->
      <text_body text="Display" style_pad_bottom="#launcher_card_title_padding"/>
      <!-- Subtitle -->
      <text_small text="Coming soon"/>
    </ui_card>
    <!-- Card 3: Bed Mesh Calibration -->
    <ui_card name="card_bed_mesh" width="#launcher_card_width" height="#launcher_card_height" flex_flow="column" flex_main_place="center" flex_cross_place="center" style_radius="#border_radius_large" style_pad_all="#launcher_card_padding">
      <!-- Active card -->
      <!-- Icon -->
      <icon src="mat_bedmesh" variant="accent" style_pad_bottom="#launcher_card_icon_padding"/>
      <!-- Label -->
      <text_body text="Bed Mesh" style_pad_bottom="#launcher_card_title_padding"/>
      <!-- Subtitle -->
      <text_small text="Calibrate &amp; visualize"/>
    </ui_card>
    <!-- Card 4: Z-Offset Adjustment -->
    <ui_card name="card_z_offset" width="#launcher_card_width" height="#launcher_card_height" flex_flow="column" flex_main_place="center" flex_cross_place="center" style_radius="#border_radius_large" style_pad_all="#launcher_card_padding" style_opa="128">
      <!-- Disabled appearance - placeholder -->
      <!-- Icon -->
      <icon src="mat_fine_tune" variant="secondary" style_pad_bottom="#launcher_card_icon_padding"/>
      <!-- Label -->
      <text_body text="Z-Offset" style_pad_bottom="#launcher_card_title_padding"/>
      <!-- Subtitle -->
      <text_small text="Coming soon"/>
    </ui_card>
    <!-- Card 5: Printer Info & Diagnostics -->
    <ui_card name="card_printer_info" width="#launcher_card_width" height="#launcher_card_height" flex_flow="column" flex_main_place="center" flex_cross_place="center" style_radius="#border_radius_large" style_pad_all="#launcher_card_padding" style_opa="128">
      <!-- Disabled appearance - placeholder -->
      <!-- Icon -->
      <icon src="mat_info" variant="secondary" style_pad_bottom="#launcher_card_icon_padding"/>
      <!-- Label -->
      <text_body text="Printer Info" style_pad_bottom="#launcher_card_title_padding"/>
      <!-- Subtitle -->
      <text_small text="Coming soon"/>
    </ui_card>
    <!-- Card 6: About HelixScreen -->
    <ui_card name="card_about" width="#launcher_card_width" height="#launcher_card_height" flex_flow="column" flex_main_place="center" flex_cross_place="center" style_radius="#border_radius_large" style_pad_all="#launcher_card_padding" style_opa="128">
      <!-- Disabled appearance - placeholder -->
      <!-- Icon -->
      <icon src="mat_info" variant="secondary" style_pad_bottom="#launcher_card_icon_padding"/>
      <!-- Label -->
      <text_body text="About" style_pad_bottom="#launcher_card_title_padding"/>
      <!-- Subtitle -->
      <text_small text="Coming soon"/>
    </ui_card>
  </view>
</component>

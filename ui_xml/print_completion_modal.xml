<component>
  <!-- Print Completion Modal -->
  <!-- Note: Backdrop is created programmatically by Modal class in C++ -->
  <view name="print_completion_modal"
        extends="ui_dialog" width="75%" height="content" align="center" flex_flow="column" style_flex_main_place="start"
        style_pad_gap="0">
    <!-- Content area -->
    <lv_obj width="100%"
            height="content" style_min_height="140" style_bg_opa="0" style_border_width="0" style_pad_left="#space_lg"
            style_pad_right="#space_lg" style_pad_top="#space_lg" style_pad_bottom="#space_lg" flex_flow="column"
            style_flex_cross_place="center" style_pad_gap="#space_md">
      <!-- Status icon (set programmatically based on completion state) -->
      <icon name="status_icon" src="check_circle" size="lg" color="#success_color"/>
      <!-- Title (set programmatically) -->
      <text_heading name="title_label" width="100%" text="Print Complete" style_text_align="center"/>
      <!-- Filename -->
      <text_body name="filename_label"
                 width="100%" text="" long_mode="dot" style_text_align="center" style_text_color="#text_primary"/>
      <!-- Stats grid container -->
      <lv_obj name="stats_grid"
              width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="row"
              style_flex_main_place="center" style_pad_gap="#space_lg">
        <!-- Duration stat -->
        <lv_obj width="content"
                height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column"
                style_flex_cross_place="center" style_pad_gap="#space_xs">
          <icon src="clock" size="md" color="#text_secondary"/>
          <text_small name="duration_label" text="--" style_text_color="#text_secondary"/>
        </lv_obj>
        <!-- Layers stat -->
        <lv_obj width="content"
                height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column"
                style_flex_cross_place="center" style_pad_gap="#space_xs">
          <icon src="layers" size="md" color="#text_secondary"/>
          <text_small name="layers_label" text="--" style_text_color="#text_secondary"/>
        </lv_obj>
        <!-- Filament stat (optional - hidden if not available) -->
        <lv_obj name="filament_stat"
                width="content" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0"
                flex_flow="column" style_flex_cross_place="center" style_pad_gap="#space_xs">
          <icon src="filament" size="md" color="#text_secondary"/>
          <text_small name="filament_label" text="--" style_text_color="#text_secondary"/>
        </lv_obj>
      </lv_obj>
    </lv_obj>
    <!-- Horizontal divider above button -->
    <lv_obj width="100%"
            height="1" style_bg_color="#text_secondary" style_bg_opa="64" style_border_width="0" style_pad_all="0"/>
    <!-- Single OK button row -->
    <lv_obj width="100%"
            height="#button_height" style_bg_opa="0" style_border_width="0" style_pad_all="0" style_pad_gap="0"
            flex_flow="row">
      <!-- OK button (Modal wires this via on_modal_ok_clicked callback) -->
      <lv_button name="btn_ok"
                 height="100%" flex_grow="1" style_radius="0" style_border_width="0" style_shadow_width="0"
                 clickable="true">
        <event_cb trigger="clicked" callback="on_modal_ok_clicked"/>
        <text_body text="OK" align="center"/>
      </lv_button>
    </lv_obj>
  </view>
</component>

<component>
  <!-- Print Completion Modal -->
  <!-- Note: Backdrop is created programmatically by Modal class in C++ -->
  <view name="print_completion_modal"
        extends="ui_dialog" width="75%" height="content" align="center" flex_flow="column" style_flex_main_place="start"
        style_pad_gap="0">
    <!-- Content area -->
    <lv_obj width="100%"
            height="content" style_min_height="140" style_pad_left="#space_lg" style_pad_right="#space_lg"
            style_pad_top="#space_lg" style_pad_bottom="#space_lg" flex_flow="column" style_flex_cross_place="center"
            style_pad_gap="#space_md">
      <!-- Status icon (set programmatically based on completion state) -->
      <icon name="status_icon" src="check_circle" size="lg" variant="success"/>
      <!-- Title (set programmatically) -->
      <text_heading name="title_label" width="100%" text="Print Complete" translation_tag="Print Complete" style_text_align="center"/>
      <!-- Filename -->
      <text_body name="filename_label"
                 width="100%" text="" long_mode="dots" style_text_align="center" style_text_color="#text"/>
      <!-- Stats grid container -->
      <lv_obj name="stats_grid"
              width="100%" height="content" style_pad_all="0" flex_flow="row" style_flex_main_place="center"
              style_pad_gap="#space_lg">
        <!-- Duration stat -->
        <lv_obj height="content"
                style_pad_all="0" flex_flow="column" style_flex_cross_place="center" style_pad_gap="#space_xs">
          <icon src="clock" size="md" variant="muted"/>
          <text_small name="duration_label" text="--"/>
        </lv_obj>
        <!-- Slicer estimate stat (shown when estimate was available) -->
        <lv_obj name="estimate_stat"
                width="content" height="content" style_pad_all="0" flex_flow="column" style_flex_cross_place="center"
                style_pad_gap="#space_xs">
          <icon src="progress_clock" size="md" variant="muted"/>
          <text_small name="estimate_label" text="--"/>
        </lv_obj>
        <!-- Layers stat -->
        <lv_obj height="content"
                style_pad_all="0" flex_flow="column" style_flex_cross_place="center" style_pad_gap="#space_xs">
          <icon src="layers" size="md" variant="muted"/>
          <text_small name="layers_label" text="--"/>
        </lv_obj>
        <!-- Filament stat (optional - hidden if not available) -->
        <lv_obj name="filament_stat"
                width="content" height="content" style_pad_all="0" flex_flow="column" style_flex_cross_place="center"
                style_pad_gap="#space_xs">
          <icon src="filament" size="md" variant="muted"/>
          <text_small name="filament_label" text="--"/>
        </lv_obj>
      </lv_obj>
    </lv_obj>
    <!-- Horizontal divider above button -->
    <divider_horizontal/>
    <!-- Single OK button row -->
    <lv_obj width="100%" height="#button_height" style_pad_all="0" style_pad_gap="0" flex_flow="row">
      <!-- OK button -->
      <ui_button name="btn_ok" height="100%" flex_grow="1" style_radius="0" text="OK" translation_tag="OK">
        <event_cb trigger="clicked" callback="on_print_complete_ok"/>
      </ui_button>
    </lv_obj>
  </view>
</component>

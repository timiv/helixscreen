<component>
  <api>
    <prop type="string" name="title"/>
    <prop type="string" name="content"/>
  </api>
  <!-- Full-screen backdrop overlay -->
  <view extends="lv_obj" name="tip_dialog_backdrop" width="100%" height="100%" style_bg_opa="200" style_border_width="0" style_pad_all="0" style_radius="0" align="center" clickable="true">
    <!-- Dialog card (centered, larger for content) -->
    <lv_obj width="70%" height="60%" align="center" style_radius="#border_radius_large" style_pad_all="#padding_normal" style_border_width="2" style_border_opa="200" flex_flow="column" style_flex_main_place="start" style_pad_gap="#padding_medium">
      <!-- Title (direct child, no wrapper) -->
      <lv_label name="tip_title" text="$title" width="100%" style_text_font="#font_heading" style_text_align="left" long_mode="wrap"/>
      <!-- Scrollable content (grows to fill space) -->
      <lv_obj name="content_container" width="100%" flex_grow="1" style_bg_opa="0" style_border_width="0" style_pad_all="#padding_medium" scrollable="true" scroll_snap_y="none">
        <lv_label name="tip_content" text="$content" width="100%" style_text_font="#font_body" style_text_align="left" long_mode="wrap"/>
      </lv_obj>
      <!-- Ok button (direct child, no wrapper) -->
      <lv_button name="btn_ok" width="140" height="#button_height_small" align="center" style_radius="6" style_border_width="0" clickable="true">
        <lv_label text="Ok" style_text_font="#font_body" align="center"/>
      </lv_button>
    </lv_obj>
  </view>
</component>

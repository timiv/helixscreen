<component>
  <api>
    <prop type="string" name="title"/>
    <prop type="string" name="content"/>
  </api>
  <!-- Full-screen backdrop overlay -->
  <view extends="lv_obj" name="tip_dialog_backdrop" width="100%" height="100%" style_bg_opa="200" style_border_width="0" style_pad_all="0" style_radius="0" align="center" clickable="true">
    <!-- Dialog card (centered, uses theme_grey background) -->
    <ui_dialog width="70%" height="60%" align="center"
               flex_flow="column" style_flex_main_place="start" style_pad_gap="0">
      <!-- Title -->
      <lv_label name="tip_title" text="$title" width="100%"
                style_text_font="#font_heading" style_text_align="left" long_mode="wrap"
                style_pad_left="#padding_normal" style_pad_right="#padding_normal" style_pad_top="#padding_normal"/>
      <!-- Scrollable content (grows to fill space) -->
      <lv_obj name="content_container" width="100%" flex_grow="1"
              style_bg_opa="0" style_border_width="0"
              style_pad_all="#padding_normal"
              scrollable="true" scroll_snap_y="none">
        <lv_label name="tip_content" text="$content" width="100%" style_text_font="#font_body" style_text_align="left" long_mode="wrap"/>
      </lv_obj>
      <!-- Horizontal divider above buttons -->
      <lv_obj width="100%" height="1" style_bg_color="#text_secondary" style_bg_opa="128" style_border_width="0" style_pad_all="0"/>
      <!-- Button row -->
      <lv_obj width="100%" height="#button_height"
              style_bg_opa="0" style_border_width="0" style_pad_all="0"
              flex_flow="row">
        <!-- Ok button - match dialog radius for bottom corners -->
        <lv_button name="btn_ok" flex_grow="1" height="100%"
                   style_radius="#border_radius"
                   style_border_width="0"
                   style_shadow_width="0"
                   clickable="true">
          <lv_label text="Ok" style_text_font="#font_body" align="center"/>
        </lv_button>
      </lv_obj>
    </ui_dialog>
  </view>
</component>

<component>
  <!--
    AMS Current Tool Indicator

    Compact display showing the currently active tool/filament during a print.
    Used in the print status panel to show which AMS slot is feeding the printer.

    Features:
    - Shows tool number (T0, T1, etc.) with filament color swatch
    - Auto-hides when no AMS is available (slot_count == 0)
    - Auto-hides when no tool is active (current_tool == -1)
    - Clickable to open AMS panel for slot management

    Requires C++ backing (ui_ams_current_tool.cpp) to handle:
    - Color swatch background color (from ams_current_color subject)
    - Click handler to open AMS panel

    Binds to subjects:
    - ams_current_tool_text: string ("T0", "T1", or empty)
    - ams_slot_count: int (0=no AMS, >0=AMS available)
    - ams_current_tool: int (negative=none, 0+=tool index) for visibility
  -->
  <view name="ams_current_tool"
        extends="lv_obj" width="content" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0"
        flex_flow="row" style_flex_cross_place="center" style_pad_gap="#space_sm" clickable="true">
    <!-- Hide when no AMS available -->
    <bind_flag_if_eq subject="ams_slot_count" flag="hidden" ref_value="0"/>
    <!-- Hide when no tool active (current_tool == -1) -->
    <bind_flag_if_lt subject="ams_current_tool" flag="hidden" ref_value="0"/>
    <!-- Click handler registered in C++ -->
    <event_cb trigger="clicked" callback="on_ams_current_tool_clicked"/>
    <!-- Filament/spool icon -->
    <icon src="filament" size="sm" color="#text_secondary"/>
    <!-- Tool label (T0, T1, etc.) -->
    <text_small name="tool_label" text="T0" bind_text="ams_current_tool_text" style_text_color="#text_secondary"/>
    <!-- Color swatch showing current filament color (color set via C++) -->
    <lv_obj name="color_swatch"
            width="16" height="16" style_radius="8" style_border_width="1" style_border_color="#text_secondary"
            style_border_opa="80" style_bg_color="0x808080" style_bg_opa="255" scrollable="false"/>
  </view>
</component>

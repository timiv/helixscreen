<!-- Auto-state mapping row: icon + label + dropdown (40% width) -->
<!-- Used in LED settings for each printer state (idle, heating, printing, etc.) -->
<!-- C++ sets dropdown options and event callbacks with state_key user_data -->
<component>
  <api>
    <prop name="label" type="string" default="State"/>
    <prop name="label_tag" type="string" default=""/>
    <prop name="icon" type="string" default=""/>
  </api>
  <view extends="lv_obj"
        width="100%" height="content" flex_flow="row" style_flex_cross_place="center" style_bg_opa="0"
        style_border_width="0" style_pad_left="#space_lg" style_pad_right="#space_lg" style_pad_top="#space_sm"
        style_pad_bottom="#space_sm" style_pad_gap="#space_md" scrollable="false">
    <icon name="row_icon" src="$icon" size="sm" variant="secondary"/>
    <text_body name="label" text="$label" translation_tag="$label_tag" flex_grow="1"/>
    <lv_dropdown name="dropdown" width="40%" style_border_width="0"/>
  </view>
</component>

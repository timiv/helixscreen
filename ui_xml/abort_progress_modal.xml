<!-- Abort Progress Modal - Shows progress during abort state machine execution -->
<!-- Displayed during: TRY_HEATER_INTERRUPT, PROBE_QUEUE, SENT_CANCEL, SENT_ESTOP,
     SENT_RESTART, WAITING_RECONNECT, and final COMPLETE states -->
<component>
  <!-- Full-screen backdrop overlay with semi-transparent dark background -->
  <view name="abort_progress_modal"
        extends="lv_obj" width="100%" height="100%" style_bg_color="0x000000" style_bg_opa="200"
        style_border_width="0" style_radius="0" style_pad_all="0" align="center" clickable="true"
        hidden="true">
    <!-- Show when abort_progress_visible == 1 -->
    <lv_obj-bind_flag_if_eq subject="abort_progress_visible" flag="hidden" ref_value="0"/>
    <!-- Dialog card using ui_dialog (provides themed background) -->
    <ui_dialog name="abort_progress_card"
               width="70%" height="content" align="center" flex_flow="column" style_flex_main_place="start"
               style_pad_gap="0">
      <!-- Content area with spinner and message -->
      <lv_obj width="100%"
              height="content" style_min_height="160" style_bg_opa="0" style_border_width="0"
              style_pad_left="#space_lg" style_pad_right="#space_lg" style_pad_top="#space_xl"
              style_pad_bottom="#space_xl" flex_flow="column" style_flex_cross_place="center"
              style_flex_main_place="center" style_flex_track_place="center" style_pad_gap="#space_lg">
        <!-- Spinner animation (Material Design style) -->
        <spinner size="lg"/>
        <!-- Progress message (dynamically bound to abort_progress_message subject) -->
        <text_body name="abort_message_label"
                   width="100%" bind_text="abort_progress_message" text="Processing..."
                   long_mode="wrap" style_text_align="center" style_text_color="#text_secondary"/>
      </lv_obj>
    </ui_dialog>
  </view>
</component>

<!-- Abort Progress Modal - Shows progress during abort state machine execution -->
<!-- NOTE: Backdrop created manually on lv_layer_top() to survive screen changes -->
<!-- (Cannot use Modal::show() which defaults to lv_screen_active()) -->
<component>
  <view name="abort_progress_modal"
        extends="ui_dialog" width="70%" height="content" align="center" flex_flow="column" style_flex_main_place="start"
        style_pad_gap="0">
    <!-- Content area with spinner and message -->
    <lv_obj width="100%"
            height="content" style_min_height="160" style_pad_left="#space_lg" style_pad_right="#space_lg"
            style_pad_top="#space_xl" style_pad_bottom="#space_xl" flex_flow="column" style_flex_cross_place="center"
            style_flex_main_place="center" style_flex_track_place="center" style_pad_gap="#space_lg">
      <!-- Spinner animation (Material Design style) -->
      <spinner size="lg"/>
      <!-- Progress message (dynamically bound to abort_progress_message subject) -->
      <text_muted name="abort_message_label"
                  width="100%" bind_text="abort_progress_message" text="Processing..." translation_tag="Processing..."
                  long_mode="wrap" style_text_align="center"/>
    </lv_obj>
  </view>
</component>

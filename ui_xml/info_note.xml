<!-- Reusable info note component (icon + text) for informational messages -->
<!-- Usage: <info_note icon="information_outline" text="Touch screen to wake from sleep"/> -->
<component>
  <api>
    <prop name="icon" type="string" default="information_outline"/>
    <prop name="text" type="string" default=""/>
    <prop name="icon_variant" type="string" default="secondary"/>
  </api>
  <view extends="lv_obj"
        width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="#space_sm" flex_flow="row"
        style_flex_cross_place="center" style_pad_gap="#space_sm">
    <icon src="$icon" size="sm" variant="$icon_variant"/>
    <text_small text="$text" style_text_color="#text_secondary" flex_grow="1"/>
  </view>
</component>

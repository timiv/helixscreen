<component>
  <view name="panel_widget_temp_stack" extends="lv_obj"
        height="100%" flex_grow="1" style_pad_all="0" scrollable="false"
        flex_flow="column" style_flex_main_place="center"
        style_flex_cross_place="center" style_flex_track_place="center">
    <bind_state_if_not_eq subject="printer_connection_state" state="disabled" ref_value="2"/>

    <!-- Nozzle row -->
    <lv_obj name="temp_stack_nozzle_row" width="100%" height="content"
            style_pad_all="0" scrollable="false" flex_flow="row"
            style_flex_main_place="center" style_flex_cross_place="center"
            style_flex_track_place="center" style_pad_gap="#space_xs"
            clickable="true" event_bubble="false">
      <event_cb trigger="clicked" callback="temp_stack_nozzle_cb"/>
      <nozzle_icon name="temp_stack_nozzle_icon" size="xs" badge_subject=""/>
      <temp_display size="sm" show_target="false" bind_current="extruder_temp" bind_target="extruder_target"/>
    </lv_obj>

    <!-- Bed row -->
    <lv_obj name="temp_stack_bed_row" width="100%" height="content"
            style_pad_all="0" scrollable="false" flex_flow="row"
            style_flex_main_place="center" style_flex_cross_place="center"
            style_flex_track_place="center" style_pad_gap="#space_xs"
            clickable="true" event_bubble="false">
      <event_cb trigger="clicked" callback="temp_stack_bed_cb"/>
      <icon name="temp_stack_bed_icon_glyph" src="radiator" size="xs" variant="secondary"/>
      <temp_display size="sm" show_target="false" bind_current="bed_temp" bind_target="bed_target"/>
    </lv_obj>

    <!-- Chamber row (hidden when no sensor) -->
    <lv_obj name="temp_stack_chamber_row" width="100%" height="content"
            style_pad_all="0" scrollable="false" flex_flow="row"
            style_flex_main_place="center" style_flex_cross_place="center"
            style_flex_track_place="center" style_pad_gap="#space_xs">
      <bind_flag_if_eq subject="printer_has_chamber_sensor" flag="hidden" ref_value="0"/>
      <icon src="fridge_industrial" size="xs" variant="secondary"/>
      <temp_display size="sm" show_target="false" bind_current="chamber_temp" bind_target="chamber_temp"/>
    </lv_obj>
  </view>
</component>

<component>
  <view name="panel_widget_thermistor" extends="lv_obj"
        height="100%" flex_grow="1" style_pad_all="0" scrollable="false"
        flex_flow="column" style_flex_main_place="center"
        style_flex_cross_place="center" style_flex_track_place="center"
        clickable="true">
    <bind_state_if_not_eq subject="printer_connection_state" state="disabled" ref_value="2"/>
    <event_cb trigger="clicked" callback="thermistor_clicked_cb"/>
    <!-- Top row: icon + temperature -->
    <lv_obj width="100%" height="content" style_pad_all="0" scrollable="false"
            flex_flow="row" style_flex_main_place="center" style_flex_cross_place="center"
            style_pad_gap="#space_xs"
            clickable="false" event_bubble="true">
      <icon name="thermistor_icon" src="thermometer" size="xs" variant="secondary"
            clickable="false" event_bubble="true"/>
      <text_body name="thermistor_temp" text="--&#176;C"
                 clickable="false" event_bubble="true"/>
    </lv_obj>
    <!-- Sensor name label -->
    <text_tiny name="thermistor_name" text="Select sensor" style_text_align="center"
              long_mode="dots" width="100%"
              clickable="false" event_bubble="true"/>
  </view>
</component>

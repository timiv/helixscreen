<component>
  <view name="panel_widget_fan_stack"
        extends="lv_obj" height="100%" flex_grow="1" style_pad_all="0" style_pad_left="#space_xs"
        style_pad_right="#space_xs" style_min_width="80" scrollable="false" flex_flow="column" style_pad_gap="#space_xs"
        style_flex_main_place="center" style_flex_cross_place="center" style_flex_track_place="center" clickable="true">
    <bind_state_if_not_eq subject="printer_connection_state" state="disabled" ref_value="2"/>
    <event_cb trigger="clicked" callback="on_fan_stack_clicked"/>

    <!-- Part fan row -->
    <lv_obj name="fan_stack_part_row"
            width="100%" height="content" style_pad_all="0" scrollable="false" flex_flow="row"
            style_flex_main_place="start" style_flex_cross_place="center" style_flex_track_place="center"
            style_pad_gap="#space_xs" clickable="false" event_bubble="true">
      <icon name="fan_stack_part_icon" src="fan" size="xs" variant="secondary" clickable="false" event_bubble="true"/>
      <text_muted name="fan_stack_part_name" text="P" style_text_font="#font_xs" clickable="false" event_bubble="true"/>
      <text_small name="fan_stack_part_speed"
                  style_text_color="#text" style_text_font="#font_xs" clickable="false" event_bubble="true"/>
    </lv_obj>

    <!-- Hotend fan row -->
    <lv_obj name="fan_stack_hotend_row"
            width="100%" height="content" style_pad_all="0" scrollable="false" flex_flow="row"
            style_flex_main_place="start" style_flex_cross_place="center" style_flex_track_place="center"
            style_pad_gap="#space_xs" clickable="false" event_bubble="true">
      <icon name="fan_stack_hotend_icon" src="fan" size="xs" variant="secondary" clickable="false" event_bubble="true"/>
      <text_muted name="fan_stack_hotend_name" text="H" style_text_font="#font_xs" clickable="false" event_bubble="true"/>
      <text_small name="fan_stack_hotend_speed"
                  style_text_color="#text" style_text_font="#font_xs" clickable="false" event_bubble="true"/>
    </lv_obj>

    <!-- Aux fan row (hidden when no aux fan detected) -->
    <lv_obj name="fan_stack_aux_row"
            width="100%" height="content" style_pad_all="0" scrollable="false" flex_flow="row"
            style_flex_main_place="start" style_flex_cross_place="center" style_flex_track_place="center"
            style_pad_gap="#space_xs" clickable="false" event_bubble="true" flags="hidden">
      <icon name="fan_stack_aux_icon" src="fan" size="xs" variant="secondary" clickable="false" event_bubble="true"/>
      <text_muted name="fan_stack_aux_name" text="C" style_text_font="#font_xs" clickable="false" event_bubble="true"/>
      <text_small name="fan_stack_aux_speed"
                  style_text_color="#text" style_text_font="#font_xs" clickable="false" event_bubble="true"/>
    </lv_obj>
  </view>
</component>

<component>
  <view name="panel_widget_fan_stack"
        extends="lv_obj" height="100%" flex_grow="1" style_pad_all="0" scrollable="false" flex_flow="column"
        style_pad_gap="0" style_flex_main_place="center" style_flex_cross_place="center" style_flex_track_place="center">
    <bind_state_if_not_eq subject="printer_connection_state" state="disabled" ref_value="2"/>

    <!-- Part fan row -->
    <lv_obj name="fan_stack_part_row"
            width="100%" height="content" style_pad_all="0" scrollable="false" flex_flow="row"
            style_flex_main_place="center" style_flex_cross_place="center" style_flex_track_place="center"
            style_pad_gap="#space_xs" clickable="false">
      <icon name="fan_stack_part_icon" src="fan" size="xs" variant="secondary"/>
      <text_small name="fan_stack_part_name" style_text_opa="178">
        Part
      </text_small>
      <text_small name="fan_stack_part_speed">
        0%
      </text_small>
    </lv_obj>

    <!-- Hotend fan row -->
    <lv_obj name="fan_stack_hotend_row"
            width="100%" height="content" style_pad_all="0" scrollable="false" flex_flow="row"
            style_flex_main_place="center" style_flex_cross_place="center" style_flex_track_place="center"
            style_pad_gap="#space_xs" clickable="false">
      <icon name="fan_stack_hotend_icon" src="fan" size="xs" variant="secondary"/>
      <text_small name="fan_stack_hotend_name" style_text_opa="178">
        HE
      </text_small>
      <text_small name="fan_stack_hotend_speed">
        0%
      </text_small>
    </lv_obj>

    <!-- Aux fan row (hidden when no aux fan detected) -->
    <lv_obj name="fan_stack_aux_row"
            width="100%" height="content" style_pad_all="0" scrollable="false" flex_flow="row"
            style_flex_main_place="center" style_flex_cross_place="center" style_flex_track_place="center"
            style_pad_gap="#space_xs" clickable="false" flags="hidden">
      <icon name="fan_stack_aux_icon" src="fan" size="xs" variant="secondary"/>
      <text_small name="fan_stack_aux_name" style_text_opa="178">
        Aux
      </text_small>
      <text_small name="fan_stack_aux_speed">
        0%
      </text_small>
    </lv_obj>
  </view>
</component>

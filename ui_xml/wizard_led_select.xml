<component>
  <!-- First-Run Wizard: LED Select Screen (Optional) -->
  <!-- User selects main LED strip, or skips if not present -->
  <consts>
    <!-- Step metadata (read by wizard orchestrator) -->
    <str name="step_title" value="Printer Setup: LEDs"/>
    <str name="step_subtitle" value="Optional - select your main lighting source, or skip if your printer doesn't have one"/>
    <int name="step_order" value="7"/>
  </consts>
  <view name="wizard_led_select_root"
        extends="lv_obj" width="100%" height="100%" style_bg_opa="0" style_border_width="0" style_pad_all="0"
        flex_flow="column" style_flex_main_place="start" style_flex_cross_place="center">
    <!-- Selection container -->
    <ui_card width="100%"
             flex_grow="1" style_radius="#border_radius_large" style_pad_all="#space_lg" style_pad_gap="#space_md"
             flex_flow="column" style_flex_main_place="start" style_flex_cross_place="start">
      <!-- LED selection -->
      <text_body text="Main LED Strip" style_pad_bottom="#space_sm"/>
      <lv_dropdown name="led_main_dropdown"
                   width="100%" height="#header_height" options="(None)" style_border_width="#input_border_width"
                   style_border_opa="100%" style_radius="#border_radius" style_pad_all="#space_lg"/>
    </ui_card>
  </view>
</component>

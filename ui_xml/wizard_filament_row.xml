<!-- Wizard filament row: color swatch + material + name + temp range -->
<!-- Used in spool_wizard step 1 filament list -->
<component>
  <styles>
    <style name="selected_style"
           border_width="#space_xs" border_side="left" border_color="#primary" bg_color="#elevated_bg"/>
  </styles>
  <view name="wizard_filament_row"
        extends="lv_button" width="100%" height="content" style_bg_opa="0"
        style_border_width="0" style_shadow_width="0"
        style_pad_all="#space_sm" style_radius="#border_radius"
        flex_flow="row" style_flex_cross_place="center" style_pad_gap="#space_sm"
        clickable="true" scrollable="false">
    <style name="selected_style" selector="checked"/>
    <!-- Color swatch circle -->
    <lv_obj name="color_swatch"
            width="24" height="24" style_radius="12" style_bg_color="0x808080" style_bg_opa="255" style_border_width="1"
            style_border_color="#border" clickable="false" scrollable="false"/>
    <!-- Material + name info column -->
    <lv_obj name="info_col"
            height="content" flex_grow="1" flex_flow="column" style_pad_all="0" style_pad_gap="#space_xs"
            clickable="false" scrollable="false">
      <text_body name="filament_material" width="100%" text="PLA" long_mode="dots" clickable="false"/>
      <text_small name="filament_name"
                  width="100%" text="Red" style_text_color="#text_muted" long_mode="dots" clickable="false"/>
    </lv_obj>
    <!-- Temperature info -->
    <text_small name="filament_temps" text="200-220Â°C" style_text_color="#text_muted" clickable="false"/>
    <!-- Click handler -->
    <event_cb trigger="clicked" callback="on_wizard_filament_selected"/>
  </view>
</component>

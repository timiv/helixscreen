<component>
  <!-- Overlay panel structure - leaves room for navbar -->
  <view name="history_list_panel"
        extends="lv_obj" width="#overlay_panel_width_large" height="100%" align="right_mid" flex_flow="column"
        style_pad_all="0" style_bg_opa="255" style_bg_color="#card_bg" style_radius="0" style_border_width="0">
    <!-- Header bar with back button and title -->
    <header_bar name="header" title="Print History" show_back="true"/>
    <!-- Filter/Search Row -->
    <lv_obj name="filter_row"
            width="100%" height="content" flex_flow="row" style_flex_main_place="start" style_flex_cross_place="center"
            style_flex_gap_column="#space_md" style_pad_left="#space_md" style_pad_right="#space_md"
            style_pad_top="#space_sm" style_pad_bottom="#space_sm" style_bg_opa="0" style_border_width="0">
      <!-- Search box - fills remaining space -->
      <lv_textarea name="search_box"
                   placeholder_text="Search filename..." one_line="true" flex_grow="1" style_min_width="120"
                   style_max_height="#input_height">
        <event_cb trigger="value_changed" callback="history_search_changed"/>
      </lv_textarea>
      <!-- Status filter dropdown -->
      <lv_dropdown name="filter_status" options="All Completed Failed Cancelled" style_min_width="100">
        <event_cb trigger="value_changed" callback="history_filter_status_changed"/>
      </lv_dropdown>
      <!-- Sort dropdown -->
      <lv_dropdown name="sort_dropdown" options="Date (newest) Date (oldest) Duration Filename" style_min_width="120">
        <event_cb trigger="value_changed" callback="history_sort_changed"/>
      </lv_dropdown>
    </lv_obj>
    <!-- Content area - scrollable list container -->
    <lv_obj name="list_content"
            width="100%" height="content" flex_grow="1" flex_flow="column" style_pad_top="#space_sm"
            style_pad_bottom="#space_md" style_pad_left="#space_md" style_pad_right="#space_md"
            style_flex_gap_row="#space_sm" style_bg_opa="0" style_border_width="0" scrollable="true" scroll_dir="ver">
      <!-- List rows container (populated dynamically) -->
      <!-- clickable="false" ensures clicks pass through to row children -->
      <lv_obj name="list_rows"
              width="100%" height="content" flex_flow="column" style_flex_gap_row="#space_sm" style_pad_all="0"
              style_bg_opa="0" style_border_width="0" clickable="false"/>
      <!-- Empty state (shown when no history) - fills available space -->
      <lv_obj name="empty_state"
              width="100%" flex_grow="1" flex_flow="column" style_flex_main_place="center"
              style_flex_cross_place="center" style_flex_gap_row="#space_md" style_pad_all="#space_xl" style_bg_opa="0"
              style_border_width="0">
        <!-- Bind hidden state to history_list_has_jobs subject -->
        <lv_obj-bind_flag_if_eq subject="history_list_has_jobs" value="1" flag="hidden"/>
        <!-- Empty state icon (clock/history icon F0150) -->
        <lv_label name="empty_icon" text="ó°…" style_text_font="mdi_icons_48" style_text_color="#text_secondary"/>
        <!-- Empty state message -->
        <text_body name="empty_message"
                   text="No print history found" style_text_color="#text_secondary" style_text_align="center"/>
        <text_small name="empty_hint"
                    text="Completed prints will appear here" style_text_color="#text_secondary"
                    style_text_align="center"/>
      </lv_obj>
    </lv_obj>
  </view>
</component>

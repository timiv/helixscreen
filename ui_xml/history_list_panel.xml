<component>
  <!-- Overlay panel structure - leaves room for navbar -->
  <view name="history_list_panel"
        extends="lv_obj" width="#overlay_panel_width" height="100%" align="right_mid" flex_flow="column"
        style_pad_all="0" style_bg_opa="255" style_bg_color="#card_bg" style_radius="0" style_border_width="0">
    <!-- Header bar with back button and title -->
    <header_bar name="header" title="Print History" title_tag="Print History"/>
    <!-- Filter/Search Row -->
    <lv_obj name="filter_row"
            width="100%" height="content" flex_flow="row" style_flex_main_place="start" style_flex_cross_place="center"
            style_pad_column="#space_md" style_pad_left="#space_md" style_pad_right="#space_md"
            style_pad_top="#space_sm" style_pad_bottom="#space_sm">
      <!-- Search box - fills remaining space -->
      <text_input name="search_box"
                  placeholder_text="Search filename..." placeholder_tag="Search filename..." translation_tag="Search filename..." flex_grow="1" style_min_width="120"
                  style_max_height="#input_height" show_clear_button="true" clear_callback="history_search_clear">
        <event_cb trigger="value_changed" callback="history_search_changed"/>
      </text_input>
      <!-- Status filter dropdown -->
      <lv_dropdown name="filter_status" options="All&#10;Completed&#10;Failed&#10;Cancelled" style_min_width="100">
        <event_cb trigger="value_changed" callback="history_filter_status_changed"/>
      </lv_dropdown>
      <!-- Sort dropdown -->
      <lv_dropdown name="sort_dropdown" options="Date (newest)&#10;Date (oldest)&#10;Duration&#10;Filename" style_min_width="120">
        <event_cb trigger="value_changed" callback="history_sort_changed"/>
      </lv_dropdown>
    </lv_obj>
    <!-- Content area - scrollable container with three state-based views -->
    <lv_obj name="list_content"
            width="100%" height="content" flex_grow="1" flex_flow="column" style_pad_top="#space_sm"
            style_pad_bottom="#space_md" style_pad_left="#space_md" style_pad_right="#space_md"
            style_pad_row="#space_sm" scrollable="true">
      <!-- ================================================================== -->
      <!-- STATE: LOADING (state=0) -->
      <!-- ================================================================== -->
      <lv_obj name="loading_state"
              width="100%" flex_grow="1" flex_flow="column" style_flex_main_place="center"
              style_flex_cross_place="center" style_pad_row="#space_md" style_pad_all="#space_xl">
        <bind_flag_if_not_eq subject="history_list_panel_state" flag="hidden" ref_value="0"/>
        <!-- Loading spinner -->
        <lv_spinner name="loading_spinner" width="48" height="48"/>
        <text_muted text="Loading history..." translation_tag="Loading history..." style_text_align="center"/>
      </lv_obj>
      <!-- ================================================================== -->
      <!-- STATE: EMPTY (state=1) -->
      <!-- ================================================================== -->
      <lv_obj name="empty_state"
              width="100%" flex_grow="1" flex_flow="column" style_flex_main_place="center"
              style_flex_cross_place="center" style_pad_row="#space_md" style_pad_all="#space_xl">
        <bind_flag_if_not_eq subject="history_list_panel_state" flag="hidden" ref_value="1"/>
        <!-- Empty state icon (clock/history icon F0150) -->
        <lv_label name="empty_icon" text="ó°…" style_text_font="mdi_icons_48" style_text_color="#text_muted"/>
        <!-- Empty state message -->
        <text_muted name="empty_message" bind_text="history_empty_message" style_text_align="center"/>
        <text_small name="empty_hint"
                    bind_text="history_empty_hint" style_text_color="#text_muted" style_text_align="center"/>
      </lv_obj>
      <!-- ================================================================== -->
      <!-- STATE: HAS_JOBS (state=2) - List rows container -->
      <!-- ================================================================== -->
      <!-- clickable="false" ensures clicks pass through to row children -->
      <lv_obj name="list_rows"
              width="100%" height="content" flex_flow="column" style_pad_row="#space_sm" style_pad_all="0"
              clickable="false">
        <bind_flag_if_not_eq subject="history_list_panel_state" flag="hidden" ref_value="2"/>
      </lv_obj>
    </lv_obj>
  </view>
</component>

<!-- Modal for editing filament properties in an AMS slot -->
<!-- NOTE: Backdrop created programmatically by Modal system -->
<!-- Layout: Side-by-side with color preview on left, form fields on right -->
<component>
  <consts>
    <px name="color_preview_size" value="100"/>
    <px name="dropdown_width" value="140"/>
    <px name="left_column_width" value="120"/>
  </consts>
  <!-- Dialog card - wider for horizontal layout -->
  <view name="ams_edit_modal"
        extends="ui_dialog" width="420" height="content" align="center" flex_flow="column" style_flex_main_place="start"
        style_pad_gap="0">
    <!-- Header with title and close button -->
    <lv_obj width="100%"
            height="content" style_pad_left="#space_lg" style_pad_right="#space_md" style_pad_top="#space_lg"
            style_pad_bottom="#space_sm" flex_flow="row" style_flex_main_place="space_between"
            style_flex_cross_place="center" scrollable="false">
      <lv_obj height="content"
              style_pad_all="0" flex_flow="row" style_flex_cross_place="center" style_pad_gap="#space_sm"
              scrollable="false">
        <text_heading name="slot_indicator" text="Edit Slot 1" translation_tag="Edit Slot 1"/>
        <text_small name="spoolman_id_label" text="" hidden="true"/>
      </lv_obj>
      <!-- Close button -->
      <ui_button name="btn_close" width="40" height="40" icon="close" variant="ghost">
        <event_cb trigger="clicked" callback="ams_edit_modal_close_cb"/>
      </ui_button>
    </lv_obj>
    <!-- Horizontal divider -->
    <divider_horizontal/>
    <!-- Content area - HORIZONTAL layout with side-by-side sections -->
    <lv_obj width="100%"
            height="content" style_pad_all="#space_md" flex_flow="row" style_pad_gap="#space_lg" scrollable="false">
      <!-- LEFT COLUMN: Color preview (tappable) -->
      <lv_obj width="#left_column_width"
              height="content" style_pad_all="0" flex_flow="column" style_flex_main_place="start"
              style_flex_cross_place="center" style_pad_gap="#space_sm" scrollable="false">
        <!-- Large color swatch (tappable to open picker) -->
        <lv_obj name="color_swatch"
                width="#color_preview_size" height="#color_preview_size" style_radius="#border_radius"
                style_bg_color="0x808080" style_bg_opa="255" style_border_width="2" style_border_color="#text_muted"
                style_border_opa="80" scrollable="false" clickable="true">
          <event_cb trigger="clicked" callback="ams_edit_color_clicked_cb"/>
          <!-- Edit overlay hint -->
          <icon src="pencil" size="sm" variant="secondary" align="bottom_right" style_opa="180"/>
        </lv_obj>
        <!-- Color name label below swatch -->
        <text_small name="color_name_label" text="Gray" translation_tag="Gray" style_text_align="center"/>
      </lv_obj>
      <!-- RIGHT COLUMN: Form fields -->
      <lv_obj flex_grow="1"
              style_pad_all="0" flex_flow="column" style_flex_main_place="start" style_flex_cross_place="start"
              style_pad_gap="#space_md" scrollable="false">
        <!-- Vendor dropdown -->
        <lv_obj width="100%"
                height="content" style_pad_all="0" flex_flow="column" style_pad_gap="#space_xxs" scrollable="false">
          <text_small text="Vendor" translation_tag="Vendor"/>
          <lv_dropdown name="vendor_dropdown"
                       width="100%" height="content" style_radius="#border_radius" style_border_width="0">
            <event_cb trigger="value_changed" callback="ams_edit_vendor_changed_cb"/>
          </lv_dropdown>
        </lv_obj>
        <!-- Material dropdown -->
        <lv_obj width="100%"
                height="content" style_pad_all="0" flex_flow="column" style_pad_gap="#space_xxs" scrollable="false">
          <text_small text="Material" translation_tag="Material"/>
          <lv_dropdown name="material_dropdown"
                       width="100%" height="content" style_radius="#border_radius" style_border_width="0">
            <event_cb trigger="value_changed" callback="ams_edit_material_changed_cb"/>
          </lv_dropdown>
        </lv_obj>
        <!-- Remaining weight section -->
        <lv_obj width="100%"
                height="content" style_pad_all="0" flex_flow="column" style_flex_main_place="start"
                style_flex_cross_place="start" style_pad_gap="#space_xxs" scrollable="false">
          <!-- Header row with label, percentage, and edit button -->
          <lv_obj width="100%"
                  height="content" style_pad_all="0" flex_flow="row" style_flex_main_place="space_between"
                  style_flex_cross_place="center" scrollable="false">
            <text_small text="Remaining" translation_tag="Remaining"/>
            <lv_obj height="content"
                    style_pad_all="0" flex_flow="row" style_flex_cross_place="center" style_pad_gap="#space_xs"
                    scrollable="false">
              <text_body name="remaining_pct_label" text="75%"/>
              <!-- Edit button (shown when edit_remaining_mode=0) -->
              <ui_button name="btn_remaining_edit"
                         width="#icon_button_size" height="#icon_button_size" icon="tune" variant="ghost">
                <bind_flag_if_eq subject="edit_remaining_mode" flag="hidden" ref_value="1"/>
                <event_cb trigger="clicked" callback="ams_edit_remaining_edit_cb"/>
              </ui_button>
              <!-- Accept button (shown when edit_remaining_mode=1) -->
              <ui_button name="btn_remaining_accept"
                         width="#icon_button_size" height="#icon_button_size" icon="check" variant="ghost" hidden="true">
                <bind_flag_if_eq subject="edit_remaining_mode" flag="hidden" ref_value="0"/>
                <event_cb trigger="clicked" callback="ams_edit_remaining_accept_cb"/>
              </ui_button>
              <!-- Cancel button (shown when edit_remaining_mode=1) -->
              <ui_button name="btn_remaining_cancel"
                         width="#icon_button_size" height="#icon_button_size" icon="close" variant="ghost" hidden="true">
                <bind_flag_if_eq subject="edit_remaining_mode" flag="hidden" ref_value="0"/>
                <event_cb trigger="clicked" callback="ams_edit_remaining_cancel_cb"/>
              </ui_button>
            </lv_obj>
          </lv_obj>
          <!-- Progress bar (shown when edit_remaining_mode=0) -->
          <lv_obj name="remaining_progress_container"
                  width="100%" height="#slider_height" style_bg_color="#text_muted" style_bg_opa="38"
                  style_radius="#border_radius" style_pad_all="0" scrollable="false">
            <bind_flag_if_eq subject="edit_remaining_mode" flag="hidden" ref_value="1"/>
            <lv_obj name="remaining_progress_fill"
                    height="100%" style_bg_color="#primary" style_bg_opa="255" style_radius="#border_radius"
                    style_pad_all="0" scrollable="false"/>
          </lv_obj>
          <!-- Slider (shown when edit_remaining_mode=1) -->
          <lv_slider name="remaining_slider"
                     width="100%" height="#slider_height" style_radius="#border_radius" value="75" min_value="0"
                     max_value="100" hidden="true">
            <bind_flag_if_eq subject="edit_remaining_mode" flag="hidden" ref_value="0"/>
            <event_cb trigger="value_changed" callback="ams_edit_remaining_changed_cb"/>
          </lv_slider>
        </lv_obj>
        <!-- Temperature display (compact, read-only) -->
        <lv_obj width="100%"
                height="content" style_pad_all="0" flex_flow="row" style_flex_main_place="start"
                style_pad_gap="#space_lg" scrollable="false">
          <lv_obj height="content" style_pad_all="0" flex_flow="row" style_pad_gap="#space_xs" scrollable="false">
            <text_small text="Nozzle:" translation_tag="Nozzle:"/>
            <text_small name="temp_nozzle_label" text="200-230째C" translation_tag="200-230째C"/>
          </lv_obj>
          <lv_obj height="content" style_pad_all="0" flex_flow="row" style_pad_gap="#space_xs" scrollable="false">
            <text_small text="Bed:" translation_tag="Bed:"/>
            <text_small name="temp_bed_label" text="60째C" translation_tag="60째C"/>
          </lv_obj>
        </lv_obj>
        <!-- Sync to Spoolman button (hidden if not linked) -->
        <ui_button name="btn_sync_spoolman"
                   width="100%" height="#button_height_sm" icon="refresh" text="Sync to Spoolman"
                   translation_tag="Sync to Spoolman" variant="secondary" hidden="true">
          <event_cb trigger="clicked" callback="ams_edit_sync_spoolman_cb"/>
        </ui_button>
      </lv_obj>
    </lv_obj>
    <!-- Action buttons -->
    <modal_button_row secondary_text="Reset"
                      secondary_callback="ams_edit_reset_cb" primary_text="Close" primary_callback="ams_edit_save_cb"/>
  </view>
</component>

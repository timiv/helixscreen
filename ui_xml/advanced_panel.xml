<!-- Advanced Panel - Hub for advanced printer tools and emergency controls -->
<!-- Organized in sections: Emergency, Calibration, Filament, Automation, Diagnostics -->
<!-- Features are conditionally shown based on printer capabilities -->
<component>
  <view name="advanced_panel"
        extends="lv_obj" width="100%" height="100%" style_bg_opa="0" style_border_width="0" style_pad_all="0"
        style_pad_gap="0" flex_flow="column" scrollable="true" scroll_dir="ver" style_bg_color="#app_bg">
    <!-- ================================================================== -->
    <!-- EMERGENCY CONTROLS SECTION (from emergency-stop branch) -->
    <!-- ================================================================== -->
    <setting_section_header title="EMERGENCY CONTROLS" icon="alert_octagon"/>
    <!-- Emergency Stop Button (prominent red) -->
    <lv_obj width="100%"
            height="content" style_bg_opa="0" style_border_width="0" style_pad_left="#space_lg"
            style_pad_right="#space_lg" style_pad_top="#space_sm" style_pad_bottom="#space_md" scrollable="false">
      <ui_button name="advanced_estop_btn"
                 width="100%" icon="alert_octagon" text="Emergency Stop (M112)"
                 variant="danger">
        <event_cb trigger="clicked" callback="advanced_estop_clicked"/>
      </ui_button>
    </lv_obj>
    <!-- Restart Buttons Row -->
    <lv_obj width="100%"
            height="content" style_bg_opa="0" style_border_width="0" style_pad_left="#space_lg"
            style_pad_right="#space_lg" style_pad_bottom="#space_md" flex_flow="row" style_pad_gap="#space_md"
            scrollable="false">
      <!-- Restart Klipper Button -->
      <ui_button name="advanced_restart_klipper_btn"
                 height="#button_height_sm" icon="refresh" text="Restart Klipper" variant="warning" flex_grow="1">
        <event_cb trigger="clicked" callback="advanced_restart_klipper_clicked"/>
      </ui_button>
      <!-- Firmware Restart Button -->
      <ui_button name="advanced_firmware_restart_btn"
                 height="#button_height_sm" icon="update" text="Firmware Restart" variant="secondary" flex_grow="1">
        <event_cb trigger="clicked" callback="advanced_firmware_restart_clicked"/>
      </ui_button>
    </lv_obj>
    <!-- ================================================================== -->
    <!-- CALIBRATION SECTION -->
    <!-- ================================================================== -->
    <setting_section_header title="CALIBRATION" icon="wrench"/>
    <!-- Bed Leveling (always shown - handles capability check internally) -->
    <setting_action_row name="row_bed_mesh"
                        label="Bed Leveling" icon="grid_large" description="Auto-probe or manually check screw heights">
      <event_cb trigger="clicked" callback="on_screws_tilt_row_clicked"/>
    </setting_action_row>
    <!-- Input Shaping (hidden if no accelerometer) -->
    <lv_obj name="container_input_shaping"
            width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false">
      <bind_flag_if_eq subject="printer_has_accelerometer" flag="hidden" ref_value="0"/>
      <setting_action_row name="row_input_shaping"
                          label="Input Shaping" icon="inputshaper" description="Resonance compensation tuning">
        <event_cb trigger="clicked" callback="on_input_shaper_row_clicked"/>
      </setting_action_row>
    </lv_obj>
    <!-- Z-Offset Calibration (hidden if no probe) -->
    <lv_obj name="container_z_offset"
            width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false">
      <bind_flag_if_eq subject="printer_has_probe" flag="hidden" ref_value="0"/>
      <setting_action_row name="row_z_offset"
                          label="Z-Offset Calibration" icon="z_closer" description="Interactive probe calibration">
        <event_cb trigger="clicked" callback="on_zoffset_row_clicked"/>
      </setting_action_row>
    </lv_obj>
    <!-- PID Tuning (always shown - extruder is always available) -->
    <setting_action_row name="row_pid_tuning" label="PID Tuning" icon="heater" description="Tune heater PID parameters">
      <event_cb trigger="clicked" callback="on_pid_tuning_clicked"/>
    </setting_action_row>
    <!-- ================================================================== -->
    <!-- FILAMENT SECTION -->
    <!-- ================================================================== -->
    <setting_section_header title="FILAMENT" icon="filament"/>
    <!-- Spoolman (hidden if not connected) -->
    <lv_obj name="container_spoolman"
            width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false">
      <bind_flag_if_eq subject="printer_has_spoolman" flag="hidden" ref_value="0"/>
      <setting_action_row name="row_spoolman"
                          label="Spoolman" icon="inventory" description="Filament tracking and inventory">
        <event_cb trigger="clicked" callback="on_advanced_spoolman"/>
      </setting_action_row>
    </lv_obj>
    <!-- Fallback message when Spoolman not available -->
    <lv_obj name="container_no_spoolman"
            width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false">
      <bind_flag_if_eq subject="printer_has_spoolman" flag="hidden" ref_value="1"/>
      <setting_info_row name="row_no_spoolman" label="Spoolman" icon="inventory" value="Not configured"/>
    </lv_obj>
    <!-- ================================================================== -->
    <!-- AUTOMATION SECTION -->
    <!-- ================================================================== -->
    <setting_section_header title="AUTOMATION" icon="code_tags"/>
    <!-- Macro Browser -->
    <setting_action_row name="row_macros" label="Macro Browser" icon="console" description="Execute printer macros">
      <event_cb trigger="clicked" callback="on_advanced_macros"/>
    </setting_action_row>
    <!-- HelixPrint Plugin (NOT installed - show Install row) -->
    <!-- Shows ONLY when value == 0 (not installed), hidden otherwise (-1 or 1) -->
    <lv_obj name="container_helix_plugin_install"
            width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false">
      <bind_flag_if_not_eq subject="helix_plugin_installed" flag="hidden" ref_value="0"/>
      <setting_action_row name="row_helix_plugin_install"
                          label="Install HelixPrint Plugin" icon="puzzle_outline"
                          description="Control optional print start features">
        <event_cb trigger="clicked" callback="on_helix_plugin_install_clicked"/>
      </setting_action_row>
    </lv_obj>
    <!-- HelixPrint Plugin (INSTALLED - show Uninstall row) -->
    <!-- Shows ONLY when value == 1 (installed), hidden otherwise (-1 or 0) -->
    <lv_obj name="container_helix_plugin_uninstall"
            width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false">
      <bind_flag_if_not_eq subject="helix_plugin_installed" flag="hidden" ref_value="1"/>
      <setting_action_row name="row_helix_plugin_uninstall"
                          label="Uninstall HelixPrint Plugin" icon="puzzle_outline"
                          description="Remove plugin from printer">
        <event_cb trigger="clicked" callback="on_helix_plugin_uninstall_clicked"/>
      </setting_action_row>
    </lv_obj>
    <!-- HelixPrint Plugin Help Text -->
    <lv_obj width="100%"
            height="content" style_bg_opa="0" style_border_width="0" style_pad_left="#space_xl"
            style_pad_right="#space_lg" style_pad_top="0" style_pad_bottom="#space_md" scrollable="false"
            flex_flow="row" style_flex_cross_place="start" style_pad_gap="#space_sm">
      <icon src="info" size="xs" variant="secondary"/>
      <text_small flex_grow="1"
                  text="This plugin lets HelixScreen control print start options like bed mesh and QGL. Once installed, use Configure PRINT_START below to enable optional steps."
                  long_mode="wrap" style_text_color="#text_muted"/>
    </lv_obj>
    <!-- Configure PRINT_START -->
    <setting_action_row name="row_configure_print_start"
                        label="Configure PRINT_START" icon="code_braces" description="Make bed mesh and QGL skippable">
      <event_cb trigger="clicked" callback="on_configure_print_start"/>
    </setting_action_row>
    <!-- Phase Tracking Toggle (visible when plugin installed) -->
    <!-- Shows ONLY when value == 1 (installed), hidden otherwise (-1 or 0) -->
    <lv_obj name="container_phase_tracking"
            width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false">
      <bind_flag_if_not_eq subject="helix_plugin_installed" flag="hidden" ref_value="1"/>
      <setting_toggle_row name="row_phase_tracking"
                          label="Phase Tracking" icon="progress_clock"
                          description="Show detailed print preparation status" subject="phase_tracking_enabled"
                          callback="on_phase_tracking_changed"/>
    </lv_obj>
    <!-- Timelapse Settings -->
    <setting_action_row name="row_timelapse"
                        label="Timelapse" icon="camera_timer" description="Configure timelapse recording">
      <bind_flag_if_eq subject="printer_has_timelapse" flag="hidden" ref_value="0"/>
      <event_cb trigger="clicked" callback="on_timelapse_row_clicked"/>
    </setting_action_row>
    <!-- ================================================================== -->
    <!-- DIAGNOSTICS SECTION -->
    <!-- ================================================================== -->
    <setting_section_header title="DIAGNOSTICS" icon="sysinfo"/>
    <!-- Console / G-code Terminal -->
    <setting_action_row name="row_console"
                        label="G-code Console" icon="console" description="Send commands directly to printer">
      <event_cb trigger="clicked" callback="on_console_row_clicked"/>
    </setting_action_row>
    <!-- Print History -->
    <setting_action_row name="row_print_history"
                        label="Print History" icon="clock" description="View print statistics and job history">
      <event_cb trigger="clicked" callback="on_history_row_clicked"/>
    </setting_action_row>
    <!-- Restart HelixScreen -->
    <setting_action_row name="row_restart_helix"
                        label="Restart HelixScreen" icon="refresh" description="Restart the display application">
      <event_cb trigger="clicked" callback="on_restart_helix_clicked"/>
    </setting_action_row>
    <!-- Bottom padding for scroll -->
    <lv_obj width="100%" height="#space_xl" scrollable="false"/>
  </view>
</component>

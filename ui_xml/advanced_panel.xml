<!-- Advanced Panel - Hub for advanced printer tools and emergency controls -->
<!-- Organized in sections: Emergency, Calibration, Motion, Filament, Automation, Diagnostics -->
<!-- Features are conditionally shown based on printer capabilities -->
<component>
  <view name="advanced_panel"
        extends="lv_obj" width="100%" height="100%" style_bg_opa="0" style_border_width="0" style_pad_all="0"
        style_pad_gap="0" flex_flow="column" scrollable="true" scroll_dir="ver" style_bg_color="#app_bg_color">
    <!-- ================================================================== -->
    <!-- EMERGENCY CONTROLS SECTION (from emergency-stop branch) -->
    <!-- ================================================================== -->
    <setting_section_header title="EMERGENCY CONTROLS" icon="alert_octagon"/>
    <!-- Emergency Stop Button (prominent red) -->
    <lv_obj width="100%"
            height="content" style_bg_opa="0" style_border_width="0" style_pad_left="#space_lg"
            style_pad_right="#space_lg" style_pad_top="#space_sm" style_pad_bottom="#space_md" scrollable="false">
      <lv_button name="advanced_estop_btn"
                 width="100%" height="#button_height_normal" style_radius="#border_radius_large" style_border_width="0"
                 style_bg_color="#error_color" flex_flow="row" style_flex_main_place="center"
                 style_flex_cross_place="center" style_pad_gap="#space_md">
        <icon src="alert_octagon" size="md" color="#text_primary"/>
        <text_body text="Emergency Stop (M112)" style_text_color="#text_primary"/>
        <event_cb trigger="clicked" callback="advanced_estop_clicked"/>
      </lv_button>
    </lv_obj>
    <!-- Restart Buttons Row -->
    <lv_obj width="100%"
            height="content" style_bg_opa="0" style_border_width="0" style_pad_left="#space_lg"
            style_pad_right="#space_lg" style_pad_bottom="#space_md" flex_flow="row" style_pad_gap="#space_md"
            scrollable="false">
      <!-- Restart Klipper Button -->
      <lv_button name="advanced_restart_klipper_btn"
                 height="#button_height_small" flex_grow="1" style_radius="#border_radius" style_border_width="0"
                 style_bg_color="#warning_color" style_pad_ver="#button_padding" flex_flow="row"
                 style_flex_main_place="center" style_flex_cross_place="center" style_pad_gap="#space_sm">
        <icon src="refresh" size="sm" color="#text_primary"/>
        <text_body text="Restart Klipper" style_text_color="#text_primary"/>
        <event_cb trigger="clicked" callback="advanced_restart_klipper_clicked"/>
      </lv_button>
      <!-- Firmware Restart Button -->
      <lv_button name="advanced_firmware_restart_btn"
                 height="#button_height_small" flex_grow="1" style_radius="#border_radius" style_border_width="0"
                 style_bg_color="#surface_bg_dark" style_pad_ver="#button_padding" flex_flow="row"
                 style_flex_main_place="center" style_flex_cross_place="center" style_pad_gap="#space_sm">
        <icon src="update" size="sm" color="#text_secondary"/>
        <text_body text="Firmware Restart" style_text_color="#text_secondary"/>
        <event_cb trigger="clicked" callback="advanced_firmware_restart_clicked"/>
      </lv_button>
    </lv_obj>
    <!-- ================================================================== -->
    <!-- CALIBRATION SECTION -->
    <!-- ================================================================== -->
    <setting_section_header title="CALIBRATION" icon="wrench"/>
    <!-- Bed Leveling (always shown - handles capability check internally) -->
    <setting_action_row name="row_bed_leveling"
                        label="Bed Leveling" icon="grid_large" description="Auto mesh and manual screw adjustment">
      <event_cb trigger="clicked" callback="on_screws_tilt_row_clicked"/>
    </setting_action_row>
    <!-- Input Shaping (hidden if no accelerometer) -->
    <lv_obj name="container_input_shaping"
            width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false">
      <lv_obj-bind_flag_if_eq subject="printer_has_accelerometer" flag="hidden" ref_value="0"/>
      <setting_action_row name="row_input_shaping"
                          label="Input Shaping" icon="inputshaper" description="Resonance compensation tuning">
        <event_cb trigger="clicked" callback="on_input_shaper_row_clicked"/>
      </setting_action_row>
    </lv_obj>
    <!-- Z-Offset Calibration (hidden if no probe) -->
    <lv_obj name="container_z_offset"
            width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false">
      <lv_obj-bind_flag_if_eq subject="printer_has_probe" flag="hidden" ref_value="0"/>
      <setting_action_row name="row_z_offset"
                          label="Z-Offset Calibration" icon="z_closer" description="Interactive probe calibration">
        <event_cb trigger="clicked" callback="on_zoffset_row_clicked"/>
      </setting_action_row>
    </lv_obj>
    <!-- ================================================================== -->
    <!-- MOTION SECTION -->
    <!-- ================================================================== -->
    <setting_section_header title="MOTION" icon="speed"/>
    <!-- Machine Limits -->
    <setting_action_row name="row_machine_limits"
                        label="Machine Limits" icon="dashboard" description="Velocity and acceleration limits">
      <event_cb trigger="clicked" callback="on_advanced_machine_limits"/>
    </setting_action_row>
    <!-- ================================================================== -->
    <!-- FILAMENT SECTION -->
    <!-- ================================================================== -->
    <setting_section_header title="FILAMENT" icon="filament"/>
    <!-- Spoolman (hidden if not connected) -->
    <lv_obj name="container_spoolman"
            width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false">
      <lv_obj-bind_flag_if_eq subject="printer_has_spoolman" flag="hidden" ref_value="0"/>
      <setting_action_row name="row_spoolman"
                          label="Spoolman" icon="inventory" description="Filament tracking and inventory">
        <event_cb trigger="clicked" callback="on_advanced_spoolman"/>
      </setting_action_row>
    </lv_obj>
    <!-- Fallback message when Spoolman not available -->
    <lv_obj name="container_no_spoolman"
            width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false">
      <lv_obj-bind_flag_if_eq subject="printer_has_spoolman" flag="hidden" ref_value="1"/>
      <setting_info_row name="row_no_spoolman" label="Spoolman" icon="inventory" value="Not configured"/>
    </lv_obj>
    <!-- ================================================================== -->
    <!-- AUTOMATION SECTION -->
    <!-- ================================================================== -->
    <setting_section_header title="AUTOMATION" icon="code_tags"/>
    <!-- Macro Browser -->
    <setting_action_row name="row_macros" label="Macro Browser" icon="console" description="Execute printer macros">
      <event_cb trigger="clicked" callback="on_advanced_macros"/>
    </setting_action_row>
    <!-- Configure PRINT_START -->
    <setting_action_row name="row_configure_print_start" label="Configure PRINT_START" icon="code_braces" description="Make bed mesh and QGL skippable">
      <event_cb trigger="clicked" callback="on_configure_print_start"/>
    </setting_action_row>
    <!-- Timelapse Settings -->
    <setting_action_row name="row_timelapse" label="Timelapse" icon="video" description="Configure timelapse recording">
      <lv_obj-bind_flag_if_eq subject="printer_has_timelapse" flag="hidden" ref_value="0"/>
      <event_cb trigger="clicked" callback="on_timelapse_row_clicked"/>
    </setting_action_row>
    <!-- ================================================================== -->
    <!-- DIAGNOSTICS SECTION -->
    <!-- ================================================================== -->
    <setting_section_header title="DIAGNOSTICS" icon="sysinfo"/>
    <!-- Console / G-code Terminal -->
    <setting_action_row name="row_console"
                        label="G-code Console" icon="console" description="Send commands directly to printer">
      <event_cb trigger="clicked" callback="on_console_row_clicked"/>
    </setting_action_row>
    <!-- Print History -->
    <setting_action_row name="row_print_history"
                        label="Print History" icon="clock" description="View print statistics and job history">
      <event_cb trigger="clicked" callback="on_history_row_clicked"/>
    </setting_action_row>
    <!-- Bottom padding for scroll -->
    <lv_obj width="100%" height="#space_xl" style_bg_opa="0" style_border_width="0" scrollable="false"/>
  </view>
</component>

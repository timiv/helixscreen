<!-- Compact form row: label (60px, muted) + text_input (flex_grow) -->
<!-- Used in macro edit forms for Name fields -->
<!-- C++ sets textarea text, name, and registers keyboard -->
<component>
  <api>
    <prop name="label" type="string" default="Field:"/>
    <prop name="placeholder" type="string" default=""/>
  </api>
  <view extends="lv_obj"
        width="100%" height="content" flex_flow="row" style_flex_cross_place="center" style_pad_all="0"
        style_pad_gap="#space_sm" style_bg_opa="0" style_border_width="0" scrollable="false">
    <text_muted name="label" width="60" text="$label"/>
    <text_input name="input" placeholder_text="$placeholder" one_line="true" flex_grow="1"/>
  </view>
</component>

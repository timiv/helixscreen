<!-- Emergency Stop Confirmation Modal
     Shown when E-Stop confirmation is enabled in settings.
     Uses error styling to emphasize the dangerous nature of the action.
-->
<component>
  <!-- Full-screen backdrop overlay -->
  <view extends="lv_obj" name="estop_modal_root"
        width="100%" height="100%"
        style_bg_opa="200" style_border_width="0" style_radius="0" style_pad_all="0"
        align="center" clickable="true">

    <!-- Dialog card -->
    <ui_dialog name="dialog_card" width="70%" height="content" align="center"
               flex_flow="column" style_flex_main_place="start" style_pad_gap="0">

      <!-- Content area -->
      <lv_obj width="100%" height="content"
              style_min_height="140"
              style_bg_opa="0" style_border_width="0"
              style_pad_left="#space_lg" style_pad_right="#space_lg"
              style_pad_top="#space_lg" style_pad_bottom="#space_lg"
              flex_flow="column" style_flex_cross_place="center" style_pad_gap="#space_md">

        <!-- Warning icon -->
        <icon src="alert_octagon" size="lg" color="#error_color"/>

        <!-- Title -->
        <text_heading text="Emergency Stop?" width="100%" style_text_align="center"/>

        <!-- Warning message -->
        <text_body text="This will immediately halt all printer operations. The printer will require a restart to resume."
                   width="100%" long_mode="wrap"
                   style_text_align="center" style_text_color="#text_secondary"/>
      </lv_obj>

      <!-- Horizontal divider above buttons -->
      <lv_obj width="100%" height="1"
              style_bg_color="#text_secondary" style_bg_opa="64"
              style_border_width="0" style_pad_all="0"/>

      <!-- Button row -->
      <lv_obj width="100%" height="#button_height"
              style_bg_opa="0" style_border_width="0" style_pad_all="0" style_pad_gap="0"
              flex_flow="row">

        <!-- Cancel button -->
        <lv_button name="btn_cancel" flex_grow="1" height="100%"
                   style_radius="0" style_border_width="0" style_shadow_width="0"
                   clickable="true">
          <text_body text="Cancel" align="center"/>
          <event_cb trigger="clicked" callback="estop_dialog_cancel_clicked"/>
        </lv_button>

        <!-- Vertical divider -->
        <lv_obj width="1" height="100%"
                style_bg_color="#text_secondary" style_bg_opa="64"
                style_border_width="0" style_pad_all="0"/>

        <!-- STOP button (danger styling) -->
        <lv_button name="btn_stop" flex_grow="1" height="100%"
                   style_radius="0" style_border_width="0" style_shadow_width="0"
                   style_bg_color="#error_color"
                   clickable="true">
          <text_body text="STOP" align="center" style_text_color="#text_primary"/>
          <event_cb trigger="clicked" callback="estop_dialog_confirm_clicked"/>
        </lv_button>
      </lv_obj>
    </ui_dialog>
  </view>
</component>

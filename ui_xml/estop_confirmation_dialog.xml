<!--
  Emergency Stop Confirmation Dialog

  Modal dialog shown when E-Stop confirmation is required (optional setting).
  Full-screen backdrop with centered dialog card.

  Features:
  - Clear warning icon and message
  - Cancel button to abort
  - Confirm button to execute E-Stop
  - Red error color theme for danger
-->
<component>
  <view extends="lv_obj" name="estop_dialog_backdrop"
        width="100%" height="100%"
        style_bg_color="#000000" style_bg_opa="180"
        style_border_width="0"
        align="center"
        clickable="true">

    <!-- Dialog card -->
    <lv_obj name="estop_dialog_card"
            width="420" height="260"
            align="center"
            style_radius="#border_radius"
            style_bg_color="#card_bg_dark"
            style_bg_opa="255"
            style_border_width="3"
            style_border_color="#error_color"
            style_pad_all="24"
            flex_flow="column"
            style_flex_main_place="space_between"
            style_flex_cross_place="center">

      <!-- Header with icon and title -->
      <lv_obj width="100%" height="content"
              style_bg_opa="0" style_border_width="0"
              flex_flow="column"
              style_flex_cross_place="center"
              style_pad_gap="12">

        <icon src="mat_emergency_img" size="xl" color="#error_color"/>

        <text_heading text="Emergency Stop?" style_text_align="center"/>

        <text_body text="This will immediately halt all printer operations. The printer will require a restart to resume."
                   long_mode="wrap"
                   style_text_align="center"
                   width="100%"/>
      </lv_obj>

      <!-- Button row -->
      <lv_obj width="100%" height="56"
              style_bg_opa="0" style_border_width="0"
              flex_flow="row"
              style_pad_gap="16">

        <lv_button name="estop_cancel_btn"
                   flex_grow="1" height="100%"
                   style_radius="8"
                   style_border_width="0">
          <text_body text="Cancel" align="center"/>
          <event_cb trigger="clicked" callback="estop_dialog_cancel_clicked"/>
        </lv_button>

        <lv_button name="estop_confirm_btn"
                   flex_grow="1" height="100%"
                   style_radius="8"
                   style_border_width="0"
                   style_bg_color="#error_color">
          <text_body text="STOP" style_text_color="#text_primary" align="center"/>
          <event_cb trigger="clicked" callback="estop_dialog_confirm_clicked"/>
        </lv_button>
      </lv_obj>
    </lv_obj>
  </view>
</component>

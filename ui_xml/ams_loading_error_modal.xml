<!-- Modal for displaying AMS loading errors with retry option -->
<!-- NOTE: Backdrop created programmatically by Modal system -->
<component>
  <!-- Dialog card -->
  <view name="ams_loading_error_modal"
        extends="ui_dialog" width="360" height="content" align="center" flex_flow="column" style_flex_main_place="start"
        style_pad_gap="0">
    <!-- Header with title and close button -->
    <lv_obj width="100%"
            height="content" style_pad_left="#space_lg" style_pad_right="#space_md" style_pad_top="#space_lg"
            style_pad_bottom="#space_sm" flex_flow="row" style_flex_main_place="space_between"
            style_flex_cross_place="center" scrollable="false">
      <lv_obj height="content"
              style_pad_all="0" flex_flow="row" style_flex_cross_place="center" style_pad_gap="#space_sm"
              scrollable="false">
        <icon src="alert_circle" size="md" variant="danger"/>
        <text_heading text="Loading Error" translation_tag="Loading Error"/>
      </lv_obj>
      <!-- Close button -->
      <ui_button name="btn_close" width="40" height="40" icon="close" variant="ghost">
        <event_cb trigger="clicked" callback="ams_loading_error_close_cb"/>
      </ui_button>
    </lv_obj>
    <!-- Horizontal divider -->
    <divider_horizontal/>
    <!-- Error message content -->
    <lv_obj width="100%"
            height="content" style_pad_all="#space_lg" flex_flow="column" style_pad_gap="#space_md" scrollable="false">
      <!-- Error message text -->
      <text_body name="error_message"
                 width="100%" text="An error occurred while loading filament."
                 translation_tag="An error occurred while loading filament." long_mode="wrap"/>
      <!-- Hint text -->
      <text_small name="error_hint"
                  width="100%" text="Check the filament path and try again."
                  translation_tag="Check the filament path and try again." style_text_color="#text_muted"
                  long_mode="wrap"/>
    </lv_obj>
    <!-- Action buttons -->
    <modal_button_row secondary_text="Close"
                      secondary_callback="ams_loading_error_cancel_cb" primary_text="Retry"
                      primary_callback="ams_loading_error_retry_cb"/>
  </view>
</component>

<component>
  <!-- Base Overlay Panel Component - Default Styling Only -->
  <!-- Provides consistent outer container styling for all overlay panels -->
  <!-- Panels extend this and add their own header_bar + content -->
  <!-- Usage Pattern:
       <view extends="overlay_panel_base" name="my_panel" width="#overlay_panel_width_large">
         <header_bar name="overlay_header" title="My Panel"/>
         <lv_obj name="overlay_content" flex_grow="1" width="100%" ...>
           [panel-specific content]
         </lv_obj>
       </view>
  -->
  <!-- API Properties -->
  <api>
    <prop name="width" type="string" default="#overlay_panel_width"/>
  </api>
  <view extends="lv_obj"
        width="$width" height="100%" align="right_mid" style_pad_all="0" style_border_width="0" style_bg_opa="255"
        style_bg_color="#card_bg" scrollable="false" flex_flow="column">
    <!-- Panels extend this and add their own header_bar + overlay_content -->
  </view>
</component>
